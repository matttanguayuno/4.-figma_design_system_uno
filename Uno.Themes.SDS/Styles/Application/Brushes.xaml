<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Uno.Themes.SDS/Styles/Application/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- 
    SDS Brush Resources using Material-compatible naming
    
    These brushes use the same key names as Uno.Themes.Material for drop-in compatibility.
    
    Reference: https://platform.uno/docs/articles/external/uno.themes/doc/material-colors.html
    -->

    <!-- Primary Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryVariantDarkBrush" Color="{StaticResource PrimaryVariantDarkColor}" />
    <SolidColorBrush x:Key="PrimaryVariantLightBrush" Color="{StaticResource PrimaryVariantLightColor}" />
    
    <!-- On Primary Brushes -->
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="{StaticResource OnPrimaryColor}" />
    <SolidColorBrush x:Key="OnPrimaryMediumBrush" Color="{StaticResource OnPrimaryMediumColor}" />
    <SolidColorBrush x:Key="OnPrimaryLowBrush" Color="{StaticResource OnPrimaryLowColor}" />

    <!-- Surface Brushes -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="{StaticResource SurfaceVariantColor}" />
    
    <!-- Background Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondaryColor}" />
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="{StaticResource BackgroundTertiaryColor}" />

    <!-- On Surface Brushes -->
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="{StaticResource OnSurfaceColor}" />
    <SolidColorBrush x:Key="OnSurfaceMediumBrush" Color="{StaticResource OnSurfaceMediumColor}" />
    <SolidColorBrush x:Key="OnSurfaceLowBrush" Color="{StaticResource OnSurfaceLowColor}" />
    
    <!-- On Background Brushes -->
    <SolidColorBrush x:Key="OnBackgroundBrush" Color="{StaticResource OnBackgroundColor}" />
    <SolidColorBrush x:Key="OnBackgroundMediumBrush" Color="{StaticResource OnBackgroundMediumColor}" />
    <SolidColorBrush x:Key="OnBackgroundLowBrush" Color="{StaticResource OnBackgroundLowColor}" />

    <!-- Outline Brushes -->
    <SolidColorBrush x:Key="OutlineBrush" Color="{StaticResource OutlineColor}" />
    <SolidColorBrush x:Key="OutlineVariantBrush" Color="{StaticResource OutlineVariantColor}" />
    
    <!-- Error Brushes -->
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />
    <SolidColorBrush x:Key="OnErrorBrush" Color="{StaticResource OnErrorColor}" />

    <!-- Disabled Brushes -->
    <SolidColorBrush x:Key="DisabledBrush" Color="{StaticResource DisabledColor}" />
    <SolidColorBrush x:Key="OnDisabledBrush" Color="{StaticResource OnDisabledColor}" />
    
    <!-- Overlay Brushes -->
    <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource OverlayColor}" />
    
    <!-- Transparent Brush -->
    <SolidColorBrush x:Key="TransparentBrush" Color="{StaticResource TransparentColor}" />

    <!-- Additional SDS Brushes (custom extensions) -->
    <SolidColorBrush x:Key="SDSBrandDefaultBrush" Color="{StaticResource SDSBrandDefaultColor}" />
    <SolidColorBrush x:Key="SDSBrandHoverBrush" Color="{StaticResource SDSBrandHoverColor}" />
    <SolidColorBrush x:Key="SDSNeutralTertiaryBrush" Color="{StaticResource SDSNeutralTertiaryColor}" />
    <SolidColorBrush x:Key="SDSNeutralTertiaryHoverBrush" Color="{StaticResource SDSNeutralTertiaryHoverColor}" />
    <SolidColorBrush x:Key="SDSNeutralTertiaryDarkerBrush" Color="{StaticResource SDSNeutralTertiaryDarkerColor}" />
    <SolidColorBrush x:Key="SDSBorderNeutralBrush" Color="{StaticResource SDSBorderNeutralColor}" />
    <SolidColorBrush x:Key="SDSBorderNeutralDarkerBrush" Color="{StaticResource SDSBorderNeutralDarkerColor}" />
    <SolidColorBrush x:Key="SDSTextNeutralBrush" Color="{StaticResource SDSTextNeutralColor}" />
    <SolidColorBrush x:Key="SDSDangerPrimaryBrush" Color="{StaticResource SDSDangerPrimaryColor}" />
    <SolidColorBrush x:Key="SDSDangerPrimaryHoverBrush" Color="{StaticResource SDSDangerPrimaryHoverColor}" />
    <SolidColorBrush x:Key="SDSDangerSubtleTextBrush" Color="{StaticResource SDSDangerSubtleTextColor}" />
    <SolidColorBrush x:Key="SDSDangerSubtleHoverBackgroundBrush" Color="{StaticResource SDSDangerSubtleHoverBackgroundColor}" />

    <!-- Convenience Aliases (backward compatibility / common usage) -->
    <SolidColorBrush x:Key="DefaultBackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="DefaultTextBrush" Color="{StaticResource OnSurfaceColor}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource OnSurfaceMediumColor}" />
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="{StaticResource OnSurfaceLowColor}" />
    <SolidColorBrush x:Key="BrandTertiaryBrush" Color="{StaticResource PrimaryVariantLightColor}" />
    <SolidColorBrush x:Key="NeutralTertiaryBrush" Color="{StaticResource SDSNeutralTertiaryColor}" />

</ResourceDictionary>
