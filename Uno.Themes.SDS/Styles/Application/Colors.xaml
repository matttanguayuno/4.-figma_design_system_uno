<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    SDS Color Resources using Material-compatible naming
    Based on Figma Simple Design System
    
    These colors use the same key names as Uno.Themes.Material for drop-in compatibility.
    
    Reference: https://platform.uno/docs/articles/external/uno.themes/doc/material-colors.html
    -->

    <!-- Primary/Brand Colors -->
    <Color x:Key="PrimaryColor">#2c2c2c</Color>
    <Color x:Key="PrimaryVariantDarkColor">#1e1e1e</Color>
    <Color x:Key="PrimaryVariantLightColor">#f5f5f5</Color>
    
    <!-- On Primary (text/icons on primary background) -->
    <Color x:Key="OnPrimaryColor">#f5f5f5</Color>
    <Color x:Key="OnPrimaryMediumColor">#e3e3e3</Color>
    <Color x:Key="OnPrimaryLowColor">#d9d9d9</Color>

    <!-- Surface Colors -->
    <Color x:Key="SurfaceColor">#ffffff</Color>
    <Color x:Key="SurfaceVariantColor">#f5f5f5</Color>
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundColor">#f5f5f5</Color>
    <Color x:Key="BackgroundSecondaryColor">#f5f5f5</Color>
    <Color x:Key="BackgroundTertiaryColor">#e3e3e3</Color>

    <!-- On Surface (text/icons on surface) -->
    <Color x:Key="OnSurfaceColor">#1e1e1e</Color>
    <Color x:Key="OnSurfaceMediumColor">#757575</Color>
    <Color x:Key="OnSurfaceLowColor">#b3b3b3</Color>
    
    <!-- On Background -->
    <Color x:Key="OnBackgroundColor">#1e1e1e</Color>
    <Color x:Key="OnBackgroundMediumColor">#757575</Color>
    <Color x:Key="OnBackgroundLowColor">#b3b3b3</Color>

    <!-- Outline/Border Colors -->
    <Color x:Key="OutlineColor">#d9d9d9</Color>
    <Color x:Key="OutlineVariantColor">#767676</Color>
    
    <!-- Error Colors -->
    <Color x:Key="ErrorColor">#900b09</Color>
    <Color x:Key="OnErrorColor">#ffffff</Color>

    <!-- Disabled State -->
    <Color x:Key="DisabledColor">#d9d9d9</Color>
    <Color x:Key="OnDisabledColor">#b3b3b3</Color>
    
    <!-- Overlay/Shadow -->
    <Color x:Key="OverlayColor">#000000</Color>
    
    <!-- Transparent -->
    <Color x:Key="TransparentColor">Transparent</Color>

    <!-- Additional SDS-specific colors (custom extensions) -->
    <Color x:Key="SDSBrandDefaultColor">#2c2c2c</Color>
    <Color x:Key="SDSBrandHoverColor">#1e1e1e</Color>
    <Color x:Key="SDSNeutralTertiaryColor">#e3e3e3</Color>
    <Color x:Key="SDSNeutralTertiaryHoverColor">#cdcdcd</Color>
    <Color x:Key="SDSNeutralTertiaryDarkerColor">#d5d5d5</Color>
    <Color x:Key="SDSBorderNeutralColor">#303030</Color>
    <Color x:Key="SDSBorderNeutralDarkerColor">#b3b3b3</Color>
    <Color x:Key="SDSTextNeutralColor">#303030</Color>
    
    <!-- Button Danger Colors (from Figma SDS) -->
    <Color x:Key="SDSDangerPrimaryColor">#900b09</Color>
    <Color x:Key="SDSDangerPrimaryHoverColor">#7a0906</Color>
    <Color x:Key="SDSDangerSubtleTextColor">#900b09</Color>
    <Color x:Key="SDSDangerSubtleHoverBackgroundColor">#ffe6e5</Color>
    
    <!-- Menu & Component Colors (from Figma SDS) -->
    <Color x:Key="SDSMenuBackgroundColor">#ffffff</Color>
    <Color x:Key="SDSMenuBorderColor">#d9d9d9</Color>
    <Color x:Key="SDSMenuItemHoverBackgroundColor">#2c2c2c</Color>
    <Color x:Key="SDSMenuItemHoverTextColor">#f5f5f5</Color>
    <Color x:Key="SDSMenuItemDisabledColor">#b3b3b3</Color>
    <Color x:Key="SDSMenuHeaderSecondaryColor">#757575</Color>
    <Color x:Key="SDSMenuSeparatorColor">#d9d9d9</Color>
    
    <!-- Slider Colors -->
    <Color x:Key="SDSSliderTrackColor">#e6e6e6</Color>
    <Color x:Key="SDSSliderFillColor">#2c2c2c</Color>
    <Color x:Key="SDSSliderHandleColor">#1e1e1e</Color>
    <Color x:Key="SDSSliderDisabledTrackColor">#e6e6e6</Color>
    <Color x:Key="SDSSliderDisabledFillColor">#d9d9d9</Color>
    <Color x:Key="SDSSliderDisabledHandleColor">#b3b3b3</Color>
    
    <!-- Input Field Colors -->
    <Color x:Key="SDSInputBackgroundColor">#ffffff</Color>
    <Color x:Key="SDSInputBorderColor">#d9d9d9</Color>
    <Color x:Key="SDSInputDisabledBackgroundColor">#d9d9d9</Color>
    <Color x:Key="SDSInputDisabledBorderColor">#b2b2b2</Color>
    <Color x:Key="SDSInputDisabledTextColor">#b3b3b3</Color>
    
    <!-- RadioButton Colors -->
    <Color x:Key="SDSRadioOuterRingDefaultColor">#e6e6e6</Color>
    <Color x:Key="SDSRadioInnerDotColor">#000000</Color>
    <Color x:Key="SDSRadioOuterRingStrokeColor">#000000</Color>
    <Color x:Key="SDSRadioUncheckedOuterRingColor">#737373</Color>
    <Color x:Key="SDSRadioDisabledOuterRingColor">#d9d9d9</Color>
    <Color x:Key="SDSRadioDisabledStrokeColor">#b3b3b3</Color>
    <Color x:Key="SDSRadioDisabledInnerDotColor">#b3b3b3</Color>
    
    <!-- Card Colors -->
    <Color x:Key="SDSCardBorderColor">#dddddd</Color>
    <Color x:Key="SDSCardBackgroundLightColor">#f5f5f5</Color>
    
    <!-- Dialog Colors -->
    <Color x:Key="SDSDialogBorderColor">#d9d9d9</Color>
    <Color x:Key="SDSDialogScrimColor">#CCffffff</Color>
    <Color x:Key="SDSSecondaryButtonBackgroundColor">#e3e3e3</Color>
    <Color x:Key="SDSSecondaryButtonBorderColor">#767676</Color>

  <!-- Matrix Identifier Colors -->
  <Color x:Key="SDSMatrixIdentifierTextColor">#303030</Color>
  <Color x:Key="SDSMatrixIdentifierBackgroundColor">#CDCDCD</Color>
  <Color x:Key="SDSMatrixIdentifierBorderColor">#B2B2B2</Color>

  <!-- Navigation Colors -->
  <Color x:Key="SDSNavSecondaryTextColor">#757575</Color>
  <Color x:Key="SDSNavActiveTextColor">#2c2c2c</Color>
  <Color x:Key="SDSNavHoverBackgroundColor">#f5f5f5</Color>
  <Color x:Key="SDSNavPillActiveBackgroundColor">#f5f5f5</Color>
  <Color x:Key="SDSNavPillActiveTextColor">#1e1e1e</Color>

</ResourceDictionary>
