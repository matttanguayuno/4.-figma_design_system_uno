<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    SDS Color Resources mapped to Material naming conventions
    Based on Figma Simple Design System
    -->

    <!-- Primary/Brand Colors -->
    <Color x:Key="MaterialPrimaryColor">#2c2c2c</Color>
    <Color x:Key="MaterialPrimaryVariantDarkColor">#1e1e1e</Color>
    <Color x:Key="MaterialPrimaryVariantLightColor">#f5f5f5</Color>
    
    <!-- On Primary (text/icons on primary background) -->
    <Color x:Key="MaterialOnPrimaryColor">#f5f5f5</Color>
    <Color x:Key="MaterialOnPrimaryMediumColor">#e3e3e3</Color>
    <Color x:Key="MaterialOnPrimaryLowColor">#d9d9d9</Color>

    <!-- Surface Colors -->
    <Color x:Key="MaterialSurfaceColor">#ffffff</Color>
    <Color x:Key="MaterialSurfaceVariantColor">#f5f5f5</Color>
    
    <!-- Background Colors -->
    <Color x:Key="MaterialBackgroundColor">#ffffff</Color>
    <Color x:Key="MaterialBackgroundSecondaryColor">#f5f5f5</Color>
    <Color x:Key="MaterialBackgroundTertiaryColor">#e3e3e3</Color>

    <!-- On Surface (text/icons on surface) -->
    <Color x:Key="MaterialOnSurfaceColor">#1e1e1e</Color>
    <Color x:Key="MaterialOnSurfaceMediumColor">#757575</Color>
    <Color x:Key="MaterialOnSurfaceLowColor">#b3b3b3</Color>
    
    <!-- On Background -->
    <Color x:Key="MaterialOnBackgroundColor">#1e1e1e</Color>
    <Color x:Key="MaterialOnBackgroundMediumColor">#757575</Color>
    <Color x:Key="MaterialOnBackgroundLowColor">#b3b3b3</Color>

    <!-- Outline/Border Colors -->
    <Color x:Key="MaterialOutlineColor">#d9d9d9</Color>
    <Color x:Key="MaterialOutlineVariantColor">#767676</Color>
    
    <!-- Error Colors -->
    <Color x:Key="MaterialErrorColor">#900b09</Color>
    <Color x:Key="MaterialOnErrorColor">#ffffff</Color>

    <!-- Disabled State -->
    <Color x:Key="MaterialDisabledColor">#b3b3b3</Color>
    <Color x:Key="MaterialOnDisabledColor">#b3b3b3</Color>
    
    <!-- Overlay/Shadow -->
    <Color x:Key="MaterialOverlayColor">#000000</Color>
    
    <!-- Transparent -->
    <Color x:Key="MaterialTransparentColor">Transparent</Color>

    <!-- Additional SDS-specific colors -->
    <Color x:Key="SDSBrandDefaultColor">#2c2c2c</Color>
    <Color x:Key="SDSBrandHoverColor">#1e1e1e</Color>
    <Color x:Key="SDSNeutralTertiaryColor">#e3e3e3</Color>
    <Color x:Key="SDSNeutralTertiaryHoverColor">#cdcdcd</Color>
    <Color x:Key="SDSBorderNeutralColor">#303030</Color>
    <Color x:Key="SDSTextNeutralColor">#303030</Color>

</ResourceDictionary>
