<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    SDS Thickness/Size Resources mapped to Material naming conventions
    Based on SDS spacing scale and design tokens
    -->

    <!-- Corner Radius -->
    <CornerRadius x:Key="MaterialButtonCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="MaterialTextBoxCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="MaterialCheckBoxCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="MaterialRadioButtonCornerRadius">9999</CornerRadius>
    <CornerRadius x:Key="MaterialCardCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="MaterialChipCornerRadius">9999</CornerRadius>

    <!-- Border Thickness -->
    <Thickness x:Key="MaterialBorderThickness">1</Thickness>
    <Thickness x:Key="MaterialButtonBorderThickness">1</Thickness>
    <Thickness x:Key="MaterialTextBoxBorderThickness">1</Thickness>
    
    <!-- Padding - Buttons -->
    <Thickness x:Key="MaterialButtonPadding">16,12,16,12</Thickness>
    <Thickness x:Key="MaterialButtonPaddingSmall">12,8,12,8</Thickness>
    <Thickness x:Key="MaterialButtonPaddingLarge">24,16,24,16</Thickness>
    
    <!-- Padding - TextBox/Input -->
    <Thickness x:Key="MaterialTextBoxPadding">12,12,12,12</Thickness>
    <Thickness x:Key="MaterialTextBoxPaddingSmall">8,8,8,8</Thickness>
    
    <!-- Padding - CheckBox/Radio -->
    <Thickness x:Key="MaterialCheckBoxPadding">8,0,0,0</Thickness>
    <Thickness x:Key="MaterialRadioButtonPadding">8,0,0,0</Thickness>
    
    <!-- Padding - Cards -->
    <Thickness x:Key="MaterialCardPadding">16</Thickness>
    <Thickness x:Key="MaterialCardPaddingLarge">24</Thickness>
    
    <!-- Spacing Values (from SDS scale) -->
    <x:Double x:Key="SDSSpace050">2</x:Double>
    <x:Double x:Key="SDSSpace100">4</x:Double>
    <x:Double x:Key="SDSSpace200">8</x:Double>
    <x:Double x:Key="SDSSpace300">12</x:Double>
    <x:Double x:Key="SDSSpace400">16</x:Double>
    <x:Double x:Key="SDSSpace600">24</x:Double>
    <x:Double x:Key="SDSSpace800">32</x:Double>
    <x:Double x:Key="SDSSpace1200">48</x:Double>
    <x:Double x:Key="SDSSpace1600">64</x:Double>

    <!-- Control Heights -->
    <x:Double x:Key="MaterialButtonHeight">40</x:Double>
    <x:Double x:Key="MaterialButtonHeightSmall">32</x:Double>
    <x:Double x:Key="MaterialButtonHeightLarge">48</x:Double>
    
    <x:Double x:Key="MaterialTextBoxHeight">40</x:Double>
    <x:Double x:Key="MaterialTextBoxHeightSmall">32</x:Double>
    
    <!-- Icon Sizes -->
    <x:Double x:Key="MaterialIconSize">24</x:Double>
    <x:Double x:Key="MaterialIconSizeSmall">16</x:Double>
    <x:Double x:Key="MaterialIconSizeLarge">32</x:Double>

</ResourceDictionary>
