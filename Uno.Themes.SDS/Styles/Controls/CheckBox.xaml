<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Uno.Themes.SDS/Styles/Application/Colors.xaml" />
        <ResourceDictionary Source="ms-appx:///Uno.Themes.SDS/Styles/Application/Brushes.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- 
    CheckBox Theme Resources
    Overrides Uno's default CheckBox colors to match SDS design
    -->

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <!-- Checked State (all interaction states) -->
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillChecked" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillCheckedPointerOver" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillCheckedPressed" Color="{StaticResource PrimaryColor}" />
            
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeChecked" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeCheckedPointerOver" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeCheckedPressed" Color="{StaticResource PrimaryColor}" />

            <!-- Unchecked State -->
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUnchecked" Color="{StaticResource OnSurfaceMediumColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedPointerOver" Color="{StaticResource OnSurfaceMediumColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedPressed" Color="{StaticResource OnSurfaceMediumColor}" />
            
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUnchecked" Color="{StaticResource SurfaceColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUncheckedPointerOver" Color="{StaticResource SurfaceColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUncheckedPressed" Color="{StaticResource SurfaceColor}" />

            <!-- Indeterminate State -->
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillIndeterminate" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillIndeterminatePointerOver" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillIndeterminatePressed" Color="{StaticResource PrimaryColor}" />
            
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeIndeterminate" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeIndeterminatePointerOver" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeIndeterminatePressed" Color="{StaticResource PrimaryColor}" />

            <!-- Glyph Foreground (Checkmark and Dash) -->
            <SolidColorBrush x:Key="CheckBoxGlyphForegroundChecked" Color="{StaticResource OnPrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxGlyphForegroundCheckedPointerOver" Color="{StaticResource OnPrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxGlyphForegroundCheckedPressed" Color="{StaticResource OnPrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxGlyphForegroundIndeterminate" Color="{StaticResource OnPrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxGlyphForegroundIndeterminatePointerOver" Color="{StaticResource OnPrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxGlyphForegroundIndeterminatePressed" Color="{StaticResource OnPrimaryColor}" />

            <!-- Disabled State - Checked -->
            <SolidColorBrush x:Key="CheckBoxGlyphForegroundCheckedDisabled" Color="#B3B3B3" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillCheckedDisabled" Color="#D9D9D9" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeCheckedDisabled" Color="#B2B2B2" />

            <!-- Disabled State - Unchecked -->
            <SolidColorBrush x:Key="CheckBoxGlyphForegroundUncheckedDisabled" Color="#B3B3B3" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUncheckedDisabled" Color="#D9D9D9" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedDisabled" Color="#B2B2B2" />

            <!-- Disabled State - Indeterminate -->
            <SolidColorBrush x:Key="CheckBoxGlyphForegroundIndeterminateDisabled" Color="#B3B3B3" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillIndeterminateDisabled" Color="#D9D9D9" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeIndeterminateDisabled" Color="#B2B2B2" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <!-- Same colors for dark theme (SDS uses consistent colors) -->
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillChecked" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillCheckedPointerOver" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillCheckedPressed" Color="{StaticResource PrimaryColor}" />
            
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeChecked" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeCheckedPointerOver" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeCheckedPressed" Color="{StaticResource PrimaryColor}" />

            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUnchecked" Color="{StaticResource OnSurfaceMediumColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedPointerOver" Color="{StaticResource OnSurfaceMediumColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedPressed" Color="{StaticResource OnSurfaceMediumColor}" />
            
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUnchecked" Color="{StaticResource SurfaceColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUncheckedPointerOver" Color="{StaticResource SurfaceColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUncheckedPressed" Color="{StaticResource SurfaceColor}" />

            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillIndeterminate" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillIndeterminatePointerOver" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillIndeterminatePressed" Color="{StaticResource PrimaryColor}" />
            
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeIndeterminate" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeIndeterminatePointerOver" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeIndeterminatePressed" Color="{StaticResource PrimaryColor}" />

            <!-- Glyph Foreground (Checkmark and Dash) -->
            <SolidColorBrush x:Key="CheckBoxGlyphForegroundChecked" Color="{StaticResource OnPrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxGlyphForegroundCheckedPointerOver" Color="{StaticResource OnPrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxGlyphForegroundCheckedPressed" Color="{StaticResource OnPrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxGlyphForegroundIndeterminate" Color="{StaticResource OnPrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxGlyphForegroundIndeterminatePointerOver" Color="{StaticResource OnPrimaryColor}" />
            <SolidColorBrush x:Key="CheckBoxGlyphForegroundIndeterminatePressed" Color="{StaticResource OnPrimaryColor}" />

            <SolidColorBrush x:Key="CheckBoxGlyphForegroundCheckedDisabled" Color="#B3B3B3" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillCheckedDisabled" Color="#D9D9D9" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeCheckedDisabled" Color="#B2B2B2" />

            <SolidColorBrush x:Key="CheckBoxGlyphForegroundUncheckedDisabled" Color="#B3B3B3" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUncheckedDisabled" Color="#D9D9D9" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedDisabled" Color="#B2B2B2" />

            <SolidColorBrush x:Key="CheckBoxGlyphForegroundIndeterminateDisabled" Color="#B3B3B3" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillIndeterminateDisabled" Color="#D9D9D9" />
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeIndeterminateDisabled" Color="#B2B2B2" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
