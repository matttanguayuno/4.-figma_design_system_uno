<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Font Families -->
  <FontFamily x:Key="InterFontFamily">Inter</FontFamily>

  <!-- Body Text Styles -->
  <Style x:Key="BodyBaseTextBlockStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}" />
    <Setter Property="FontSize" Value="16" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="LineHeight" Value="22" />
    <Setter Property="Foreground" Value="{StaticResource OnSurfaceBrush}" />
  </Style>

  <Style x:Key="BodyStrongTextBlockStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}" />
    <Setter Property="FontSize" Value="16" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="LineHeight" Value="22" />
    <Setter Property="Foreground" Value="{StaticResource OnSurfaceBrush}" />
  </Style>

  <Style x:Key="SingleLineBodyBaseTextBlockStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}" />
    <Setter Property="FontSize" Value="16" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="LineHeight" Value="16" />
    <Setter Property="Foreground" Value="{StaticResource OnSurfaceBrush}" />
  </Style>

  <!-- Heading Styles -->
  <Style x:Key="HeadingTextBlockStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}" />
    <Setter Property="FontSize" Value="24" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="LineHeight" Value="29" />
    <Setter Property="CharacterSpacing" Value="-20" />
    <Setter Property="Foreground" Value="{StaticResource OnSurfaceBrush}" />
  </Style>

  <Style x:Key="SubheadingTextBlockStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}" />
    <Setter Property="FontSize" Value="20" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="LineHeight" Value="24" />
    <Setter Property="Foreground" Value="{StaticResource MaterialOnSurfaceVariantBrush}" />
  </Style>

  <!-- Title Styles -->
  <Style x:Key="TitleHeroTextBlockStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}" />
    <Setter Property="FontSize" Value="72" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="LineHeight" Value="86" />
    <Setter Property="CharacterSpacing" Value="-30" />
    <Setter Property="Foreground" Value="{StaticResource OnSurfaceBrush}" />
  </Style>

  <Style x:Key="TitlePageTextBlockStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}" />
    <Setter Property="FontSize" Value="48" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="LineHeight" Value="58" />
    <Setter Property="Foreground" Value="{StaticResource OnSurfaceBrush}" />
  </Style>

  <Style x:Key="SubtitleTextBlockStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}" />
    <Setter Property="FontSize" Value="32" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="LineHeight" Value="38" />
    <Setter Property="Foreground" Value="{StaticResource MaterialOnSurfaceVariantBrush}" />
  </Style>

</ResourceDictionary>
