<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Uno.Themes.SDS/Styles/Application/Colors.xaml" />
        <ResourceDictionary Source="ms-appx:///Uno.Themes.SDS/Styles/Application/Brushes.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- 
    TextBox Theme Resources
    Overrides Uno's default TextBox colors to match SDS design
    -->

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <!-- Placeholder text -->
            <SolidColorBrush x:Key="TextControlPlaceholderForeground" Color="{StaticResource OnSurfaceLowColor}" />
            <SolidColorBrush x:Key="TextControlPlaceholderForegroundPointerOver" Color="{StaticResource OnSurfaceLowColor}" />
            <SolidColorBrush x:Key="TextControlPlaceholderForegroundFocused" Color="{StaticResource OnSurfaceLowColor}" />
            <SolidColorBrush x:Key="TextControlPlaceholderForegroundDisabled" Color="{StaticResource OnSurfaceLowColor}" />
            
            <!-- Disabled state -->
            <SolidColorBrush x:Key="TextControlBackgroundDisabled" Color="{StaticResource DisabledColor}" />
            <SolidColorBrush x:Key="TextControlBorderBrushDisabled" Color="{StaticResource DisabledColor}" />
            
            <!-- Normal/Focused states -->
            <SolidColorBrush x:Key="TextControlBackground" Color="{StaticResource SurfaceColor}" />
            <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="{StaticResource SurfaceColor}" />
            <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="{StaticResource SurfaceColor}" />
            
            <SolidColorBrush x:Key="TextControlBorderBrush" Color="{StaticResource OutlineColor}" />
            <SolidColorBrush x:Key="TextControlBorderBrushPointerOver" Color="{StaticResource OutlineVariantColor}" />
            <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="{StaticResource PrimaryColor}" />
            
            <SolidColorBrush x:Key="TextControlForeground" Color="{StaticResource OnSurfaceColor}" />
            <SolidColorBrush x:Key="TextControlForegroundPointerOver" Color="{StaticResource OnSurfaceColor}" />
            <SolidColorBrush x:Key="TextControlForegroundFocused" Color="{StaticResource OnSurfaceColor}" />
            <SolidColorBrush x:Key="TextControlForegroundDisabled" Color="{StaticResource OnDisabledColor}" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <!-- Same for dark theme -->
            <SolidColorBrush x:Key="TextControlPlaceholderForeground" Color="{StaticResource OnSurfaceLowColor}" />
            <SolidColorBrush x:Key="TextControlPlaceholderForegroundPointerOver" Color="{StaticResource OnSurfaceLowColor}" />
            <SolidColorBrush x:Key="TextControlPlaceholderForegroundFocused" Color="{StaticResource OnSurfaceLowColor}" />
            <SolidColorBrush x:Key="TextControlPlaceholderForegroundDisabled" Color="{StaticResource OnSurfaceLowColor}" />
            
            <SolidColorBrush x:Key="TextControlBackgroundDisabled" Color="{StaticResource DisabledColor}" />
            <SolidColorBrush x:Key="TextControlBorderBrushDisabled" Color="{StaticResource DisabledColor}" />
            
            <SolidColorBrush x:Key="TextControlBackground" Color="{StaticResource SurfaceColor}" />
            <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="{StaticResource SurfaceColor}" />
            <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="{StaticResource SurfaceColor}" />
            
            <SolidColorBrush x:Key="TextControlBorderBrush" Color="{StaticResource OutlineColor}" />
            <SolidColorBrush x:Key="TextControlBorderBrushPointerOver" Color="{StaticResource OutlineVariantColor}" />
            <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="{StaticResource PrimaryColor}" />
            
            <SolidColorBrush x:Key="TextControlForeground" Color="{StaticResource OnSurfaceColor}" />
            <SolidColorBrush x:Key="TextControlForegroundPointerOver" Color="{StaticResource OnSurfaceColor}" />
            <SolidColorBrush x:Key="TextControlForegroundFocused" Color="{StaticResource OnSurfaceColor}" />
            <SolidColorBrush x:Key="TextControlForegroundDisabled" Color="{StaticResource OnDisabledColor}" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <!-- FilledTextBoxStyle - Default filled input -->
    <Style x:Key="FilledTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{ThemeResource TextControlBackground}" />
        <Setter Property="BorderBrush" Value="{ThemeResource TextControlBorderBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource TextBoxBorderThickness}" />
        <Setter Property="CornerRadius" Value="{StaticResource TextBoxCornerRadius}" />
        <Setter Property="Padding" Value="{StaticResource TextBoxPadding}" />
        <Setter Property="Height" Value="{StaticResource TextBoxHeight}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="PlaceholderForeground" Value="{ThemeResource TextControlPlaceholderForeground}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <!-- OutlinedTextBoxStyle - Outlined input (same as Filled for SDS) -->
    <Style x:Key="OutlinedTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource FilledTextBoxStyle}" />

</ResourceDictionary>
