<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Uno.Themes.SDS/Styles/Application/Colors.xaml" />
        <ResourceDictionary Source="ms-appx:///Uno.Themes.SDS/Styles/Application/Brushes.xaml" />
        <ResourceDictionary Source="ms-appx:///Uno.Themes.SDS/Styles/Application/Thickness.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- 
    Button Styles following Material naming conventions
    Implementation based on Figma Simple Design System (SDS)
    -->

    <!-- Base Button Template (Internal) -->
    <ControlTemplate x:Key="SDSButtonTemplate" TargetType="Button">
        <Grid x:Name="RootGrid"
              Background="{TemplateBinding Background}"
              BorderBrush="{TemplateBinding BorderBrush}"
              BorderThickness="{TemplateBinding BorderThickness}"
              CornerRadius="{TemplateBinding CornerRadius}">
            
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Target="RootGrid.Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag.HoverBackground}" />
                            <Setter Target="RootGrid.BorderBrush" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag.HoverBorder}" />
                        </VisualState.Setters>
                    </VisualState>
                    
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Target="RootGrid.Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag.HoverBackground}" />
                            <Setter Target="RootGrid.BorderBrush" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag.HoverBorder}" />
                            <Setter Target="RootGrid.Opacity" Value="0.8" />
                        </VisualState.Setters>
                    </VisualState>
                    
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Target="RootGrid.Background" Value="{StaticResource MaterialDisabledBrush}" />
                            <Setter Target="RootGrid.BorderBrush" Value="{StaticResource MaterialDisabledBrush}" />
                            <Setter Target="ContentPresenter.Foreground" Value="{StaticResource MaterialOnDisabledBrush}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            
            <ContentPresenter x:Name="ContentPresenter"
                              Content="{TemplateBinding Content}"
                              ContentTemplate="{TemplateBinding ContentTemplate}"
                              Padding="{TemplateBinding Padding}"
                              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                              VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                              AutomationProperties.AccessibilityView="Raw" />
        </Grid>
    </ControlTemplate>

    <!-- FilledButtonStyle - Primary/Filled variant (like SDS Primary) -->
    <Style x:Key="FilledButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource MaterialPrimaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource MaterialOnPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource MaterialPrimaryBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource MaterialButtonBorderThickness}" />
        <Setter Property="CornerRadius" Value="{StaticResource MaterialButtonCornerRadius}" />
        <Setter Property="Padding" Value="{StaticResource MaterialButtonPadding}" />
        <Setter Property="Height" Value="{StaticResource MaterialButtonHeight}" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="UseSystemFocusVisuals" Value="True" />
        <Setter Property="FocusVisualMargin" Value="-3" />
        <Setter Property="Tag">
            <Setter.Value>
                <x:String>HoverBackground={StaticResource MaterialPrimaryVariantDarkBrush};HoverBorder={StaticResource MaterialPrimaryVariantDarkBrush}</x:String>
            </Setter.Value>
        </Setter>
        <Setter Property="Template" Value="{StaticResource SDSButtonTemplate}" />
    </Style>

    <!-- OutlinedButtonStyle - Outlined variant (like SDS Neutral) -->
    <Style x:Key="OutlinedButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource MaterialSurfaceBrush}" />
        <Setter Property="Foreground" Value="{StaticResource MaterialOnSurfaceColor}" />
        <Setter Property="BorderBrush" Value="{StaticResource MaterialOutlineBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource MaterialButtonBorderThickness}" />
        <Setter Property="CornerRadius" Value="{StaticResource MaterialButtonCornerRadius}" />
        <Setter Property="Padding" Value="{StaticResource MaterialButtonPadding}" />
        <Setter Property="Height" Value="{StaticResource MaterialButtonHeight}" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="UseSystemFocusVisuals" Value="True" />
        <Setter Property="FocusVisualMargin" Value="-3" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="RootGrid"
                          Background="{TemplateBinding Background}"
                          BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="{TemplateBinding BorderThickness}"
                          CornerRadius="{TemplateBinding CornerRadius}">
                        
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="RootGrid.Background" Value="{StaticResource MaterialBackgroundTertiaryBrush}" />
                                        <Setter Target="RootGrid.BorderBrush" Value="{StaticResource MaterialOutlineVariantBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                                
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="RootGrid.Background" Value="{StaticResource MaterialBackgroundTertiaryBrush}" />
                                        <Setter Target="RootGrid.Opacity" Value="0.8" />
                                    </VisualState.Setters>
                                </VisualState>
                                
                                <VisualState x:Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Target="RootGrid.Background" Value="{StaticResource MaterialSurfaceBrush}" />
                                        <Setter Target="RootGrid.BorderBrush" Value="{StaticResource MaterialDisabledBrush}" />
                                        <Setter Target="ContentPresenter.Foreground" Value="{StaticResource MaterialOnDisabledBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        
                        <ContentPresenter x:Name="ContentPresenter"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Padding="{TemplateBinding Padding}"
                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                          AutomationProperties.AccessibilityView="Raw" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TextButtonStyle - Text-only variant (like SDS Subtle) -->
    <Style x:Key="TextButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource MaterialTransparentBrush}" />
        <Setter Property="Foreground" Value="{StaticResource SDSTextNeutralBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource MaterialTransparentBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource MaterialButtonBorderThickness}" />
        <Setter Property="CornerRadius" Value="{StaticResource MaterialButtonCornerRadius}" />
        <Setter Property="Padding" Value="{StaticResource MaterialButtonPadding}" />
        <Setter Property="Height" Value="{StaticResource MaterialButtonHeight}" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="UseSystemFocusVisuals" Value="True" />
        <Setter Property="FocusVisualMargin" Value="-3" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="RootGrid"
                          Background="{TemplateBinding Background}"
                          BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="{TemplateBinding BorderThickness}"
                          CornerRadius="{TemplateBinding CornerRadius}">
                        
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="RootGrid.BorderBrush" Value="{StaticResource MaterialOutlineBrush}" />
                                        <Setter Target="ContentPresenter.Foreground" Value="{StaticResource MaterialOnSurfaceBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                                
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="RootGrid.BorderBrush" Value="{StaticResource MaterialOutlineBrush}" />
                                        <Setter Target="RootGrid.Opacity" Value="0.8" />
                                    </VisualState.Setters>
                                </VisualState>
                                
                                <VisualState x:Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Target="RootGrid.Background" Value="{StaticResource MaterialDisabledBrush}" />
                                        <Setter Target="RootGrid.BorderBrush" Value="{StaticResource MaterialDisabledBrush}" />
                                        <Setter Target="ContentPresenter.Foreground" Value="{StaticResource MaterialOnDisabledBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        
                        <ContentPresenter x:Name="ContentPresenter"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Padding="{TemplateBinding Padding}"
                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                          AutomationProperties.AccessibilityView="Raw" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Small Size Variants -->
    <Style x:Key="FilledButtonSmallStyle" TargetType="Button" BasedOn="{StaticResource FilledButtonStyle}">
        <Setter Property="Padding" Value="{StaticResource MaterialButtonPaddingSmall}" />
        <Setter Property="Height" Value="{StaticResource MaterialButtonHeightSmall}" />
    </Style>

    <Style x:Key="OutlinedButtonSmallStyle" TargetType="Button" BasedOn="{StaticResource OutlinedButtonStyle}">
        <Setter Property="Padding" Value="{StaticResource MaterialButtonPaddingSmall}" />
        <Setter Property="Height" Value="{StaticResource MaterialButtonHeightSmall}" />
    </Style>

    <Style x:Key="TextButtonSmallStyle" TargetType="Button" BasedOn="{StaticResource TextButtonStyle}">
        <Setter Property="Padding" Value="{StaticResource MaterialButtonPaddingSmall}" />
        <Setter Property="Height" Value="{StaticResource MaterialButtonHeightSmall}" />
    </Style>

    <!-- Large Size Variants -->
    <Style x:Key="FilledButtonLargeStyle" TargetType="Button" BasedOn="{StaticResource FilledButtonStyle}">
        <Setter Property="Padding" Value="{StaticResource MaterialButtonPaddingLarge}" />
        <Setter Property="Height" Value="{StaticResource MaterialButtonHeightLarge}" />
    </Style>

    <Style x:Key="OutlinedButtonLargeStyle" TargetType="Button" BasedOn="{StaticResource OutlinedButtonStyle}">
        <Setter Property="Padding" Value="{StaticResource MaterialButtonPaddingLarge}" />
        <Setter Property="Height" Value="{StaticResource MaterialButtonHeightLarge}" />
    </Style>

    <Style x:Key="TextButtonLargeStyle" TargetType="Button" BasedOn="{StaticResource TextButtonStyle}">
        <Setter Property="Padding" Value="{StaticResource MaterialButtonPaddingLarge}" />
        <Setter Property="Height" Value="{StaticResource MaterialButtonHeightLarge}" />
    </Style>

</ResourceDictionary>
