<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:utu="using:Uno.Toolkit.UI">

  <!-- Card Base Style using Uno Toolkit Card -->
  <Style x:Key="BaseCardStyle" TargetType="utu:Card">
    <Setter Property="Background" Value="{StaticResource MaterialSurfaceBrush}" />
    <Setter Property="Padding" Value="24" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="MinWidth" Value="240" />
    <Setter Property="MaxWidth" Value="440" />
    <Setter Property="HorizontalAlignment" Value="Stretch" />
    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
  </Style>

  <!-- Card with Border (Stroke Variant) -->
  <Style x:Key="StrokeCardStyle" TargetType="utu:Card" BasedOn="{StaticResource BaseCardStyle}">
    <Setter Property="BorderBrush" Value="{StaticResource MaterialOutlineBrush}" />
    <Setter Property="BorderThickness" Value="1" />
  </Style>

  <!-- Card without Border (Default Variant) -->
  <Style x:Key="DefaultCardStyle" TargetType="utu:Card" BasedOn="{StaticResource BaseCardStyle}">
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="0" />
  </Style>

  <!-- Card Image Placeholder Style -->
  <Style x:Key="CardImageStyle" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource MaterialSurfaceVariantBrush}" />
    <Setter Property="Width" Value="160" />
    <Setter Property="Height" Value="160" />
    <Setter Property="CornerRadius" Value="8" />
  </Style>

  <!-- Card Icon Container Style -->
  <Style x:Key="CardIconContainerStyle" TargetType="Border">
    <Setter Property="Width" Value="32" />
    <Setter Property="Height" Value="32" />
    <Setter Property="CornerRadius" Value="8" />
  </Style>

  <!-- Card Content Area Style -->
  <Style x:Key="CardContentStyle" TargetType="utu:AutoLayout">
    <Setter Property="Orientation" Value="Vertical" />
    <Setter Property="Spacing" Value="16" />
    <Setter Property="HorizontalAlignment" Value="Stretch" />
  </Style>

  <!-- Card Text Area Style -->
  <Style x:Key="CardTextAreaStyle" TargetType="utu:AutoLayout">
    <Setter Property="Orientation" Value="Vertical" />
    <Setter Property="Spacing" Value="8" />
    <Setter Property="HorizontalAlignment" Value="Stretch" />
  </Style>

  <!-- Card Heading Style -->
  <Style x:Key="CardHeadingTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyStrongTextBlockStyle}">
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="TextWrapping" Value="Wrap" />
  </Style>

  <!-- Card Body Style -->
  <Style x:Key="CardBodyTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyBaseTextBlockStyle}">
    <Setter Property="Foreground" Value="{StaticResource MaterialOnSurfaceVariantBrush}" />
    <Setter Property="TextWrapping" Value="Wrap" />
  </Style>

</ResourceDictionary>
