<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Uno.Themes.SDS.Controls"
                    xmlns:utu="using:Uno.Toolkit.UI">

  <Style TargetType="controls:ProductInfoCard">
    <Setter Property="Width" Value="240" />
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
    <Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="HorizontalAlignment" Value="Left" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="controls:ProductInfoCard">
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="{StaticResource Radius200}">
            <utu:AutoLayout Orientation="Vertical" 
                            Spacing="{StaticResource Space400}"
                            Padding="{StaticResource Spacing400}">
              
              <!-- Product Image -->
              <Border Width="208" Height="247"
                      CornerRadius="{StaticResource Radius200}">
                <Grid>
                  <!-- Placeholder Background -->
                  <Border Background="{StaticResource BackgroundTertiaryBrush}"
                          CornerRadius="{StaticResource Radius200}" />
                  
                  <!-- Image or Icon -->
                  <Image x:Name="ProductImage"
                         Stretch="UniformToFill"
                         Visibility="Collapsed" />
                  
                  <FontIcon x:Name="PlaceholderIcon"
                            Glyph="&#xEB9F;" 
                            FontSize="72"
                            Foreground="{StaticResource OutlineVariantBrush}"
                            Opacity="0.2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                </Grid>
              </Border>

              <!-- Product Details -->
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                <TextBlock Text="{TemplateBinding ProductName}"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource OnSurfaceBrush}"
                           TextWrapping="Wrap" />
                <TextBlock Text="{TemplateBinding Price}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource OnSurfaceBrush}" />
                <TextBlock Text="{TemplateBinding Description}"
                           FontSize="14"
                           Foreground="{StaticResource OnSurfaceMediumBrush}"
                           TextWrapping="Wrap" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>
