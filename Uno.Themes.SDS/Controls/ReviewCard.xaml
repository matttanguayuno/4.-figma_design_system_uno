<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Uno.Themes.SDS.Controls"
                    xmlns:utu="using:Uno.Toolkit.UI">

  <Style TargetType="controls:ReviewCard">
    <Setter Property="Width" Value="240" />
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
    <Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="HorizontalAlignment" Value="Left" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="controls:ReviewCard">
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="{StaticResource Radius200}">
            <utu:AutoLayout Orientation="Vertical" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}">
              
              <!-- Star Rating -->
              <utu:AutoLayout Orientation="Horizontal" 
                              Spacing="{StaticResource Space100}">
                <Path x:Name="Star1"
                      Data="M10 1.66667L12.575 7.00833L18.3333 7.80833L14.1667 11.825L15.15 17.55L10 14.8417L4.85 17.55L5.83333 11.825L1.66667 7.80833L7.425 7.00833L10 1.66667Z"
                      Stroke="{StaticResource OnSurfaceBrush}"
                      StrokeThickness="1.5"
                      Fill="Transparent"
                      Width="20"
                      Height="20"
                      Stretch="Uniform" />
                <Path x:Name="Star2"
                      Data="M10 1.66667L12.575 7.00833L18.3333 7.80833L14.1667 11.825L15.15 17.55L10 14.8417L4.85 17.55L5.83333 11.825L1.66667 7.80833L7.425 7.00833L10 1.66667Z"
                      Stroke="{StaticResource OnSurfaceBrush}"
                      StrokeThickness="1.5"
                      Fill="Transparent"
                      Width="20"
                      Height="20"
                      Stretch="Uniform" />
                <Path x:Name="Star3"
                      Data="M10 1.66667L12.575 7.00833L18.3333 7.80833L14.1667 11.825L15.15 17.55L10 14.8417L4.85 17.55L5.83333 11.825L1.66667 7.80833L7.425 7.00833L10 1.66667Z"
                      Stroke="{StaticResource OnSurfaceBrush}"
                      StrokeThickness="1.5"
                      Fill="Transparent"
                      Width="20"
                      Height="20"
                      Stretch="Uniform" />
                <Path x:Name="Star4"
                      Data="M10 1.66667L12.575 7.00833L18.3333 7.80833L14.1667 11.825L15.15 17.55L10 14.8417L4.85 17.55L5.83333 11.825L1.66667 7.80833L7.425 7.00833L10 1.66667Z"
                      Stroke="{StaticResource OnSurfaceBrush}"
                      StrokeThickness="1.5"
                      Fill="Transparent"
                      Width="20"
                      Height="20"
                      Stretch="Uniform" />
                <Path x:Name="Star5"
                      Data="M10 1.66667L12.575 7.00833L18.3333 7.80833L14.1667 11.825L15.15 17.55L10 14.8417L4.85 17.55L5.83333 11.825L1.66667 7.80833L7.425 7.00833L10 1.66667Z"
                      Stroke="{StaticResource OnSurfaceBrush}"
                      StrokeThickness="1.5"
                      Fill="Transparent"
                      Width="20"
                      Height="20"
                      Stretch="Uniform" />
              </utu:AutoLayout>

              <!-- Review Content -->
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space100}">
                <TextBlock Text="{TemplateBinding ReviewTitle}"
                           FontSize="24"
                           FontWeight="Bold"
                           CharacterSpacing="-20"
                           Foreground="{StaticResource OnSurfaceBrush}"
                           TextWrapping="Wrap" />
                <TextBlock Text="{TemplateBinding ReviewBody}"
                           FontSize="16"
                           Foreground="{StaticResource OnSurfaceBrush}"
                           TextWrapping="Wrap" />
              </utu:AutoLayout>

              <!-- Reviewer Info -->
              <utu:AutoLayout Orientation="Horizontal" 
                              Spacing="{StaticResource Space300}">
                <Ellipse Width="40" Height="40">
                  <Ellipse.Fill>
                    <ImageBrush x:Name="ReviewerImageBrush"
                                Stretch="UniformToFill" />
                  </Ellipse.Fill>
                </Ellipse>
                <utu:AutoLayout Orientation="Vertical" Spacing="2">
                  <TextBlock Text="{TemplateBinding ReviewerName}"
                             FontSize="16"
                             FontWeight="SemiBold"
                             Foreground="{StaticResource OnSurfaceMediumBrush}" />
                  <TextBlock Text="{TemplateBinding ReviewDate}"
                             FontSize="16"
                             Foreground="{StaticResource OnSurfaceMediumBrush}"
                             Opacity="0.6" />
                </utu:AutoLayout>
              </utu:AutoLayout>
            </utu:AutoLayout>

            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="RatingStates">
                <VisualState x:Name="Rating1">
                  <VisualState.Setters>
                    <Setter Target="Star1.Fill" Value="{StaticResource OnSurfaceBrush}" />
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Rating2">
                  <VisualState.Setters>
                    <Setter Target="Star1.Fill" Value="{StaticResource OnSurfaceBrush}" />
                    <Setter Target="Star2.Fill" Value="{StaticResource OnSurfaceBrush}" />
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Rating3">
                  <VisualState.Setters>
                    <Setter Target="Star1.Fill" Value="{StaticResource OnSurfaceBrush}" />
                    <Setter Target="Star2.Fill" Value="{StaticResource OnSurfaceBrush}" />
                    <Setter Target="Star3.Fill" Value="{StaticResource OnSurfaceBrush}" />
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Rating4">
                  <VisualState.Setters>
                    <Setter Target="Star1.Fill" Value="{StaticResource OnSurfaceBrush}" />
                    <Setter Target="Star2.Fill" Value="{StaticResource OnSurfaceBrush}" />
                    <Setter Target="Star3.Fill" Value="{StaticResource OnSurfaceBrush}" />
                    <Setter Target="Star4.Fill" Value="{StaticResource OnSurfaceBrush}" />
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Rating5">
                  <VisualState.Setters>
                    <Setter Target="Star1.Fill" Value="{StaticResource OnSurfaceBrush}" />
                    <Setter Target="Star2.Fill" Value="{StaticResource OnSurfaceBrush}" />
                    <Setter Target="Star3.Fill" Value="{StaticResource OnSurfaceBrush}" />
                    <Setter Target="Star4.Fill" Value="{StaticResource OnSurfaceBrush}" />
                    <Setter Target="Star5.Fill" Value="{StaticResource OnSurfaceBrush}" />
                  </VisualState.Setters>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>
