<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Uno.Themes.SDS.Controls"
                    xmlns:utu="using:Uno.Toolkit.UI">

  <Style TargetType="controls:StatsCard">
    <Setter Property="Width" Value="240" />
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
    <Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="HorizontalAlignment" Value="Left" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="controls:StatsCard">
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="{StaticResource Radius200}">
            <utu:AutoLayout Orientation="Vertical" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}"
                            CounterAxisAlignment="Center">
              
              <!-- Icon -->
              <FontIcon Glyph="{TemplateBinding IconGlyph}" 
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="{StaticResource OnSurfaceBrush}" />

              <!-- Stats Content -->
              <utu:AutoLayout Orientation="Vertical" 
                              Spacing="{StaticResource Space100}"
                              CounterAxisAlignment="Center">
                <TextBlock Text="{TemplateBinding Value}"
                           FontSize="48"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource OnSurfaceBrush}"
                           HorizontalAlignment="Center" />
                <TextBlock Text="{TemplateBinding Label}"
                           FontSize="16"
                           Foreground="{StaticResource OnSurfaceBrush}"
                           HorizontalAlignment="Center" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>
