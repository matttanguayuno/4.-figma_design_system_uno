<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Uno.Themes.SDS.Controls">

    <!-- RangeSlider Default Style -->
    <Style TargetType="controls:RangeSlider">
        <Setter Property="Background" Value="#D9D9D9"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:RangeSlider">
                    <Grid x:Name="RootGrid">
                        <!-- Track (light gray) -->
                        <Rectangle x:Name="Track"
                                   Fill="{TemplateBinding Background}"
                                   Height="4"
                                   RadiusX="2"
                                   RadiusY="2"
                                   VerticalAlignment="Center"/>
                        
                        <!-- Range Fill (between thumbs) - not visible in Figma design -->
                        <Rectangle x:Name="RangeFill"
                                   Fill="Transparent"
                                   Height="4"
                                   RadiusX="2"
                                   RadiusY="2"
                                   VerticalAlignment="Center"
                                   Margin="0"/>
                        
                        <!-- Min Thumb (dark gray #1E1E1E) -->
                        <Slider x:Name="MinThumb"
                                Minimum="{TemplateBinding Minimum}"
                                Maximum="{TemplateBinding Maximum}"
                                Value="{Binding RangeMin, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                Background="Transparent"
                                VerticalAlignment="Center"
                                Margin="0,-8,0,0"
                                IsHitTestVisible="False"
                                Canvas.ZIndex="1">
                            <Slider.Resources>
                                <SolidColorBrush x:Key="SliderThumbBackground" Color="#1E1E1E"/>
                                <SolidColorBrush x:Key="SliderThumbBackgroundPointerOver" Color="#1E1E1E"/>
                                <SolidColorBrush x:Key="SliderThumbBackgroundPressed" Color="#1E1E1E"/>
                                <SolidColorBrush x:Key="SliderTrackFill" Color="Transparent"/>
                                <SolidColorBrush x:Key="SliderTrackFillPointerOver" Color="Transparent"/>
                                <SolidColorBrush x:Key="SliderTrackFillPressed" Color="Transparent"/>
                                <SolidColorBrush x:Key="SliderTrackValueFill" Color="Transparent"/>
                                <SolidColorBrush x:Key="SliderTrackValueFillPointerOver" Color="Transparent"/>
                                <SolidColorBrush x:Key="SliderTrackValueFillPressed" Color="Transparent"/>
                            </Slider.Resources>
                        </Slider>
                        
                        <!-- Max Thumb (dark gray #1E1E1E) -->
                        <Slider x:Name="MaxThumb"
                                Minimum="{TemplateBinding Minimum}"
                                Maximum="{TemplateBinding Maximum}"
                                Value="{Binding RangeMax, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                Background="Transparent"
                                VerticalAlignment="Center"
                                Margin="0,-8,0,0"
                                IsHitTestVisible="False"
                                Canvas.ZIndex="2">
                            <Slider.Resources>
                                <SolidColorBrush x:Key="SliderThumbBackground" Color="#1E1E1E"/>
                                <SolidColorBrush x:Key="SliderThumbBackgroundPointerOver" Color="#1E1E1E"/>
                                <SolidColorBrush x:Key="SliderThumbBackgroundPressed" Color="#1E1E1E"/>
                                <SolidColorBrush x:Key="SliderTrackFill" Color="Transparent"/>
                                <SolidColorBrush x:Key="SliderTrackFillPointerOver" Color="Transparent"/>
                                <SolidColorBrush x:Key="SliderTrackFillPressed" Color="Transparent"/>
                                <SolidColorBrush x:Key="SliderTrackValueFill" Color="Transparent"/>
                                <SolidColorBrush x:Key="SliderTrackValueFillPointerOver" Color="Transparent"/>
                                <SolidColorBrush x:Key="SliderTrackValueFillPressed" Color="Transparent"/>
                            </Slider.Resources>
                        </Slider>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
