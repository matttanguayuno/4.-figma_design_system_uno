<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Uno.Themes.SDS.Controls"
                    xmlns:utu="using:Uno.Toolkit.UI">

  <!-- Row 1 Cards: Title above, Price centered below -->
  <Style x:Key="PricingCardRow1Style" TargetType="controls:PricingCard">
    <Setter Property="Width" Value="300" />
    <Setter Property="HorizontalAlignment" Value="Left" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="controls:PricingCard">
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="{StaticResource Radius200}">
            <StackPanel Orientation="Vertical" 
                        Padding="{StaticResource Spacing800}">

              <StackPanel Orientation="Vertical" Spacing="16" HorizontalAlignment="Stretch" Margin="0,0,0,24">
                <TextBlock Text="{TemplateBinding Title}"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="{TemplateBinding Foreground}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center" />
                
                <Grid HorizontalAlignment="Center">
                  <StackPanel Orientation="Horizontal" Spacing="2">
                    <TextBlock Text="$"
                               FontSize="24"
                               FontWeight="Bold"
                               CharacterSpacing="-20"
                               Foreground="{TemplateBinding Foreground}"
                               VerticalAlignment="Top"
                               Margin="0,8,0,0" />
                    <TextBlock Text="{TemplateBinding Price}"
                               FontSize="48"
                               FontWeight="Bold"
                               CharacterSpacing="-20"
                               Foreground="{TemplateBinding Foreground}" />
                    <TextBlock Text="{TemplateBinding Period}"
                               FontSize="14"
                               Foreground="{TemplateBinding Foreground}"
                               VerticalAlignment="Bottom"
                               Margin="0,0,0,10" />
                  </StackPanel>
                </Grid>
              </StackPanel>

              <!-- List Items -->
              <ItemsControl x:Name="FeaturesList" ItemsSource="{TemplateBinding Features}" Margin="0,0,0,24">
                  <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                      <StackPanel Orientation="Vertical" Spacing="12" />
                    </ItemsPanelTemplate>
                  </ItemsControl.ItemsPanel>
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="•" FontSize="16" />
                        <Run Text="  " />
                        <Run Text="{Binding}" FontSize="16" />
                      </TextBlock>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>

              <Button x:Name="CardButton"
                      Style="{StaticResource FilledButtonStyle}"
                      Content="{TemplateBinding ButtonText}"
                      Background="{TemplateBinding ButtonBackground}"
                      Foreground="{TemplateBinding ButtonForeground}"
                      BorderBrush="{TemplateBinding ButtonBorderBrush}"
                      HorizontalAlignment="Stretch" />
            </StackPanel>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Row 2 Cards Style: Title and Price side-by-side -->
  <Style x:Key="PricingCardRow2Style" TargetType="controls:PricingCard">
    <Setter Property="Width" Value="300" />
    <Setter Property="HorizontalAlignment" Value="Left" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="controls:PricingCard">
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="{StaticResource Radius200}">
            <utu:AutoLayout Orientation="Vertical" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}">

              <!-- Title and Price Row -->
              <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>
                  
                  <TextBlock Grid.Column="0"
                             Text="{TemplateBinding Title}"
                             FontSize="24"
                             FontWeight="SemiBold"
                             Foreground="{TemplateBinding Foreground}"
                             VerticalAlignment="Center" />
                  
                  <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="2">
                    <TextBlock Text="$"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{TemplateBinding Foreground}"
                               VerticalAlignment="Top"
                               Margin="0,4,0,0" />
                    <TextBlock Text="{TemplateBinding Price}"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{TemplateBinding Foreground}"
                               VerticalAlignment="Center" />
                    <TextBlock Text="{TemplateBinding Period}"
                               FontSize="14"
                               Foreground="{TemplateBinding Foreground}"
                               VerticalAlignment="Bottom"
                               Margin="0,0,0,2" />
                  </StackPanel>
                </Grid>

              <!-- List Items -->
              <ItemsControl ItemsSource="{TemplateBinding Features}">
                <ItemsControl.ItemsPanel>
                  <ItemsPanelTemplate>
                    <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}" />
                  </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                  <DataTemplate>
                    <TextBlock TextWrapping="Wrap">
                      <Run Text="•" FontSize="16" />
                      <Run Text="  " />
                      <Run Text="{Binding}" FontSize="16" />
                    </TextBlock>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>

              <Grid>
                <Button Style="{StaticResource FilledButtonStyle}"
                        Content="{TemplateBinding ButtonText}"
                        Background="{TemplateBinding ButtonBackground}"
                        Foreground="{TemplateBinding ButtonForeground}"
                        BorderBrush="{TemplateBinding ButtonBorderBrush}"
                        HorizontalAlignment="Stretch" />
              </Grid>
            </utu:AutoLayout>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Light Row 1 Variant -->
  <Style x:Key="LightDesktopPricingCardStyle" TargetType="controls:PricingCard" BasedOn="{StaticResource PricingCardRow1Style}">
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
    <Setter Property="Foreground" Value="{StaticResource OnSurfaceBrush}" />
    <Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="ButtonBackground" Value="{StaticResource PrimaryBrush}" />
    <Setter Property="ButtonForeground" Value="{StaticResource OnPrimaryBrush}" />
    <Setter Property="ButtonBorderBrush" Value="{StaticResource PrimaryBrush}" />
  </Style>

  <!-- Branded Row 1 Variant -->
  <Style x:Key="BrandedDesktopPricingCardStyle" TargetType="controls:PricingCard" BasedOn="{StaticResource PricingCardRow1Style}">
    <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
    <Setter Property="Foreground" Value="{StaticResource OnPrimaryBrush}" />
    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="ButtonBackground" Value="{StaticResource BackgroundTertiaryBrush}" />
    <Setter Property="ButtonForeground" Value="{StaticResource OnSurfaceBrush}" />
    <Setter Property="ButtonBorderBrush" Value="{StaticResource OutlineVariantBrush}" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="controls:PricingCard">
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="{StaticResource Radius200}">
            <StackPanel Orientation="Vertical" 
                        Padding="{StaticResource Spacing800}">

              <StackPanel Orientation="Vertical" Spacing="16" HorizontalAlignment="Stretch" Margin="0,0,0,24">
                <TextBlock Text="{TemplateBinding Title}"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="{TemplateBinding Foreground}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center" />
                
                <Grid HorizontalAlignment="Center">
                  <StackPanel Orientation="Horizontal" Spacing="2">
                    <TextBlock Text="$"
                               FontSize="24"
                               FontWeight="Bold"
                               CharacterSpacing="-20"
                               Foreground="{TemplateBinding Foreground}"
                               VerticalAlignment="Top"
                               Margin="0,8,0,0" />
                    <TextBlock Text="{TemplateBinding Price}"
                               FontSize="48"
                               FontWeight="Bold"
                               CharacterSpacing="-20"
                               Foreground="{TemplateBinding Foreground}" />
                    <TextBlock Text="{TemplateBinding Period}"
                               FontSize="14"
                               Foreground="{TemplateBinding Foreground}"
                               VerticalAlignment="Bottom"
                               Margin="0,0,0,10" />
                  </StackPanel>
                </Grid>
              </StackPanel>

              <!-- List Items -->
              <ItemsControl x:Name="FeaturesList" ItemsSource="{TemplateBinding Features}" Margin="0,0,0,24">
                  <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                      <StackPanel Orientation="Vertical" Spacing="12" />
                    </ItemsPanelTemplate>
                  </ItemsControl.ItemsPanel>
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="•" FontSize="16" />
                        <Run Text="  " />
                        <Run Text="{Binding}" FontSize="16" />
                      </TextBlock>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>

              <Button Style="{StaticResource LightButtonStyle}"
                      Content="{TemplateBinding ButtonText}"
                      Background="{TemplateBinding ButtonBackground}"
                      Foreground="{TemplateBinding ButtonForeground}"
                      BorderBrush="{TemplateBinding ButtonBorderBrush}"
                      HorizontalAlignment="Stretch" />
            </StackPanel>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Light Row 2 Variant -->
  <Style x:Key="LightMobilePricingCardStyle" TargetType="controls:PricingCard" BasedOn="{StaticResource PricingCardRow2Style}">
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
    <Setter Property="Foreground" Value="{StaticResource OnSurfaceBrush}" />
    <Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="ButtonBackground" Value="{StaticResource PrimaryBrush}" />
    <Setter Property="ButtonForeground" Value="{StaticResource OnPrimaryBrush}" />
    <Setter Property="ButtonBorderBrush" Value="{StaticResource PrimaryBrush}" />
  </Style>

  <!-- Branded Row 2 Variant -->
  <Style x:Key="BrandedMobilePricingCardStyle" TargetType="controls:PricingCard" BasedOn="{StaticResource PricingCardRow2Style}">
    <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
    <Setter Property="Foreground" Value="{StaticResource OnPrimaryBrush}" />
    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="ButtonBackground" Value="{StaticResource BackgroundTertiaryBrush}" />
    <Setter Property="ButtonForeground" Value="{StaticResource OnSurfaceBrush}" />
    <Setter Property="ButtonBorderBrush" Value="{StaticResource OutlineVariantBrush}" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="controls:PricingCard">
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="{StaticResource Radius200}">
            <utu:AutoLayout Orientation="Vertical" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}">

              <!-- Title and Price Row -->
              <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>

                  <TextBlock Grid.Column="0"
                             Text="{TemplateBinding Title}"
                             FontSize="18"
                             FontWeight="SemiBold"
                             Foreground="{TemplateBinding Foreground}"
                             VerticalAlignment="Center" />

                  <StackPanel Grid.Column="1"
                              Orientation="Horizontal"
                              Spacing="2"
                              VerticalAlignment="Center">
                    <TextBlock Text="$"
                               FontSize="14"
                               FontWeight="Bold"
                               CharacterSpacing="-20"
                               Foreground="{TemplateBinding Foreground}"
                               VerticalAlignment="Top"
                               Margin="0,4,0,0" />
                    <TextBlock Text="{TemplateBinding Price}"
                               FontSize="28"
                               FontWeight="Bold"
                               CharacterSpacing="-20"
                               Foreground="{TemplateBinding Foreground}" />
                    <TextBlock Text="{TemplateBinding Period}"
                               FontSize="12"
                               Foreground="{TemplateBinding Foreground}"
                               VerticalAlignment="Bottom"
                               Margin="0,0,0,6" />
                  </StackPanel>
                </Grid>

              <!-- List Items -->
              <ItemsControl ItemsSource="{TemplateBinding Features}">
                  <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space300}" />
                    </ItemsPanelTemplate>
                  </ItemsControl.ItemsPanel>
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                    <TextBlock TextWrapping="Wrap" Foreground="{Binding Foreground, RelativeSource={RelativeSource TemplatedParent}}">
                        <Run Text="•" FontSize="14" />
                        <Run Text="  " />
                        <Run Text="{Binding}" FontSize="14" />
                      </TextBlock>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>

              <Button Style="{StaticResource LightButtonStyle}"
                      Content="{TemplateBinding ButtonText}"
                      Background="{TemplateBinding ButtonBackground}"
                      Foreground="{TemplateBinding ButtonForeground}"
                      BorderBrush="{TemplateBinding ButtonBorderBrush}"
                      HorizontalAlignment="Stretch" />
            </utu:AutoLayout>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Default style -->
  <Style TargetType="controls:PricingCard" BasedOn="{StaticResource PricingCardRow1Style}" />

</ResourceDictionary>
