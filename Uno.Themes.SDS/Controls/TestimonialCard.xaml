<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Uno.Themes.SDS.Controls"
                    xmlns:utu="using:Uno.Toolkit.UI">

  <Style TargetType="controls:TestimonialCard">
    <Setter Property="Width" Value="300" />
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
    <Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="HorizontalAlignment" Value="Left" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="controls:TestimonialCard">
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="{StaticResource Radius200}">
            <utu:AutoLayout Orientation="Vertical" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}">
              
              <!-- Quote -->
              <TextBlock Text="{TemplateBinding Quote}"
                         FontSize="24"
                         FontWeight="Bold"
                         CharacterSpacing="-20"
                         Foreground="{StaticResource OnSurfaceBrush}"
                         TextWrapping="Wrap" />

              <!-- Author Info -->
              <utu:AutoLayout Orientation="Horizontal" 
                              Spacing="{StaticResource Space300}">
                <Ellipse Width="40" Height="40">
                  <Ellipse.Fill>
                    <ImageBrush x:Name="AuthorImageBrush"
                                Stretch="UniformToFill" />
                  </Ellipse.Fill>
                </Ellipse>
                <utu:AutoLayout Orientation="Vertical" Spacing="2">
                  <TextBlock Text="{TemplateBinding AuthorName}"
                             FontSize="16"
                             FontWeight="SemiBold"
                             Foreground="{StaticResource OnSurfaceMediumBrush}" />
                  <TextBlock Text="{TemplateBinding AuthorTitle}"
                             FontSize="16"
                             Foreground="{StaticResource OnSurfaceMediumBrush}"
                             Opacity="0.6" />
                </utu:AutoLayout>
              </utu:AutoLayout>
            </utu:AutoLayout>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>
