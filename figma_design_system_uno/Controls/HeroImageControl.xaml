<UserControl x:Class="figma_design_system_uno.Controls.HeroImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utu="using:Uno.Toolkit.UI"
             xmlns:converters="using:figma_design_system_uno.Converters">

    <Grid>
        <!-- Desktop Hero Image -->
        <Grid x:Name="DesktopHero" 
              Width="1200" 
              Padding="24,160"
              VerticalAlignment="Top"
              Visibility="{x:Bind IsMobile, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            
            <!-- Background Image -->
            <Image Source="https://picsum.photos/1200/800" 
                   Stretch="UniformToFill"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
            
            <!-- Scrim Overlay -->
            <Border Background="#CCFFFFFF"
                    Opacity="0.8"/>
            
            <!-- Content on top of image -->
            <utu:AutoLayout Orientation="Vertical" 
                          Spacing="32"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                
                <!-- Title & Subtitle -->
                <utu:AutoLayout Orientation="Vertical" 
                              Spacing="8">
                    <TextBlock Text="Title"
                             FontSize="72"
                             FontWeight="Bold"
                             Foreground="#0c0c0d"
                             TextAlignment="Center"
                             HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Subtitle"
                             FontSize="32"
                             Foreground="#0c0c0d"
                             TextAlignment="Center"
                             HorizontalAlignment="Center"/>
                </utu:AutoLayout>

                <!-- Button Group -->
                <StackPanel Orientation="Horizontal" 
                          Spacing="16"
                          HorizontalAlignment="Center">
                    <Button Content="Button"
                          Style="{StaticResource ButtonSecondaryStyle}"
                          Height="40"
                          Padding="12"/>
                    
                    <Button Content="Button"
                          Style="{StaticResource ButtonPrimaryStyle}"
                          Height="40"
                          Padding="12"/>
                </StackPanel>
            </utu:AutoLayout>
        </Grid>

        <!-- Mobile Hero Image -->
        <Grid x:Name="MobileHero" 
              Width="375" 
              Padding="24,160"
              VerticalAlignment="Top"
              Visibility="{x:Bind IsMobile, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            
            <!-- Background Image -->
            <Image Source="https://picsum.photos/375/600" 
                   Stretch="UniformToFill"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
            
            <!-- Scrim Overlay -->
            <Border Background="#CCFFFFFF"
                    Opacity="0.8"/>
            
            <!-- Content on top of image -->
            <utu:AutoLayout Orientation="Vertical" 
                          Spacing="32"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                
                <!-- Title & Subtitle -->
                <utu:AutoLayout Orientation="Vertical" 
                              Spacing="8">
                    <TextBlock Text="Title"
                             FontSize="48"
                             FontWeight="Bold"
                             Foreground="#0c0c0d"
                             TextAlignment="Center"
                             HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Subtitle"
                             FontSize="32"
                             Foreground="#0c0c0d"
                             TextAlignment="Center"
                             HorizontalAlignment="Center"/>
                </utu:AutoLayout>

                <!-- Button Group -->
                <StackPanel Orientation="Horizontal" 
                          Spacing="16"
                          HorizontalAlignment="Center">
                    <Button Content="Button"
                          Style="{StaticResource ButtonSecondaryStyle}"
                          Height="40"
                          Padding="12"/>
                    
                    <Button Content="Button"
                          Style="{StaticResource ButtonPrimaryStyle}"
                          Height="40"
                          Padding="12"/>
                </StackPanel>
            </utu:AutoLayout>
        </Grid>
    </Grid>
</UserControl>
