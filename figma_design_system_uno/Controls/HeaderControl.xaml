<UserControl x:Class="figma_design_system_uno.Controls.HeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utu="using:Uno.Toolkit.UI">

  <Grid Background="White">
    <!-- Desktop Header -->
    <Grid x:Name="DesktopHeader"
          Visibility="{x:Bind IsMobile, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"
          BorderBrush="{StaticResource OutlineBrush}"
          BorderThickness="0,0,0,1"
          Padding="32"
          MinHeight="88"
          HorizontalAlignment="Stretch">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>

      <!-- Logo -->
      <Image Grid.Column="0"
             Width="28"
             Height="28"
             Source="ms-appx:///Assets/logo_figma.png"
             Margin="0,0,24,0"
             VerticalAlignment="Center" />

      <!-- Navigation Pills -->
      <utu:AutoLayout Grid.Column="1"
                      Orientation="Horizontal"
                      Spacing="8"
                      PrimaryAxisAlignment="End"
                      VerticalAlignment="Center">
        <!-- Products - Selected -->
        <Border Background="{StaticResource BrandTertiaryBrush}"
                CornerRadius="8"
                Padding="8">
          <TextBlock Text="Products"
                     Foreground="{StaticResource DefaultTextBrush}" />
        </Border>
        
        <!-- Other menu items with hover -->
        <Button Style="{StaticResource TextButtonStyle}"
                Padding="8"
                MinHeight="0"
                MinWidth="0"
                Background="Transparent"
                CornerRadius="8">
          <Button.Resources>
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{StaticResource BackgroundSecondaryColor}" />
            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{StaticResource BackgroundSecondaryColor}" />
          </Button.Resources>
          <TextBlock Text="Solutions"
                     Foreground="{StaticResource DefaultTextBrush}" />
        </Button>
        
        <Button Style="{StaticResource TextButtonStyle}"
                Padding="8"
                MinHeight="0"
                MinWidth="0"
                Background="Transparent"
                CornerRadius="8">
          <Button.Resources>
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{StaticResource BackgroundSecondaryColor}" />
            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{StaticResource BackgroundSecondaryColor}" />
          </Button.Resources>
          <TextBlock Text="Community"
                     Foreground="{StaticResource DefaultTextBrush}" />
        </Button>
        
        <Button Style="{StaticResource TextButtonStyle}"
                Padding="8"
                MinHeight="0"
                MinWidth="0"
                Background="Transparent"
                CornerRadius="8">
          <Button.Resources>
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{StaticResource BackgroundSecondaryColor}" />
            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{StaticResource BackgroundSecondaryColor}" />
          </Button.Resources>
          <TextBlock Text="Resources"
                     Foreground="{StaticResource DefaultTextBrush}" />
        </Button>
        
        <Button Style="{StaticResource TextButtonStyle}"
                Padding="8"
                MinHeight="0"
                MinWidth="0"
                Background="Transparent"
                CornerRadius="8">
          <Button.Resources>
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{StaticResource BackgroundSecondaryColor}" />
            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{StaticResource BackgroundSecondaryColor}" />
          </Button.Resources>
          <TextBlock Text="Pricing"
                     Foreground="{StaticResource DefaultTextBrush}" />
        </Button>
        
        <Button Style="{StaticResource TextButtonStyle}"
                Padding="8"
                MinHeight="0"
                MinWidth="0"
                Background="Transparent"
                CornerRadius="8">
          <Button.Resources>
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{StaticResource BackgroundSecondaryColor}" />
            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{StaticResource BackgroundSecondaryColor}" />
          </Button.Resources>
          <TextBlock Text="Contact"
                     Foreground="{StaticResource DefaultTextBrush}" />
        </Button>
        
        <Button Style="{StaticResource TextButtonStyle}"
                Padding="8"
                MinHeight="0"
                MinWidth="0"
                Background="Transparent"
                CornerRadius="8">
          <Button.Resources>
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{StaticResource BackgroundSecondaryColor}" />
            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{StaticResource BackgroundSecondaryColor}" />
          </Button.Resources>
          <TextBlock Text="Link"
                     Foreground="{StaticResource DefaultTextBrush}" />
        </Button>
      </utu:AutoLayout>

      <!-- Auth Buttons -->
      <utu:AutoLayout Grid.Column="2"
                      Orientation="Horizontal"
                      Spacing="12"
                      VerticalAlignment="Center"
                      Margin="24,0,0,0">
        <Button Content="Sign in"
                Style="{StaticResource OutlinedButtonStyle}"
                MinWidth="75" />
        <Button Content="Register"
                Style="{StaticResource FilledButtonStyle}"
                MinWidth="75" />
      </utu:AutoLayout>
    </Grid>

    <!-- Mobile Header (Closed) -->
    <Grid x:Name="MobileHeaderClosed"
          Visibility="{x:Bind ShowMobileClosed, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
          BorderBrush="{StaticResource OutlineBrush}"
          BorderThickness="0,0,0,1"
          Padding="24"
          Height="72"
          VerticalAlignment="Top">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>

      <!-- Logo -->
      <Image Grid.Column="0"
             Width="28"
             Height="28"
             Source="ms-appx:///Assets/logo_figma.png"
             VerticalAlignment="Center" />

      <!-- Hamburger Icon -->
      <Button Grid.Column="2"
              Width="40"
              Height="40"
              Padding="8"
              Background="Transparent"
              BorderThickness="0"
              Click="OnToggleMenu">
        <FontIcon Glyph="&#xE700;"
                  FontSize="16"
                  Foreground="{StaticResource DefaultTextBrush}" />
      </Button>
    </Grid>

    <!-- Mobile Header (Open) -->
    <Grid x:Name="MobileHeaderOpen"
          Visibility="{x:Bind ShowMobileOpen, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
          Padding="24,32,24,32"
          VerticalAlignment="Stretch">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="0.25*" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <!-- Top Bar -->
      <Grid Grid.Row="0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Logo -->
        <Image Grid.Column="0"
               Width="28"
               Height="28"
               Source="ms-appx:///Assets/logo_figma.png"
               VerticalAlignment="Center" />

        <!-- Close Icon -->
        <Button Grid.Column="2"
                Width="40"
                Height="40"
                Padding="8"
                Background="Transparent"
                BorderThickness="0"
                Click="OnToggleMenu">
          <FontIcon Glyph="&#xE711;"
                    FontSize="16"
                    Foreground="{StaticResource DefaultTextBrush}" />
        </Button>
      </Grid>

      <!-- Spacer to push menu down to 25% -->
      <Grid Grid.Row="1" />

      <!-- Navigation List -->
      <StackPanel Grid.Row="2"
                  Spacing="8"
                  HorizontalAlignment="Stretch">
        <Border Padding="8">
          <TextBlock Text="Products"
                     Foreground="{StaticResource DefaultTextBrush}"
                     HorizontalAlignment="Center" />
        </Border>
        <Border Background="{StaticResource BrandTertiaryBrush}"
                CornerRadius="8"
                Padding="8"
                HorizontalAlignment="Stretch">
          <TextBlock Text="Solutions"
                     Foreground="{StaticResource DefaultTextBrush}"
                     HorizontalAlignment="Center" />
        </Border>
        <Border Padding="8">
          <TextBlock Text="Community"
                     Foreground="{StaticResource DefaultTextBrush}"
                     HorizontalAlignment="Center" />
        </Border>
        <Border Padding="8">
          <TextBlock Text="Resources"
                     Foreground="{StaticResource DefaultTextBrush}"
                     HorizontalAlignment="Center" />
        </Border>
        <Border Padding="8">
          <TextBlock Text="Pricing"
                     Foreground="{StaticResource DefaultTextBrush}"
                     HorizontalAlignment="Center" />
        </Border>
        <Border Padding="8">
          <TextBlock Text="Contact"
                     Foreground="{StaticResource DefaultTextBrush}"
                     HorizontalAlignment="Center" />
        </Border>
      </StackPanel>

      <!-- Flexible spacer -->
      <Grid Grid.Row="3" />

      <!-- Auth Buttons at Bottom -->
      <Grid Grid.Row="4"
            HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="12" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0"
                Content="Sign in"
                Style="{StaticResource OutlinedButtonStyle}"
                HorizontalAlignment="Stretch" />
        <Button Grid.Column="2"
                Content="Register"
                Style="{StaticResource FilledButtonStyle}"
                HorizontalAlignment="Stretch" />
      </Grid>
    </Grid>
  </Grid>
</UserControl>
