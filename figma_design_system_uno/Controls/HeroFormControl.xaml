<UserControl x:Class="figma_design_system_uno.Controls.HeroFormControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utu="using:Uno.Toolkit.UI"
             xmlns:converters="using:figma_design_system_uno.Converters">

    <Grid>
        <!-- Desktop Hero Form -->
        <Grid x:Name="DesktopHero" 
              Width="1200" 
              Background="{StaticResource SurfaceSecondaryBrush}"
              Padding="24,160"
              VerticalAlignment="Top"
              Visibility="{x:Bind IsMobile, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <utu:AutoLayout Orientation="Vertical" 
                          Spacing="32"
                          HorizontalAlignment="Center">
                
                <!-- Title & Subtitle -->
                <utu:AutoLayout Orientation="Vertical" 
                              Spacing="8">
                    <TextBlock Text="Title"
                             FontSize="72"
                             FontWeight="Bold"
                             Foreground="{StaticResource DefaultTextBrush}"
                             TextAlignment="Center"
                             HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Subtitle"
                             FontSize="32"
                             Foreground="{StaticResource SecondaryTextBrush}"
                             TextAlignment="Center"
                             HorizontalAlignment="Center"/>
                </utu:AutoLayout>

                <!-- Form Contact Card -->
                <Border Background="{StaticResource DefaultBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="24"
                        MinWidth="320">
                    <utu:AutoLayout Orientation="Vertical"
                                  Spacing="24">
                        
                        <!-- Name Field -->
                        <utu:AutoLayout Orientation="Vertical"
                                      Spacing="8"
                                      Width="272">
                            <TextBlock Text="Name"
                                     FontSize="16"
                                     Foreground="{StaticResource DefaultTextBrush}"/>
                            <TextBox PlaceholderText="Value"
                                   Height="40"
                                   Padding="16,12"
                                   CornerRadius="{StaticResource Radius200}"/>
                        </utu:AutoLayout>

                        <!-- Surname Field -->
                        <utu:AutoLayout Orientation="Vertical"
                                      Spacing="8"
                                      Width="272">
                            <TextBlock Text="Surname"
                                     FontSize="16"
                                     Foreground="{StaticResource DefaultTextBrush}"/>
                            <TextBox PlaceholderText="Value"
                                   Height="40"
                                   Padding="16,12"
                                   CornerRadius="{StaticResource Radius200}"/>
                        </utu:AutoLayout>

                        <!-- Email Field -->
                        <utu:AutoLayout Orientation="Vertical"
                                      Spacing="8"
                                      Width="272">
                            <TextBlock Text="Email"
                                     FontSize="16"
                                     Foreground="{StaticResource DefaultTextBrush}"/>
                            <TextBox PlaceholderText="Value"
                                   Height="40"
                                   Padding="16,12"
                                   CornerRadius="{StaticResource Radius200}"/>
                        </utu:AutoLayout>

                        <!-- Message Field -->
                        <utu:AutoLayout Orientation="Vertical"
                                      Spacing="8"
                                      Width="272">
                            <TextBlock Text="Message"
                                     FontSize="16"
                                     Foreground="{StaticResource DefaultTextBrush}"/>
                            <TextBox PlaceholderText="Value"
                                   MinHeight="80"
                                   Padding="16,12"
                                   CornerRadius="{StaticResource Radius200}"
                                   AcceptsReturn="True"
                                   TextWrapping="Wrap"/>
                        </utu:AutoLayout>

                        <!-- Submit Button -->
                        <Button Content="Submit"
                              Style="{StaticResource ButtonPrimaryStyle}"
                              Height="40"
                              Padding="12"
                              Width="272"
                              HorizontalAlignment="Stretch"/>
                    </utu:AutoLayout>
                </Border>
            </utu:AutoLayout>
        </Grid>

        <!-- Mobile Hero Form -->
        <Grid x:Name="MobileHero" 
              Width="375" 
              Background="{StaticResource SurfaceSecondaryBrush}"
              Padding="24,160"
              VerticalAlignment="Top"
              Visibility="{x:Bind IsMobile, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <utu:AutoLayout Orientation="Vertical" 
                          Spacing="32"
                          HorizontalAlignment="Center">
                
                <!-- Title & Subtitle -->
                <utu:AutoLayout Orientation="Vertical" 
                              Spacing="8">
                    <TextBlock Text="Title"
                             FontSize="48"
                             FontWeight="Bold"
                             Foreground="{StaticResource DefaultTextBrush}"
                             TextAlignment="Center"
                             HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Subtitle"
                             FontSize="32"
                             Foreground="{StaticResource SecondaryTextBrush}"
                             TextAlignment="Center"
                             HorizontalAlignment="Center"/>
                </utu:AutoLayout>

                <!-- Form Contact Card -->
                <Border Background="{StaticResource DefaultBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="24"
                        MinWidth="320"
                        Width="327">
                    <utu:AutoLayout Orientation="Vertical"
                                  Spacing="24">
                        
                        <!-- Name Field -->
                        <utu:AutoLayout Orientation="Vertical"
                                      Spacing="8">
                            <TextBlock Text="Name"
                                     FontSize="16"
                                     Foreground="{StaticResource DefaultTextBrush}"/>
                            <TextBox PlaceholderText="Value"
                                   Height="40"
                                   Padding="16,12"
                                   CornerRadius="{StaticResource Radius200}"
                                   MinWidth="240"/>
                        </utu:AutoLayout>

                        <!-- Surname Field -->
                        <utu:AutoLayout Orientation="Vertical"
                                      Spacing="8">
                            <TextBlock Text="Surname"
                                     FontSize="16"
                                     Foreground="{StaticResource DefaultTextBrush}"/>
                            <TextBox PlaceholderText="Value"
                                   Height="40"
                                   Padding="16,12"
                                   CornerRadius="{StaticResource Radius200}"
                                   MinWidth="240"/>
                        </utu:AutoLayout>

                        <!-- Email Field -->
                        <utu:AutoLayout Orientation="Vertical"
                                      Spacing="8">
                            <TextBlock Text="Email"
                                     FontSize="16"
                                     Foreground="{StaticResource DefaultTextBrush}"/>
                            <TextBox PlaceholderText="Value"
                                   Height="40"
                                   Padding="16,12"
                                   CornerRadius="{StaticResource Radius200}"
                                   MinWidth="240"/>
                        </utu:AutoLayout>

                        <!-- Message Field -->
                        <utu:AutoLayout Orientation="Vertical"
                                      Spacing="8">
                            <TextBlock Text="Message"
                                     FontSize="16"
                                     Foreground="{StaticResource DefaultTextBrush}"/>
                            <TextBox PlaceholderText="Value"
                                   MinHeight="80"
                                   Padding="16,12"
                                   CornerRadius="{StaticResource Radius200}"
                                   AcceptsReturn="True"
                                   TextWrapping="Wrap"
                                   MinWidth="240"/>
                        </utu:AutoLayout>

                        <!-- Submit Button -->
                        <Button Content="Submit"
                              Style="{StaticResource ButtonPrimaryStyle}"
                              Height="40"
                              Padding="12"
                              HorizontalAlignment="Stretch"/>
                    </utu:AutoLayout>
                </Border>
            </utu:AutoLayout>
        </Grid>
    </Grid>
</UserControl>
