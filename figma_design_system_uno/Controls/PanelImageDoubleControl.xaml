<UserControl x:Class="figma_design_system_uno.Controls.PanelImageDoubleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utu="using:Uno.Toolkit.UI">

  <Grid>
    <!-- Desktop View -->
    <Border Visibility="{x:Bind IsMobile, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"
            Width="1200"
            Background="{ThemeResource DefaultBackgroundBrush}"
            Opacity="0.8"
            Padding="64"
            VerticalAlignment="Top"
            HorizontalAlignment="Center">
      <utu:AutoLayout Orientation="Horizontal"
                      Spacing="48"
                      Height="400">
        <!-- Image 1 -->
        <Border Width="512"
                Background="{StaticResource BackgroundTertiaryBrush}">
          <Image Source="https://picsum.photos/512/272"
                 Stretch="UniformToFill"
                 Opacity="0.2"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center" />
        </Border>
        
        <!-- Image 2 -->
        <Border Width="512"
                Background="{StaticResource BackgroundTertiaryBrush}">
          <Image Source="https://picsum.photos/512/272"
                 Stretch="UniformToFill"
                 Opacity="0.2"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center" />
        </Border>
      </utu:AutoLayout>
    </Border>

    <!-- Mobile View -->
    <Border Visibility="{x:Bind IsMobile, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
            Width="375"
            Background="{ThemeResource DefaultBackgroundBrush}"
            Opacity="0.8"
            Padding="24"
            VerticalAlignment="Top"
            HorizontalAlignment="Center">
      <utu:AutoLayout Orientation="Vertical"
                      Spacing="24">
        <!-- Image 1 -->
        <Border Width="327"
                Height="200"
                Background="{StaticResource BackgroundTertiaryBrush}">
          <Image Source="https://picsum.photos/327/200"
                 Stretch="UniformToFill"
                 Opacity="0.2"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center" />
        </Border>
        
        <!-- Image 2 -->
        <Border Width="327"
                Height="200"
                Background="{StaticResource BackgroundTertiaryBrush}">
          <Image Source="https://picsum.photos/327/200"
                 Stretch="UniformToFill"
                 Opacity="0.2"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center" />
        </Border>
      </utu:AutoLayout>
    </Border>
  </Grid>

</UserControl>
