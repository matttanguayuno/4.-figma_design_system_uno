<UserControl x:Class="figma_design_system_uno.Controls.CardGridPricingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sds="using:Uno.Themes.SDS.Controls"
             xmlns:utu="using:Uno.Toolkit.UI">

    <Grid>
        <!-- Desktop View (3 columns horizontal) -->
        <utu:AutoLayout Orientation="Vertical"
                        Spacing="48"
                        Padding="64"
                        HorizontalAlignment="Center"
                        Visibility="{Binding IsMobile, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            
            <!-- Navigation Pills -->
            <utu:AutoLayout Orientation="Horizontal" Spacing="8">
                <Border Background="{ThemeResource BrandTertiaryBrush}"
                        Padding="8"
                        CornerRadius="8">
                    <TextBlock Text="Monthly"
                               Style="{StaticResource BodyMediumTextBlockStyle}"
                               Foreground="{ThemeResource OnBrandSecondaryBrush}" />
                </Border>
                <Border Padding="8" CornerRadius="8">
                    <TextBlock Text="Yearly"
                               Style="{StaticResource BodyMediumTextBlockStyle}"
                               Foreground="{ThemeResource TextDefaultBrush}" />
                </Border>
                <Border Padding="8" CornerRadius="8">
                    <TextBlock Text="Link"
                               Style="{StaticResource BodyMediumTextBlockStyle}"
                               Foreground="{ThemeResource TextDefaultBrush}" />
                </Border>
            </utu:AutoLayout>

            <!-- Pricing Cards Grid (Horizontal) -->
            <utu:AutoLayout Orientation="Horizontal" Spacing="64">
                <sds:PricingCard Title="Title"
                                 Price="50"
                                 Period=" / mo"
                                 Features="{Binding PricingFeatures}"
                                 ButtonText="Button"
                                 Style="{StaticResource LightDesktopPricingCardStyle}" />

                <sds:PricingCard Title="Title"
                                 Price="50"
                                 Period=" / mo"
                                 Features="{Binding PricingFeatures}"
                                 ButtonText="Button"
                                 Style="{StaticResource BrandedDesktopPricingCardStyle}" />

                <sds:PricingCard Title="Title"
                                 Price="50"
                                 Period=" / mo"
                                 Features="{Binding PricingFeatures}"
                                 ButtonText="Button"
                                 Style="{StaticResource LightDesktopPricingCardStyle}" />
            </utu:AutoLayout>
        </utu:AutoLayout>

        <!-- Mobile View (stacked vertical) -->
        <utu:AutoLayout Orientation="Vertical"
                        Spacing="24"
                        Padding="24"
                        HorizontalAlignment="Center"
                        Visibility="{Binding IsMobile, Converter={StaticResource BoolToVisibilityConverter}}">
            
            <!-- Navigation Pills -->
            <utu:AutoLayout Orientation="Horizontal" Spacing="8">
                <Border Background="{ThemeResource BrandTertiaryBrush}"
                        Padding="8"
                        CornerRadius="8">
                    <TextBlock Text="Monthly"
                               Style="{StaticResource BodyMediumTextBlockStyle}"
                               Foreground="{ThemeResource OnBrandSecondaryBrush}" />
                </Border>
                <Border Padding="8" CornerRadius="8">
                    <TextBlock Text="Yearly"
                               Style="{StaticResource BodyMediumTextBlockStyle}"
                               Foreground="{ThemeResource TextDefaultBrush}" />
                </Border>
                <Border Padding="8" CornerRadius="8">
                    <TextBlock Text="Link"
                               Style="{StaticResource BodyMediumTextBlockStyle}"
                               Foreground="{ThemeResource TextDefaultBrush}" />
                </Border>
            </utu:AutoLayout>

            <!-- Pricing Cards Stacked (Vertical) -->
            <utu:AutoLayout Orientation="Vertical" Spacing="24">
                <sds:PricingCard Title="Title"
                                 Price="50"
                                 Period=" / mo"
                                 Features="{Binding PricingFeatures}"
                                 ButtonText="Button"
                                 Style="{StaticResource LightMobilePricingCardStyle}" />

                <sds:PricingCard Title="Title"
                                 Price="50"
                                 Period=" / mo"
                                 Features="{Binding PricingFeatures}"
                                 ButtonText="Button"
                                 Style="{StaticResource BrandedMobilePricingCardStyle}" />

                <sds:PricingCard Title="Title"
                                 Price="50"
                                 Period=" / mo"
                                 Features="{Binding PricingFeatures}"
                                 ButtonText="Button"
                                 Style="{StaticResource LightMobilePricingCardStyle}" />
            </utu:AutoLayout>
        </utu:AutoLayout>
    </Grid>
</UserControl>
