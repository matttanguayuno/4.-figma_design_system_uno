                                       Style="{StaticResource CardHeadingTextBlockStyle}" />
                            <TextBlock Text="Body text for whatever you'd like to say. Add main takeaway points, quotes, anecdotes, or even a very very short story."
                                       Style="{StaticResource CardBodyTextBlockStyle}"
                                       TextWrapping="Wrap" />
                        </utu:AutoLayout>
                    </utu:AutoLayout>
                </Border>

                <!-- Card 3 -->
                <Border Background="{StaticResource SurfaceBrush}"
