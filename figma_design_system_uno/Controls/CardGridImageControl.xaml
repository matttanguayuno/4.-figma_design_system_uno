                                       Style="{StaticResource CardBodyTextBlockStyle}"
                                       TextWrapping="Wrap" />
                        </utu:AutoLayout>
                    </utu:AutoLayout>
                </Border>
            </utu:AutoLayout>
        </utu:AutoLayout>
    </Grid>
</UserControl>
