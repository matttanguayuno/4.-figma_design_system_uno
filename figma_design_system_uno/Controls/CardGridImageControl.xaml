<UserControl x:Class="figma_design_system_uno.Controls.CardGridImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utu="using:Uno.Toolkit.UI">

    <Grid>
        <!-- Desktop View -->
        <utu:AutoLayout Orientation="Vertical"
                        Spacing="48"
                        Padding="64"
                        HorizontalAlignment="Center"
                        Visibility="{Binding IsMobile, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            
            <!-- Heading Section -->
            <utu:AutoLayout Orientation="Vertical" Spacing="8">
                <TextBlock Text="Heading"
                           Style="{StaticResource HeadingTextBlockStyle}" />
                <TextBlock Text="Subheading"
                           Style="{StaticResource SubheadingTextBlockStyle}"
                           Foreground="{ThemeResource TextSecondaryBrush}" />
            </utu:AutoLayout>

            <!-- Cards Grid using ItemsRepeater with UniformGridLayout -->
            <ItemsRepeater ItemsSource="{Binding ImageCards}">
                <ItemsRepeater.Layout>
                    <UniformGridLayout MinItemWidth="320"
                                       ItemsStretch="None"
                                       MinColumnSpacing="48"
                                       MinRowSpacing="48" />
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource SurfaceBrush}"
                                BorderBrush="{StaticResource OutlineBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource Radius200}"
                                Padding="24"
                                Width="320"
                                MaxWidth="420">
                            <utu:AutoLayout Orientation="Vertical" Spacing="24">
                                <!-- Image Placeholder -->
                                <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                        CornerRadius="{StaticResource Radius200}"
                                        Width="160"
                                        Height="160">
                                    <Image Source="https://picsum.photos/160"
                                           Stretch="UniformToFill"
                                           Opacity="0.2" />
                                </Border>
                                
                                <!-- Text Content -->
                                <utu:AutoLayout Orientation="Vertical" Spacing="8">
                                    <TextBlock Text="Title"
                                               Style="{StaticResource CardHeadingTextBlockStyle}" />
                                    <TextBlock Text="Body text for whatever you'd like to say. Add main takeaway points, quotes, anecdotes, or even a very very short story."
                                               Style="{StaticResource CardBodyTextBlockStyle}"
                                               TextWrapping="Wrap" />
                                </utu:AutoLayout>
                            </utu:AutoLayout>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </utu:AutoLayout>

        <!-- Mobile View -->
        <utu:AutoLayout Orientation="Vertical"
                        Spacing="24"
                        Padding="24"
                        HorizontalAlignment="Stretch"
                        Visibility="{Binding IsMobile, Converter={StaticResource BoolToVisibilityConverter}}">
            
            <!-- Heading Section -->
            <utu:AutoLayout Orientation="Vertical" Spacing="8">
                <TextBlock Text="Heading"
                           Style="{StaticResource HeadingTextBlockStyle}" />
                <TextBlock Text="Subheading"
                           Style="{StaticResource SubheadingTextBlockStyle}"
                           Foreground="{ThemeResource TextSecondaryBrush}" />
            </utu:AutoLayout>

            <!-- Cards Stacked -->
            <utu:AutoLayout Orientation="Vertical" Spacing="48">
                
                <!-- Card 1 -->
                <Border Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource OutlineBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="24">
                    <utu:AutoLayout Orientation="Vertical" Spacing="24">
                        <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                CornerRadius="{StaticResource Radius200}"
                                Width="160"
                                Height="160">
                            <Image Source="https://picsum.photos/160"
                                   Stretch="UniformToFill"
                                   Opacity="0.2" />
                        </Border>
                        <utu:AutoLayout Orientation="Vertical" Spacing="8">
                            <TextBlock Text="Title"
                                       Style="{StaticResource CardHeadingTextBlockStyle}" />
                            <TextBlock Text="Body text for whatever you'd like to say. Add main takeaway points, quotes, anecdotes, or even a very very short story."
                                       Style="{StaticResource CardBodyTextBlockStyle}"
                                       TextWrapping="Wrap" />
                        </utu:AutoLayout>
                    </utu:AutoLayout>
                </Border>

                <!-- Card 2 -->
                <Border Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource OutlineBrush}"
                        BorderThickness="1"
