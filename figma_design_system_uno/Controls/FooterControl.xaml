<UserControl x:Class="figma_design_system_uno.Controls.FooterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utu="using:Uno.Toolkit.UI">

  <Grid Background="{StaticResource SurfaceBrush}">
    <!-- Desktop Footer -->
    <Grid x:Name="DesktopFooter"
          Visibility="{x:Bind IsMobile, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"
          BorderBrush="{StaticResource OutlineBrush}"
          BorderThickness="0,1,0,0"
          Padding="32"
          Width="1200"
          HorizontalAlignment="Center">
      <utu:AutoLayout Orientation="Vertical"
                      Spacing="16"
                      PrimaryAxisAlignment="Start">
        <!-- Top Row: Logo + Social Icons, then 3 columns -->
        <utu:AutoLayout Orientation="Horizontal"
                        Spacing="16"
                        PrimaryAxisAlignment="Start"
                        HorizontalAlignment="Stretch">
          <!-- Logo + Social Icons Column -->
          <utu:AutoLayout Orientation="Vertical"
                          Spacing="24"
                          Width="262">
            <!-- Logo -->
            <Image Width="28"
                   Height="42"
                   Source="ms-appx:///Assets/logo_figma.png"
                   HorizontalAlignment="Left"
                   Stretch="Uniform" />
            
            <!-- Social Icons -->
            <utu:AutoLayout Orientation="Horizontal"
                            Spacing="16">
              <Image Width="24"
                     Height="24"
                     Source="ms-appx:///Assets/Icons/x.png"
                     Stretch="Uniform" />
              <Image Width="24"
                     Height="24"
                     Source="ms-appx:///Assets/Icons/pinterest.png"
                     Stretch="Uniform" />
              <Image Width="24"
                     Height="24"
                     Source="ms-appx:///Assets/Icons/youtube.png"
                     Stretch="Uniform" />
              <Image Width="24"
                     Height="24"
                     Source="ms-appx:///Assets/Icons/linkedin.png"
                     Stretch="Uniform" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <!-- Use cases Column -->
          <utu:AutoLayout Orientation="Vertical"
                          Spacing="12"
                          Width="262">
            <!-- Title -->
            <Border Padding="0,0,0,16">
              <TextBlock Text="Use cases"
                         Style="{StaticResource BodyStrongTextBlockStyle}"
                         Foreground="{StaticResource DefaultTextBrush}" />
            </Border>
            
            <!-- Links -->
            <TextBlock Text="UI design"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="UX design"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Wireframing"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Diagramming"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Brainstorming"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Online whiteboard"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Team collaboration"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
          </utu:AutoLayout>

          <!-- Explore Column -->
          <utu:AutoLayout Orientation="Vertical"
                          Spacing="12"
                          Width="262">
            <!-- Title -->
            <Border Padding="0,0,0,16">
              <TextBlock Text="Explore"
                         Style="{StaticResource BodyStrongTextBlockStyle}"
                         Foreground="{StaticResource DefaultTextBrush}" />
            </Border>
            
            <!-- Links -->
            <TextBlock Text="Design"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Prototyping"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Development features"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Design systems"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Collaboration features"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Design process"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="FigJam"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
          </utu:AutoLayout>

          <!-- Resources Column -->
          <utu:AutoLayout Orientation="Vertical"
                          Spacing="12"
                          Width="262">
            <!-- Title -->
            <Border Padding="0,0,0,16">
              <TextBlock Text="Resources"
                         Style="{StaticResource BodyStrongTextBlockStyle}"
                         Foreground="{StaticResource DefaultTextBrush}" />
            </Border>
            
            <!-- Links -->
            <TextBlock Text="Blog"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Best practices"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Colors"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Color wheel"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Support"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Developers"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Resource library"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
          </utu:AutoLayout>
        </utu:AutoLayout>
      </utu:AutoLayout>
    </Grid>

    <!-- Mobile Footer -->
    <Grid x:Name="MobileFooter"
          Visibility="{x:Bind IsMobile, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
          BorderBrush="{StaticResource OutlineBrush}"
          BorderThickness="0,1,0,0"
          Padding="32"
          Width="375"
          HorizontalAlignment="Center">
      <utu:AutoLayout Orientation="Vertical"
                      Spacing="64"
                      HorizontalAlignment="Stretch">
        <!-- Logo + Social Icons -->
        <Grid HorizontalAlignment="Stretch">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          
          <!-- Logo -->
          <Image Grid.Column="0"
                 Width="28"
                 Height="42"
                 Source="ms-appx:///Assets/logo_figma.png"
                 Stretch="Uniform"
                 VerticalAlignment="Center" />
          
          <!-- Social Icons -->
          <utu:AutoLayout Grid.Column="2"
                          Orientation="Horizontal"
                          Spacing="16">
            <Image Width="24"
                   Height="24"
                   Source="ms-appx:///Assets/Icons/x.png"
                   Stretch="Uniform" />
            <Image Width="24"
                   Height="24"
                   Source="ms-appx:///Assets/Icons/pinterest.png"
                   Stretch="Uniform" />
            <Image Width="24"
                   Height="24"
                   Source="ms-appx:///Assets/Icons/youtube.png"
                   Stretch="Uniform" />
            <Image Width="24"
                   Height="24"
                   Source="ms-appx:///Assets/Icons/linkedin.png"
                   Stretch="Uniform" />
          </utu:AutoLayout>
        </Grid>

        <!-- Links Container -->
        <utu:AutoLayout Orientation="Vertical"
                        Spacing="24"
                        HorizontalAlignment="Stretch">
          <!-- Use cases Column -->
          <utu:AutoLayout Orientation="Vertical"
                          Spacing="8"
                          HorizontalAlignment="Stretch">
            <!-- Title -->
            <Border Padding="0,0,0,4">
              <TextBlock Text="Use cases"
                         Style="{StaticResource BodyStrongTextBlockStyle}"
                         Foreground="{StaticResource DefaultTextBrush}" />
            </Border>
            
            <!-- Links -->
            <TextBlock Text="UI design"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="UX design"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Wireframing"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Diagramming"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Brainstorming"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Online whiteboard"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Team collaboration"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
          </utu:AutoLayout>

          <!-- Explore Column -->
          <utu:AutoLayout Orientation="Vertical"
                          Spacing="8"
                          HorizontalAlignment="Stretch">
            <!-- Title -->
            <Border Padding="0,0,0,4">
              <TextBlock Text="Explore"
                         Style="{StaticResource BodyStrongTextBlockStyle}"
                         Foreground="{StaticResource DefaultTextBrush}" />
            </Border>
            
            <!-- Links -->
            <TextBlock Text="Design"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Prototyping"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Development features"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Design systems"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Collaboration features"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Design process"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="FigJam"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
          </utu:AutoLayout>

          <!-- Resources Column -->
          <utu:AutoLayout Orientation="Vertical"
                          Spacing="8"
                          HorizontalAlignment="Stretch">
            <!-- Title -->
            <Border Padding="0,0,0,4">
              <TextBlock Text="Resources"
                         Style="{StaticResource BodyStrongTextBlockStyle}"
                         Foreground="{StaticResource DefaultTextBrush}" />
            </Border>
            
            <!-- Links -->
            <TextBlock Text="Blog"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Best practices"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Colors"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Color wheel"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Support"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Developers"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
            <TextBlock Text="Resource library"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DefaultTextBrush}" />
          </utu:AutoLayout>
        </utu:AutoLayout>
      </utu:AutoLayout>
    </Grid>
  </Grid>
</UserControl>
