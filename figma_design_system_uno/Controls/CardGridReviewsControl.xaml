<UserControl x:Class="figma_design_system_uno.Controls.CardGridReviewsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utu="using:Uno.Toolkit.UI">

    <Grid>
        <!-- Desktop View -->
        <utu:AutoLayout Orientation="Vertical"
                        Spacing="48"
                        Padding="64"
                        HorizontalAlignment="Center"
                        Visibility="{Binding IsMobile, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            
            <!-- Heading -->
            <TextBlock Text="Latest reviews"
                       Style="{StaticResource HeadingTextBlockStyle}" />

            <!-- Cards Grid - wrapping grid with min width 390px -->
            <VariableSizedWrapGrid MaximumRowsOrColumns="3"
                                  Orientation="Horizontal"
                                  ItemWidth="390"
                                  ItemHeight="NaN">
                <!-- Review Card 1 -->
                <Border Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource OutlineBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="24"
                        Margin="0,0,48,48">
                    <utu:AutoLayout Orientation="Vertical" Spacing="24">
                        <!-- Rating -->
                        <utu:AutoLayout Orientation="Horizontal" Spacing="4">
                            <FontIcon Glyph="&#xE735;" FontSize="20" Foreground="#2C2C2C" />
                            <FontIcon Glyph="&#xE735;" FontSize="20" Foreground="#2C2C2C" />
                            <FontIcon Glyph="&#xE735;" FontSize="20" Foreground="#2C2C2C" />
                            <FontIcon Glyph="&#xE735;" FontSize="20" Foreground="#2C2C2C" />
                            <FontIcon Glyph="&#xE735;" FontSize="20" Foreground="#2C2C2C" />
                        </utu:AutoLayout>
                        
                        <!-- Review Body -->
                        <utu:AutoLayout Orientation="Vertical" Spacing="4">
                            <TextBlock Text="Review title"
                                       Style="{StaticResource CardHeadingTextBlockStyle}"
                                       TextWrapping="Wrap" />
                            <TextBlock Text="Review body"
                                       FontFamily="{StaticResource InterFontFamily}"
                                       FontSize="16"
                                       FontWeight="Normal"
                                       Foreground="{StaticResource TextBrush}"
                                       TextWrapping="Wrap" />
                        </utu:AutoLayout>
                        
                        <!-- Avatar Block -->
                        <utu:AutoLayout Orientation="Horizontal" Spacing="12">
                            <!-- Avatar -->
                            <Ellipse Width="40" Height="40">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="https://picsum.photos/id/64/200/200" Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>
                            
                            <!-- Info -->
                            <utu:AutoLayout Orientation="Vertical" Spacing="2">
                                <TextBlock Text="Reviewer name"
                                           FontFamily="{StaticResource InterFontFamily}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#757575" />
                                <TextBlock Text="Date"
                                           FontFamily="{StaticResource InterFontFamily}"
                                           FontSize="16"
                                           FontWeight="Normal"
                                           Foreground="#B3B3B3" />
                            </utu:AutoLayout>
                        </utu:AutoLayout>
                    </utu:AutoLayout>
                </Border>
                
                <!-- Review Card 2 -->
                <Border Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource OutlineBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="24"
                        Margin="0,0,48,48">
