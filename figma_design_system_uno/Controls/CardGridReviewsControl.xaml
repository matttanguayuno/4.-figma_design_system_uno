                            <TextBlock Text="Review body"
                                       FontFamily="{StaticResource InterFontFamily}"
                                       FontSize="16"
                                       FontWeight="Normal"
                                       Foreground="{StaticResource TextBrush}"
                                       TextWrapping="Wrap" />
                        </utu:AutoLayout>
                        
                        <!-- Avatar Block -->
