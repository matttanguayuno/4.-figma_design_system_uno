                                       FontFamily="{StaticResource InterFontFamily}"
                                       FontSize="16"
                                       FontWeight="Normal"
                                       Foreground="{StaticResource TextBrush}"
                                       TextWrapping="Wrap" />
                        </utu:AutoLayout>
                        
                        <!-- Avatar Block -->
                        <utu:AutoLayout Orientation="Horizontal" Spacing="12">
                            <!-- Avatar -->
                            <Ellipse Width="40" Height="40">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="https://picsum.photos/id/65/200/200" Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>
                            
                            <!-- Info -->
                            <utu:AutoLayout Orientation="Vertical" Spacing="2">
                                <TextBlock Text="Reviewer name"
                                           FontFamily="{StaticResource InterFontFamily}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#757575" />
                                <TextBlock Text="Date"
                                           FontFamily="{StaticResource InterFontFamily}"
                                           FontSize="16"
                                           FontWeight="Normal"
                                           Foreground="#B3B3B3" />
                            </utu:AutoLayout>
                        </utu:AutoLayout>
                    </utu:AutoLayout>
                </Border>
                
                <!-- Review Card 3 -->
