                            <!-- Avatar -->
                            <Ellipse Width="40" Height="40">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="https://picsum.photos/id/65/200/200" Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>
                            
                            <!-- Info -->
                            <utu:AutoLayout Orientation="Vertical" Spacing="2">
                                <TextBlock Text="Reviewer name"
                                           FontFamily="{StaticResource InterFontFamily}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
