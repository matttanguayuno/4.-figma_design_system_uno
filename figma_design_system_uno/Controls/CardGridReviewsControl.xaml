                    <utu:AutoLayout Orientation="Vertical" Spacing="24">
                        <!-- Rating -->
                        <utu:AutoLayout Orientation="Horizontal" Spacing="4">
                            <FontIcon Glyph="&#xE734;" FontSize="20" Foreground="#2C2C2C" />
