                            <FontIcon Glyph="&#xE734;" FontSize="20" Foreground="#2C2C2C" />
                            <FontIcon Glyph="&#xE734;" FontSize="20" Foreground="#2C2C2C" />
                            <FontIcon Glyph="&#xE734;" FontSize="20" Foreground="#2C2C2C" />
                        </utu:AutoLayout>
                        
                        <!-- Review Body -->
                        <utu:AutoLayout Orientation="Vertical" Spacing="4">
                            <TextBlock Text="Review title"
                                       Style="{StaticResource CardHeadingTextBlockStyle}"
                                       TextWrapping="NoWrap"
                                       TextTrimming="CharacterEllipsis" />
                            <TextBlock Text="Review body"
                                       FontFamily="{StaticResource InterFontFamily}"
                                       FontSize="16"
                                       FontWeight="Normal"
                                       Foreground="{StaticResource TextBrush}"
                                       TextWrapping="Wrap" />
                        </utu:AutoLayout>
                        
                        <!-- Avatar Block -->
                        <utu:AutoLayout Orientation="Horizontal" Spacing="12">
                            <!-- Avatar -->
                            <Ellipse Width="40" Height="40">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="https://picsum.photos/id/91/200/200" Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>
                            
