                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="https://picsum.photos/id/91/200/200" Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>
                            
                            <!-- Info -->
                            <utu:AutoLayout Orientation="Vertical" Spacing="2">
                                <TextBlock Text="Reviewer name"
                                           FontFamily="{StaticResource InterFontFamily}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#757575" />
                                <TextBlock Text="Date"
                                           FontFamily="{StaticResource InterFontFamily}"
                                           FontSize="16"
                                           FontWeight="Normal"
                                           Foreground="#B3B3B3" />
                            </utu:AutoLayout>
                        </utu:AutoLayout>
                    </utu:AutoLayout>
                </Border>
            </VariableSizedWrapGrid>
        </utu:AutoLayout>

