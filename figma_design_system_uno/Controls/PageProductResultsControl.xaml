<UserControl x:Class="figma_design_system_uno.Controls.PageProductResultsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:figma_design_system_uno.Presentation"
             xmlns:utu="using:Uno.Toolkit.UI"
             xmlns:sds="using:Uno.Themes.SDS.Controls">

    <UserControl.Resources>
        <local:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
    </UserControl.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <Grid Background="{StaticResource BackgroundBrush}">
            <!-- Desktop Layout -->
            <utu:AutoLayout x:Name="DesktopLayout"
                            Visibility="{x:Bind IsMobile, Mode=OneWay, Converter={StaticResource InverseBoolToVis}}"
                            Orientation="Horizontal"
                            Padding="32"
                            Spacing="64"
                            PrimaryAxisAlignment="Start"
                            CounterAxisAlignment="Start">
                
                <!-- Filter Sidebar -->
                <Border Background="{StaticResource BackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Width="240">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <utu:AutoLayout Orientation="Vertical" Spacing="24">
                            <!-- Keywords Section -->
                            <utu:AutoLayout Orientation="Vertical" Spacing="12">
                                <TextBlock Text="Keywords" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                                <VariableSizedWrapGrid Orientation="Horizontal" 
                                                       ItemWidth="80" 
                                                       ItemHeight="36"
                                                       MaximumRowsOrColumns="3">
                                    <Border Background="{StaticResource SecondaryBackgroundBrush}"
                                            Padding="8"
                                            CornerRadius="8"
                                            Margin="0,0,4,4">
                                        <utu:AutoLayout Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="Spring" 
                                                       Style="{StaticResource BodyTextBlockStyle}"/>
                                            <FontIcon Glyph="&#xE711;" FontSize="16"/>
                                        </utu:AutoLayout>
                                    </Border>
                                    <Border Background="{StaticResource SecondaryBackgroundBrush}"
                                            Padding="8"
                                            CornerRadius="8"
                                            Margin="0,0,4,4">
                                        <utu:AutoLayout Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="Smart" 
                                                       Style="{StaticResource BodyTextBlockStyle}"/>
                                            <FontIcon Glyph="&#xE711;" FontSize="16"/>
                                        </utu:AutoLayout>
                                    </Border>
                                    <Border Background="{StaticResource SecondaryBackgroundBrush}"
                                            Padding="8"
                                            CornerRadius="8"
                                            Margin="0,0,4,4">
                                        <utu:AutoLayout Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="Modern" 
                                                       Style="{StaticResource BodyTextBlockStyle}"/>
                                            <FontIcon Glyph="&#xE711;" FontSize="16"/>
                                        </utu:AutoLayout>
                                    </Border>
                                </VariableSizedWrapGrid>
                            </utu:AutoLayout>

                            <!-- Categories Section -->
                            <utu:AutoLayout Orientation="Vertical" Spacing="12">
                                <CheckBox IsChecked="True" VerticalContentAlignment="Top">
                                    <utu:AutoLayout Orientation="Vertical" Margin="0,-2,0,0">
                                        <TextBlock Text="Label" 
                                                   Style="{StaticResource BodyTextBlockStyle}"/>
                                        <TextBlock Text="Description" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </utu:AutoLayout>
                                </CheckBox>
                                <CheckBox IsChecked="True" VerticalContentAlignment="Top">
                                    <utu:AutoLayout Orientation="Vertical" Margin="0,-2,0,0">
                                        <TextBlock Text="Label" 
                                                   Style="{StaticResource BodyTextBlockStyle}"/>
                                        <TextBlock Text="Description" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </utu:AutoLayout>
                                </CheckBox>
                                <CheckBox VerticalContentAlignment="Top">
                                    <utu:AutoLayout Orientation="Vertical" Margin="0,-2,0,0">
                                        <TextBlock Text="Label" 
                                                   Style="{StaticResource BodyTextBlockStyle}"/>
                                        <TextBlock Text="Description" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </utu:AutoLayout>
                                </CheckBox>
                            </utu:AutoLayout>

                            <!-- Price Range Section -->
                            <utu:AutoLayout Orientation="Vertical" Spacing="8">
                                <Grid>
                                    <TextBlock Text="Label" 
                                               Style="{StaticResource BodyTextBlockStyle}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                                               HorizontalAlignment="Right">
                                        <Run Text="$"/><Run Text="{Binding ElementName=PriceRangeSlider, Path=RangeMin, Mode=OneWay, Converter={StaticResource RoundingConverter}}"/><Run Text="-"/><Run Text="{Binding ElementName=PriceRangeSlider, Path=RangeMax, Mode=OneWay, Converter={StaticResource RoundingConverter}}"/>
                                    </TextBlock>
                                </Grid>
                                <sds:RangeSlider x:Name="PriceRangeSlider"
                                                 Minimum="0" Maximum="100" 
                                                 RangeMin="0" RangeMax="100"
                                                 Background="{StaticResource OutlineBrush}"/>
                            </utu:AutoLayout>

                            <!-- Color Section -->
                            <utu:AutoLayout Orientation="Vertical" Spacing="12">
                                <TextBlock Text="Color" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                                <CheckBox Content="Label" IsChecked="True"/>
                                <CheckBox Content="Label" IsChecked="True"/>
                                <CheckBox Content="Label"/>
                            </utu:AutoLayout>

                            <!-- Size Section -->
                            <utu:AutoLayout Orientation="Vertical" Spacing="12">
                                <TextBlock Text="Size" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                                <CheckBox Content="Label" IsChecked="True"/>
                                <CheckBox Content="Label" IsChecked="True"/>
                                <CheckBox Content="Label"/>
                            </utu:AutoLayout>
                        </utu:AutoLayout>
                    </ScrollViewer>
                </Border>

                <!-- Products Area -->
                <utu:AutoLayout Orientation="Vertical" Spacing="48">
                    <!-- Filter Bar -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Search -->
                        <Grid Grid.Column="0" Width="327" Margin="0,0,24,0">
                            <TextBox PlaceholderText="Search"
                                     Height="44"
                                     CornerRadius="22"
                                     Padding="16,12,44,12"
                                     VerticalContentAlignment="Center"/>
                            <FontIcon Glyph="&#xE721;" 
                                      FontSize="16"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Margin="0,0,16,0"
                                      Foreground="{StaticResource TextTertiaryBrush}"/>
                        </Grid>

                        <!-- Filter Toggle Buttons -->
                        <utu:AutoLayout Grid.Column="2" Orientation="Horizontal" Spacing="8">
                            <Button Style="{StaticResource SelectedFilterButtonStyle}" 
                                    Height="40"
                                    Padding="8"
                                    CornerRadius="8">
                                <utu:AutoLayout Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE73E;" FontSize="16"/>
                                    <TextBlock Text="New" 
                                               Style="{StaticResource BodyTextBlockStyle}"/>
                                </utu:AutoLayout>
                            </Button>
                            <Button Style="{StaticResource UnselectedFilterButtonStyle}"
                                    Height="40"
                                    Padding="8"
                                    CornerRadius="8">
                                <TextBlock Text="Price ascending" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                            </Button>
                            <Button Style="{StaticResource UnselectedFilterButtonStyle}"
                                    Height="40"
                                    Padding="8"
                                    CornerRadius="8">
                                <TextBlock Text="Price descending" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                            </Button>
                            <Button Style="{StaticResource UnselectedFilterButtonStyle}"
                                    Height="40"
                                    Padding="8"
                                    CornerRadius="8">
                                <TextBlock Text="Rating" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                            </Button>
                        </utu:AutoLayout>
                    </Grid>

                    <!-- Product Grid -->
                    <VariableSizedWrapGrid MaximumRowsOrColumns="3"
                                          Orientation="Horizontal"
                                          ItemWidth="240"
                                          ItemHeight="NaN">
                        <Border Background="{StaticResource BackgroundBrush}"
                                BorderBrush="{StaticResource OutlineBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,24,24">
                            <utu:AutoLayout Orientation="Vertical" Spacing="16">
                                <Image Source="ms-appx:///Assets/Image.png" 
                                       Height="247"
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                <utu:AutoLayout Orientation="Vertical" Spacing="8">
                                    <TextBlock Text="Text" 
                                               Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock Text="$0" 
                                               Style="{StaticResource BodyTextBlockStyle}"
                                               FontWeight="SemiBold"/>
                                </utu:AutoLayout>
                            </utu:AutoLayout>
                        </Border>
                        <Border Background="{StaticResource BackgroundBrush}"
                                BorderBrush="{StaticResource OutlineBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,24,24">
                            <utu:AutoLayout Orientation="Vertical" Spacing="16">
                                <Grid Height="247">
                                    <Rectangle Fill="{StaticResource BackgroundTertiaryBrush}"/>
                                    <Image Source="ms-appx:///Assets/Image.png" 
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                </Grid>
                                <utu:AutoLayout Orientation="Vertical" Spacing="8">
                                    <TextBlock Text="Text" 
                                               Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock Text="$0" 
                                               Style="{StaticResource BodyTextBlockStyle}"
                                               FontWeight="SemiBold"/>
                                </utu:AutoLayout>
                            </utu:AutoLayout>
                        </Border>
                        <Border Background="{StaticResource BackgroundBrush}"
                                BorderBrush="{StaticResource OutlineBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,24,24">
                            <utu:AutoLayout Orientation="Vertical" Spacing="16">
                                <Grid Height="247">
                                    <Rectangle Fill="{StaticResource BackgroundTertiaryBrush}"/>
                                    <Image Source="ms-appx:///Assets/Image.png" 
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                </Grid>
                                <utu:AutoLayout Orientation="Vertical" Spacing="8">
                                    <TextBlock Text="Text" 
                                               Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock Text="$0" 
                                               Style="{StaticResource BodyTextBlockStyle}"
                                               FontWeight="SemiBold"/>
                                </utu:AutoLayout>
                            </utu:AutoLayout>
                        </Border>
                        <Border Background="{StaticResource BackgroundBrush}"
                                BorderBrush="{StaticResource OutlineBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,24,24">
                            <utu:AutoLayout Orientation="Vertical" Spacing="16">
                                <Grid Height="247">
                                    <Rectangle Fill="{StaticResource BackgroundTertiaryBrush}"/>
                                    <Image Source="ms-appx:///Assets/Image.png" 
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                </Grid>
                                <utu:AutoLayout Orientation="Vertical" Spacing="8">
                                    <TextBlock Text="Text" 
                                               Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock Text="$0" 
                                               Style="{StaticResource BodyTextBlockStyle}"
                                               FontWeight="SemiBold"/>
                                </utu:AutoLayout>
                            </utu:AutoLayout>
                        </Border>
                        <Border Background="{StaticResource BackgroundBrush}"
                                BorderBrush="{StaticResource OutlineBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,24,24">
                            <utu:AutoLayout Orientation="Vertical" Spacing="16">
                                <Grid Height="247">
                                    <Rectangle Fill="{StaticResource BackgroundTertiaryBrush}"/>
                                    <Image Source="ms-appx:///Assets/Image.png" 
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                </Grid>
                                <utu:AutoLayout Orientation="Vertical" Spacing="8">
                                    <TextBlock Text="Text" 
                                               Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock Text="$0" 
                                               Style="{StaticResource BodyTextBlockStyle}"
                                               FontWeight="SemiBold"/>
                                </utu:AutoLayout>
                            </utu:AutoLayout>
                        </Border>
                        <Border Background="{StaticResource BackgroundBrush}"
                                BorderBrush="{StaticResource OutlineBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,24,24">
                            <utu:AutoLayout Orientation="Vertical" Spacing="16">
                                <Grid Height="247">
                                    <Rectangle Fill="{StaticResource BackgroundTertiaryBrush}"/>
                                    <Image Source="ms-appx:///Assets/Image.png" 
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                </Grid>
                                <utu:AutoLayout Orientation="Vertical" Spacing="8">
                                    <TextBlock Text="Text" 
                                               Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock Text="$0" 
                                               Style="{StaticResource BodyTextBlockStyle}"
                                               FontWeight="SemiBold"/>
                                </utu:AutoLayout>
                            </utu:AutoLayout>
                        </Border>
                    </VariableSizedWrapGrid>
                </utu:AutoLayout>
            </utu:AutoLayout>

            <!-- Mobile Layout -->
            <utu:AutoLayout x:Name="MobileLayout"
                            Visibility="{x:Bind IsMobile, Mode=OneWay, Converter={StaticResource BoolToVis}}"
                            Orientation="Vertical"
                            Padding="24"
                            Spacing="24">
                <!-- Search and Filter Button -->
                <utu:AutoLayout Orientation="Horizontal" Spacing="24" PrimaryAxisAlignment="Stretch">
                    <!-- Search -->
                    <Grid>
                        <TextBox PlaceholderText="Search"
                                 Height="44"
                                 CornerRadius="22"
                                 Padding="16,12,44,12"
                                 VerticalContentAlignment="Center"
                                 Width="279"/>
                        <FontIcon Glyph="&#xE721;" 
                                  FontSize="16"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,16,0"
                                  Foreground="{StaticResource TextTertiaryBrush}"/>
                    </Grid>

                    <!-- Filter Button -->
                    <Button Style="{StaticResource AccentButtonStyle}"
                            Width="44"
                            Height="44"
                            Padding="0"
                            CornerRadius="22">
                        <FontIcon Glyph="&#xE71C;" FontSize="20"/>
                    </Button>
                </utu:AutoLayout>

                <!-- Filter Toggle Buttons -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled">
                    <utu:AutoLayout Orientation="Horizontal" Spacing="8">
                        <Button Style="{StaticResource SelectedFilterButtonStyle}" 
                                Height="40"
                                Padding="8"
                                CornerRadius="8">
                            <utu:AutoLayout Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE73E;" FontSize="16"/>
                                <TextBlock Text="New" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                            </utu:AutoLayout>
                        </Button>
                        <Button Style="{StaticResource UnselectedFilterButtonStyle}"
                                Height="40"
                                Padding="8"
                                CornerRadius="8">
                            <TextBlock Text="Price ascending" 
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                        </Button>
                        <Button Style="{StaticResource UnselectedFilterButtonStyle}"
                                Height="40"
                                Padding="8"
                                CornerRadius="8">
                            <TextBlock Text="Price descending" 
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                        </Button>
                        <Button Style="{StaticResource UnselectedFilterButtonStyle}"
                                Height="40"
                                Padding="8"
                                CornerRadius="8">
                            <TextBlock Text="Rating" 
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                        </Button>
                    </utu:AutoLayout>
                </ScrollViewer>

                <!-- Product Grid (2 columns for mobile) -->
                <VariableSizedWrapGrid MaximumRowsOrColumns="2"
                                      Orientation="Horizontal"
                                      ItemWidth="153"
                                      ItemHeight="NaN">
                    <Border Background="{StaticResource BackgroundBrush}"
                            BorderBrush="{StaticResource OutlineBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,12,24">
                        <utu:AutoLayout Orientation="Vertical" Spacing="16">
                            <Image Source="ms-appx:///Assets/Image.png" 
                                   Height="121" 
                                   Width="121"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                            <utu:AutoLayout Orientation="Vertical" Spacing="8">
                                <TextBlock Text="Text" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="$0" 
                                           Style="{StaticResource BodyTextBlockStyle}"
                                           FontWeight="SemiBold"/>
                            </utu:AutoLayout>
                        </utu:AutoLayout>
                    </Border>
                    <Border Background="{StaticResource BackgroundBrush}"
                            BorderBrush="{StaticResource OutlineBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,12,24">
                        <utu:AutoLayout Orientation="Vertical" Spacing="16">
                            <Grid Height="121" Width="121">
                                <Rectangle Fill="{StaticResource BackgroundTertiaryBrush}"/>
                                <Image Source="ms-appx:///Assets/Image.png" 
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </Grid>
                            <utu:AutoLayout Orientation="Vertical" Spacing="8">
                                <TextBlock Text="Text" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="$0" 
                                           Style="{StaticResource BodyTextBlockStyle}"
                                           FontWeight="SemiBold"/>
                            </utu:AutoLayout>
                        </utu:AutoLayout>
                    </Border>
                    <Border Background="{StaticResource BackgroundBrush}"
                            BorderBrush="{StaticResource OutlineBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,12,24">
                        <utu:AutoLayout Orientation="Vertical" Spacing="16">
                            <Grid Height="121" Width="121">
                                <Rectangle Fill="{StaticResource BackgroundTertiaryBrush}"/>
                                <Image Source="ms-appx:///Assets/Image.png" 
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </Grid>
                            <utu:AutoLayout Orientation="Vertical" Spacing="8">
                                <TextBlock Text="Text" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="$0" 
                                           Style="{StaticResource BodyTextBlockStyle}"
                                           FontWeight="SemiBold"/>
                            </utu:AutoLayout>
                        </utu:AutoLayout>
                    </Border>
                    <Border Background="{StaticResource BackgroundBrush}"
                            BorderBrush="{StaticResource OutlineBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,12,24">
                        <utu:AutoLayout Orientation="Vertical" Spacing="16">
                            <Grid Height="121" Width="121">
                                <Rectangle Fill="{StaticResource BackgroundTertiaryBrush}"/>
                                <Image Source="ms-appx:///Assets/Image.png" 
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </Grid>
                            <utu:AutoLayout Orientation="Vertical" Spacing="8">
                                <TextBlock Text="Text" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="$0" 
                                           Style="{StaticResource BodyTextBlockStyle}"
                                           FontWeight="SemiBold"/>
                            </utu:AutoLayout>
                        </utu:AutoLayout>
                    </Border>
                    <Border Background="{StaticResource BackgroundBrush}"
                            BorderBrush="{StaticResource OutlineBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,12,24">
                        <utu:AutoLayout Orientation="Vertical" Spacing="16">
                            <Grid Height="121" Width="121">
                                <Rectangle Fill="{StaticResource BackgroundTertiaryBrush}"/>
                                <Image Source="ms-appx:///Assets/Image.png" 
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </Grid>
                            <utu:AutoLayout Orientation="Vertical" Spacing="8">
                                <TextBlock Text="Text" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="$0" 
                                           Style="{StaticResource BodyTextBlockStyle}"
                                           FontWeight="SemiBold"/>
                            </utu:AutoLayout>
                        </utu:AutoLayout>
                    </Border>
                    <Border Background="{StaticResource BackgroundBrush}"
                            BorderBrush="{StaticResource OutlineBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,12,24">
                        <utu:AutoLayout Orientation="Vertical" Spacing="16">
                            <Grid Height="121" Width="121">
                                <Rectangle Fill="{StaticResource BackgroundTertiaryBrush}"/>
                                <Image Source="ms-appx:///Assets/Image.png" 
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </Grid>
                            <utu:AutoLayout Orientation="Vertical" Spacing="8">
                                <TextBlock Text="Text" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="$0" 
                                           Style="{StaticResource BodyTextBlockStyle}"
                                           FontWeight="SemiBold"/>
                            </utu:AutoLayout>
                        </utu:AutoLayout>
                    </Border>
                </VariableSizedWrapGrid>
            </utu:AutoLayout>
        </Grid>
    </ScrollViewer>
</UserControl>
