<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Control the spacing between checkbox and content -->
  <x:Double x:Key="CheckBoxPadding">0</x:Double>

  <!-- Override CheckBox color resources only (no style changes) -->
  <ResourceDictionary.ThemeDictionaries>
    <ResourceDictionary x:Key="Light">
      <!-- Checked State (Pressed/PointerOver/Normal) -->
      <SolidColorBrush x:Key="CheckBoxCheckGlyphFillChecked" Color="#f5f5f5" />
      <SolidColorBrush x:Key="CheckBoxCheckGlyphFillCheckedPointerOver" Color="#f5f5f5" />
      <SolidColorBrush x:Key="CheckBoxCheckGlyphFillCheckedPressed" Color="#f5f5f5" />
      
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillChecked" Color="#2c2c2c" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillCheckedPointerOver" Color="#2c2c2c" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillCheckedPressed" Color="#2c2c2c" />
      
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeChecked" Color="#2c2c2c" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeCheckedPointerOver" Color="#2c2c2c" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeCheckedPressed" Color="#2c2c2c" />

      <!-- Unchecked State -->
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUnchecked" Color="#757575" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedPointerOver" Color="#757575" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedPressed" Color="#757575" />
      
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUnchecked" Color="#ffffff" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUncheckedPointerOver" Color="#ffffff" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUncheckedPressed" Color="#ffffff" />

      <!-- Indeterminate State -->
      <SolidColorBrush x:Key="CheckBoxCheckGlyphFillIndeterminate" Color="#f5f5f5" />
      <SolidColorBrush x:Key="CheckBoxCheckGlyphFillIndeterminatePointerOver" Color="#f5f5f5" />
      <SolidColorBrush x:Key="CheckBoxCheckGlyphFillIndeterminatePressed" Color="#f5f5f5" />
      
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillIndeterminate" Color="#2c2c2c" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillIndeterminatePointerOver" Color="#2c2c2c" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillIndeterminatePressed" Color="#2c2c2c" />
      
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeIndeterminate" Color="#2c2c2c" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeIndeterminatePointerOver" Color="#2c2c2c" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeIndeterminatePressed" Color="#2c2c2c" />

      <!-- Disabled State - Checked -->
      <SolidColorBrush x:Key="CheckBoxCheckGlyphFillCheckedDisabled" Color="#b3b3b3" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillCheckedDisabled" Color="#d9d9d9" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeCheckedDisabled" Color="#b2b2b2" />

      <!-- Disabled State - Unchecked -->
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUncheckedDisabled" Color="#d9d9d9" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedDisabled" Color="#b2b2b2" />

      <!-- Disabled State - Indeterminate -->
      <SolidColorBrush x:Key="CheckBoxCheckGlyphFillIndeterminateDisabled" Color="#b3b3b3" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillIndeterminateDisabled" Color="#d9d9d9" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeIndeterminateDisabled" Color="#b2b2b2" />
    </ResourceDictionary>

    <ResourceDictionary x:Key="Dark">
      <!-- For dark theme, use same colors as light (Figma specs are the same) -->
      <SolidColorBrush x:Key="CheckBoxCheckGlyphFillChecked" Color="#f5f5f5" />
      <SolidColorBrush x:Key="CheckBoxCheckGlyphFillCheckedPointerOver" Color="#f5f5f5" />
      <SolidColorBrush x:Key="CheckBoxCheckGlyphFillCheckedPressed" Color="#f5f5f5" />
      
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillChecked" Color="#2c2c2c" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillCheckedPointerOver" Color="#2c2c2c" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillCheckedPressed" Color="#2c2c2c" />
      
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeChecked" Color="#2c2c2c" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeCheckedPointerOver" Color="#2c2c2c" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeCheckedPressed" Color="#2c2c2c" />

      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUnchecked" Color="#757575" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedPointerOver" Color="#757575" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedPressed" Color="#757575" />
      
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUnchecked" Color="#ffffff" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUncheckedPointerOver" Color="#ffffff" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUncheckedPressed" Color="#ffffff" />

      <SolidColorBrush x:Key="CheckBoxCheckGlyphFillIndeterminate" Color="#f5f5f5" />
      <SolidColorBrush x:Key="CheckBoxCheckGlyphFillIndeterminatePointerOver" Color="#f5f5f5" />
      <SolidColorBrush x:Key="CheckBoxCheckGlyphFillIndeterminatePressed" Color="#f5f5f5" />
      
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillIndeterminate" Color="#2c2c2c" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillIndeterminatePointerOver" Color="#2c2c2c" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillIndeterminatePressed" Color="#2c2c2c" />
      
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeIndeterminate" Color="#2c2c2c" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeIndeterminatePointerOver" Color="#2c2c2c" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeIndeterminatePressed" Color="#2c2c2c" />

      <SolidColorBrush x:Key="CheckBoxCheckGlyphFillCheckedDisabled" Color="#b3b3b3" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillCheckedDisabled" Color="#d9d9d9" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeCheckedDisabled" Color="#b2b2b2" />

      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillUncheckedDisabled" Color="#d9d9d9" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedDisabled" Color="#b2b2b2" />

      <SolidColorBrush x:Key="CheckBoxCheckGlyphFillIndeterminateDisabled" Color="#b3b3b3" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundFillIndeterminateDisabled" Color="#d9d9d9" />
      <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeIndeterminateDisabled" Color="#b2b2b2" />
    </ResourceDictionary>
  </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
