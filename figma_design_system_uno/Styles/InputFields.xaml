<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- TextBox color overrides -->
  <ResourceDictionary.ThemeDictionaries>
    <ResourceDictionary x:Key="Light">
      <!-- Placeholder text color - lighter gray for visibility on white background -->
      <SolidColorBrush x:Key="TextControlPlaceholderForeground" Color="{StaticResource OnSurfaceMediumColor}" />
      <SolidColorBrush x:Key="TextControlPlaceholderForegroundPointerOver" Color="{StaticResource OnSurfaceMediumColor}" />
      <SolidColorBrush x:Key="TextControlPlaceholderForegroundFocused" Color="{StaticResource OnSurfaceMediumColor}" />
      <SolidColorBrush x:Key="TextControlPlaceholderForegroundDisabled" Color="{StaticResource OnSurfaceLowColor}" />
      
      <!-- Disabled background and border -->
      <SolidColorBrush x:Key="TextControlBackgroundDisabled" Color="{StaticResource DisabledColor}" />
      <SolidColorBrush x:Key="TextControlBorderBrushDisabled" Color="{StaticResource SDSInputDisabledBorderColor}" />
    </ResourceDictionary>
    
    <ResourceDictionary x:Key="Dark">
      <!-- Same for dark theme -->
      <SolidColorBrush x:Key="TextControlPlaceholderForeground" Color="{StaticResource OnSurfaceMediumColor}" />
      <SolidColorBrush x:Key="TextControlPlaceholderForegroundPointerOver" Color="{StaticResource OnSurfaceMediumColor}" />
      <SolidColorBrush x:Key="TextControlPlaceholderForegroundFocused" Color="{StaticResource OnSurfaceMediumColor}" />
      <SolidColorBrush x:Key="TextControlPlaceholderForegroundDisabled" Color="{StaticResource OnSurfaceLowColor}" />
      
      <SolidColorBrush x:Key="TextControlBackgroundDisabled" Color="{StaticResource DisabledColor}" />
      <SolidColorBrush x:Key="TextControlBorderBrushDisabled" Color="{StaticResource SDSInputDisabledBorderColor}" />
    </ResourceDictionary>
  </ResourceDictionary.ThemeDictionaries>

  <!-- TextBox style for Input Fields to match Figma design -->
  <Style x:Key="InputFieldTextBoxStyle" TargetType="TextBox">
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="FontFamily" Value="Inter" />
    <Setter Property="FontSize" Value="16" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="Foreground" Value="#1e1e1e" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="HorizontalContentAlignment" Value="Left" />
    <Setter Property="TextWrapping" Value="NoWrap" />
    <Setter Property="PlaceholderForeground" Value="{ThemeResource TextControlPlaceholderForeground}" />
  </Style>

</ResourceDictionary>
