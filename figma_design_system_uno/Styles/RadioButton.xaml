<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Light Theme Resources -->
  <ResourceDictionary.ThemeDictionaries>
    <ResourceDictionary x:Key="Light">
      <!-- Checked state colors -->
      <SolidColorBrush x:Key="RadioButtonFillChecked" Color="#e6e6e6" />
      <SolidColorBrush x:Key="RadioButtonStrokeChecked" Color="#2c2c2c" />
      <SolidColorBrush x:Key="RadioButtonDotChecked" Color="#2c2c2c" />
      
      <!-- Unchecked state colors -->
      <SolidColorBrush x:Key="RadioButtonFillUnchecked" Color="White" />
      <SolidColorBrush x:Key="RadioButtonStrokeUnchecked" Color="#757575" />
      
      <!-- Disabled state colors -->
      <SolidColorBrush x:Key="RadioButtonFillDisabled" Color="#d9d9d9" />
      <SolidColorBrush x:Key="RadioButtonStrokeDisabled" Color="#b3b3b3" />
      <SolidColorBrush x:Key="RadioButtonDotDisabled" Color="#b3b3b3" />
    </ResourceDictionary>

    <ResourceDictionary x:Key="Dark">
      <!-- Checked state colors -->
      <SolidColorBrush x:Key="RadioButtonFillChecked" Color="#e6e6e6" />
      <SolidColorBrush x:Key="RadioButtonStrokeChecked" Color="#2c2c2c" />
      <SolidColorBrush x:Key="RadioButtonDotChecked" Color="#2c2c2c" />
      
      <!-- Unchecked state colors -->
      <SolidColorBrush x:Key="RadioButtonFillUnchecked" Color="White" />
      <SolidColorBrush x:Key="RadioButtonStrokeUnchecked" Color="#757575" />
      
      <!-- Disabled state colors -->
      <SolidColorBrush x:Key="RadioButtonFillDisabled" Color="#d9d9d9" />
      <SolidColorBrush x:Key="RadioButtonStrokeDisabled" Color="#b3b3b3" />
      <SolidColorBrush x:Key="RadioButtonDotDisabled" Color="#b3b3b3" />
    </ResourceDictionary>
  </ResourceDictionary.ThemeDictionaries>

  <!-- RadioButton Style -->
  <Style TargetType="RadioButton">
    <Setter Property="MinWidth" Value="0" />
    <Setter Property="MinHeight" Value="0" />
    <Setter Property="Width" Value="16" />
    <Setter Property="Height" Value="16" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="RadioButton">
          <Grid>
            <VisualStateManager.VisualStateGroups>
              <!-- CommonStates: Normal, PointerOver, Pressed, Disabled -->
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal" />
                <VisualState x:Name="PointerOver" />
                <VisualState x:Name="Pressed" />
                
                <!-- Disabled state - applies gray colors regardless of checked state -->
                <VisualState x:Name="Disabled">
                  <VisualState.Setters>
                    <Setter Target="OuterEllipse.Fill" Value="{ThemeResource RadioButtonFillDisabled}" />
                    <Setter Target="OuterEllipse.Stroke" Value="{ThemeResource RadioButtonStrokeDisabled}" />
                    <Setter Target="InnerEllipse.Fill" Value="{ThemeResource RadioButtonDotDisabled}" />
                  </VisualState.Setters>
                </VisualState>
              </VisualStateGroup>
              
              <!-- CheckStates: Checked, Unchecked -->
              <VisualStateGroup x:Name="CheckStates">
                <VisualState x:Name="Unchecked">
                  <VisualState.Setters>
                    <Setter Target="InnerEllipse.Opacity" Value="0" />
                  </VisualState.Setters>
                </VisualState>
                
                <VisualState x:Name="Checked">
                  <VisualState.Setters>
                    <Setter Target="OuterEllipse.Fill" Value="{ThemeResource RadioButtonFillChecked}" />
                    <Setter Target="OuterEllipse.Stroke" Value="{ThemeResource RadioButtonStrokeChecked}" />
                    <Setter Target="InnerEllipse.Fill" Value="{ThemeResource RadioButtonDotChecked}" />
                    <Setter Target="InnerEllipse.Opacity" Value="1" />
                  </VisualState.Setters>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>

            <!-- Outer Circle -->
            <Ellipse x:Name="OuterEllipse"
                     Width="16"
                     Height="16"
                     Fill="{ThemeResource RadioButtonFillUnchecked}"
                     Stroke="{ThemeResource RadioButtonStrokeUnchecked}"
                     StrokeThickness="1" />

            <!-- Inner Dot (shown when checked) -->
            <Ellipse x:Name="InnerEllipse"
                     Width="6"
                     Height="6"
                     Fill="{ThemeResource RadioButtonDotChecked}"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Opacity="0" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>
