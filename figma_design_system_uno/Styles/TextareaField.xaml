<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- TextBox color overrides for Textarea Field (multi-line) -->
  <ResourceDictionary.ThemeDictionaries>
    <ResourceDictionary x:Key="Light">
      <!-- Default state -->
      <SolidColorBrush x:Key="TextAreaBackground" Color="{StaticResource SurfaceColor}" />
      <SolidColorBrush x:Key="TextAreaBorderBrush" Color="{StaticResource DisabledColor}" />
      <SolidColorBrush x:Key="TextAreaForeground" Color="{StaticResource OnSurfaceColor}" />
      <SolidColorBrush x:Key="TextAreaPlaceholderForeground" Color="{StaticResource OnSurfaceLowColor}" />
      
      <!-- Disabled state -->
      <SolidColorBrush x:Key="TextAreaBackgroundDisabled" Color="{StaticResource DisabledColor}" />
      <SolidColorBrush x:Key="TextAreaBorderBrushDisabled" Color="{StaticResource SDSInputDisabledBorderColor}" />
      <SolidColorBrush x:Key="TextAreaForegroundDisabled" Color="{StaticResource OnSurfaceLowColor}" />
      
      <!-- Error state -->
      <SolidColorBrush x:Key="TextAreaErrorBorderBrush" Color="{StaticResource SDSTagDangerSecondaryForegroundColor}" />
    </ResourceDictionary>
    
    <ResourceDictionary x:Key="Dark">
      <!-- Same for dark theme -->
      <SolidColorBrush x:Key="TextAreaBackground" Color="{StaticResource SurfaceColor}" />
      <SolidColorBrush x:Key="TextAreaBorderBrush" Color="{StaticResource DisabledColor}" />
      <SolidColorBrush x:Key="TextAreaForeground" Color="{StaticResource OnSurfaceColor}" />
      <SolidColorBrush x:Key="TextAreaPlaceholderForeground" Color="{StaticResource OnSurfaceLowColor}" />
      
      <SolidColorBrush x:Key="TextAreaBackgroundDisabled" Color="{StaticResource DisabledColor}" />
      <SolidColorBrush x:Key="TextAreaBorderBrushDisabled" Color="{StaticResource SDSInputDisabledBorderColor}" />
      <SolidColorBrush x:Key="TextAreaForegroundDisabled" Color="{StaticResource OnSurfaceLowColor}" />
      
      <SolidColorBrush x:Key="TextAreaErrorBorderBrush" Color="{StaticResource SDSTagDangerSecondaryForegroundColor}" />
    </ResourceDictionary>
  </ResourceDictionary.ThemeDictionaries>

  <!-- Base TextBox style for Textarea Field -->
  <Style x:Key="TextareaFieldTextBoxStyle" TargetType="TextBox">
    <Setter Property="Background" Value="{ThemeResource TextAreaBackground}" />
    <Setter Property="BorderBrush" Value="{ThemeResource TextAreaBorderBrush}" />
    <Setter Property="Foreground" Value="{ThemeResource TextAreaForeground}" />
    <Setter Property="PlaceholderForeground" Value="{ThemeResource TextAreaPlaceholderForeground}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="MinHeight" Value="80" />
    <Setter Property="Padding" Value="16,12,12,12" />
    <Setter Property="HorizontalAlignment" Value="Stretch" />
    <Setter Property="AcceptsReturn" Value="True" />
    <Setter Property="TextWrapping" Value="Wrap" />
  </Style>

  <!-- Disabled TextBox style -->
  <Style x:Key="DisabledTextareaFieldTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource TextareaFieldTextBoxStyle}">
    <Setter Property="Background" Value="{ThemeResource TextAreaBackgroundDisabled}" />
    <Setter Property="BorderBrush" Value="{ThemeResource TextAreaBorderBrushDisabled}" />
    <Setter Property="Foreground" Value="{ThemeResource TextAreaForegroundDisabled}" />
    <Setter Property="IsHitTestVisible" Value="False" />
    <Setter Property="IsTabStop" Value="False" />
  </Style>

  <!-- Error state TextBox style -->
  <Style x:Key="ErrorTextareaFieldTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource TextareaFieldTextBoxStyle}">
    <Setter Property="BorderBrush" Value="{ThemeResource TextAreaErrorBorderBrush}" />
  </Style>

</ResourceDictionary>
