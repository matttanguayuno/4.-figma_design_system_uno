<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Brand Colors -->
  <Color x:Key="BrandDefaultColor">#2c2c2c</Color>
  <Color x:Key="BrandHoverColor">#1e1e1e</Color>
  <Color x:Key="BrandTertiaryColor">#f5f5f5</Color>
  <Color x:Key="BrandOnBrandColor">#f5f5f5</Color>
  <Color x:Key="BrandOnBrandSecondaryColor">#1e1e1e</Color>

  <!-- Default/Neutral Colors -->
  <Color x:Key="DefaultBackgroundColor">#ffffff</Color>
  <Color x:Key="ContentBackgroundColor">#f5f5f5</Color>
  <Color x:Key="DefaultSecondaryBackgroundColor">#f5f5f5</Color>
  <Color x:Key="NeutralTertiaryColor">#e3e3e3</Color>
  <Color x:Key="NeutralTertiaryHoverColor">#cdcdcd</Color>
  <Color x:Key="DefaultBorderColor">#d9d9d9</Color>
  <Color x:Key="NeutralBorderColor">#303030</Color>
  <Color x:Key="NeutralSecondaryBorderColor">#767676</Color>
  <Color x:Key="DefaultTextColor">#1e1e1e</Color>
  <Color x:Key="SecondaryTextColor">#757575</Color>
  <Color x:Key="TertiaryTextColor">#b3b3b3</Color>
  <Color x:Key="NeutralTextColor">#303030</Color>

  <!-- Disabled Colors -->
  <Color x:Key="DisabledBackgroundColor">#d9d9d9</Color>
  <Color x:Key="DisabledBorderColor">#b3b3b3</Color>
  <Color x:Key="DisabledSecondaryBorderColor">#b2b2b2</Color>
  <Color x:Key="DisabledTextColor">#b3b3b3</Color>
  <Color x:Key="DisabledOnDisabledTextColor">#b3b3b3</Color>

  <!-- Error/Danger Colors -->
  <Color x:Key="DangerBorderColor">#900b09</Color>
  <Color x:Key="DangerTextColor">#900b09</Color>

  <!-- Slate/Placeholder -->
  <Color x:Key="SlateColor">#e3e3e3</Color>

  <!-- Brushes -->
  <SolidColorBrush x:Key="BrandDefaultBrush" Color="{StaticResource BrandDefaultColor}" />
  <SolidColorBrush x:Key="BrandHoverBrush" Color="{StaticResource BrandHoverColor}" />
  <SolidColorBrush x:Key="BrandTertiaryBrush" Color="{StaticResource BrandTertiaryColor}" />
  <SolidColorBrush x:Key="BrandOnBrandBrush" Color="{StaticResource BrandOnBrandColor}" />
  <SolidColorBrush x:Key="BrandOnBrandSecondaryBrush" Color="{StaticResource BrandOnBrandSecondaryColor}" />

  <SolidColorBrush x:Key="DefaultBackgroundBrush" Color="{StaticResource DefaultBackgroundColor}" />
  <SolidColorBrush x:Key="ContentBackgroundBrush" Color="{StaticResource ContentBackgroundColor}" />
  <SolidColorBrush x:Key="DefaultSecondaryBackgroundBrush" Color="{StaticResource DefaultSecondaryBackgroundColor}" />
  <SolidColorBrush x:Key="NeutralTertiaryBrush" Color="{StaticResource NeutralTertiaryColor}" />
  <SolidColorBrush x:Key="NeutralTertiaryHoverBrush" Color="{StaticResource NeutralTertiaryHoverColor}" />
  <SolidColorBrush x:Key="DefaultBorderBrush" Color="{StaticResource DefaultBorderColor}" />
  <SolidColorBrush x:Key="NeutralBorderBrush" Color="{StaticResource NeutralBorderColor}" />
  <SolidColorBrush x:Key="NeutralSecondaryBorderBrush" Color="{StaticResource NeutralSecondaryBorderColor}" />
  <SolidColorBrush x:Key="DefaultTextBrush" Color="{StaticResource DefaultTextColor}" />
  <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}" />
  <SolidColorBrush x:Key="TertiaryTextBrush" Color="{StaticResource TertiaryTextColor}" />
  <SolidColorBrush x:Key="NeutralTextBrush" Color="{StaticResource NeutralTextColor}" />

  <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="{StaticResource DisabledBackgroundColor}" />
  <SolidColorBrush x:Key="DisabledBorderBrush" Color="{StaticResource DisabledBorderColor}" />
  <SolidColorBrush x:Key="DisabledSecondaryBorderBrush" Color="{StaticResource DisabledSecondaryBorderColor}" />
  <SolidColorBrush x:Key="DisabledTextBrush" Color="{StaticResource DisabledTextColor}" />
  <SolidColorBrush x:Key="DisabledOnDisabledTextBrush" Color="{StaticResource DisabledOnDisabledTextColor}" />

  <SolidColorBrush x:Key="DangerBorderBrush" Color="{StaticResource DangerBorderColor}" />
  <SolidColorBrush x:Key="DangerTextBrush" Color="{StaticResource DangerTextColor}" />

  <SolidColorBrush x:Key="SlateBrush" Color="{StaticResource SlateColor}" />

</ResourceDictionary>
