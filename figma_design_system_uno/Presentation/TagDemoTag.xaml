<UserControl
    x:Class="figma_design_system_uno.Presentation.TagDemoTag"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:figma_design_system_uno.Presentation"
    mc:Ignorable="d"
    d:DesignHeight="40"
    d:DesignWidth="120">

    <UserControl.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Border
        Background="{Binding BackgroundBrush, RelativeSource={RelativeSource Mode=Self}}"
        CornerRadius="8"
        Padding="8,0"
        MinWidth="80"
        Height="32">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
            <TextBlock Text="Tag"
                       Foreground="{Binding ForegroundBrush, RelativeSource={RelativeSource Mode=Self}}"
                       FontSize="16"
                       VerticalAlignment="Center"
                       Margin="0,0,0,0" />
            <Viewbox Width="16" Height="16" VerticalAlignment="Center" Visibility="{Binding ShowClose, RelativeSource={RelativeSource Mode=Self}, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Canvas Width="16" Height="16">
                    <Path Data="M4,4 L12,12 M12,4 L4,12" Stroke="{Binding ForegroundBrush, RelativeSource={RelativeSource Mode=Self}}" StrokeThickness="2" />
                </Canvas>
            </Viewbox>
        </StackPanel>
    </Border>
</UserControl>
