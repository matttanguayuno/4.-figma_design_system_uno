<Page x:Class="figma_design_system_uno.Presentation.TabsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      Background="{StaticResource BackgroundBrush}">

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space1600}"
                    Padding="{StaticResource Space1600}">

      <!-- Page Header -->
      <utu:NavigationBar Content="Tabs"
                         HorizontalContentAlignment="Left"
                         VerticalAlignment="Bottom">
        <utu:NavigationBar.MainCommand>
          <AppBarButton Icon="Back" Click="OnBackClick" />
        </utu:NavigationBar.MainCommand>
        <utu:NavigationBar.ContentTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding}"
                       FontSize="48"
                       FontWeight="Bold"
                       Foreground="{StaticResource OnSurfaceBrush}" />
          </DataTemplate>
        </utu:NavigationBar.ContentTemplate>
      </utu:NavigationBar>

      <!-- Tab Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Tab"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Matrix Layout with Row/Column Labels -->
        <Grid ColumnSpacing="16" RowSpacing="16">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

          <!-- Column Headers -->
          <Border Grid.Row="0" Grid.Column="1"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  HorizontalAlignment="Center">
            <TextBlock Text="Inactive" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Border Grid.Row="0" Grid.Column="2"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  HorizontalAlignment="Center">
            <TextBlock Text="Active" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Row 1: Default -->
          <Border Grid.Row="1" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Default" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Default Inactive -->
          <Border Grid.Row="1" Grid.Column="1"
                  BorderBrush="{StaticResource OnSurfaceMediumBrush}"
                  BorderThickness="0,0,0,1"
                  CornerRadius="4,4,0,0"
                  Padding="12,4">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceLowBrush}"
                       HorizontalAlignment="Center" />
          </Border>

          <!-- Default Active -->
          <Border Grid.Row="1" Grid.Column="2"
                  BorderBrush="{StaticResource OnSurfaceBrush}"
                  BorderThickness="0,0,0,1"
                  CornerRadius="4,4,0,0"
                  Padding="12,4">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceBrush}"
                       HorizontalAlignment="Center" />
          </Border>

          <!-- Row 2: Hover -->
          <Border Grid.Row="2" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Hover" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Hover Inactive -->
          <Border Grid.Row="2" Grid.Column="1"
                  Background="{StaticResource SDSPaginationDefaultBackgroundBrush}"
                  BorderBrush="{StaticResource OnSurfaceMediumBrush}"
                  BorderThickness="0,0,0,1"
                  CornerRadius="4,4,0,0"
                  Padding="12,4">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceLowBrush}"
                       HorizontalAlignment="Center" />
          </Border>

          <!-- Hover Active -->
          <Border Grid.Row="2" Grid.Column="2"
                  Background="{StaticResource SDSPaginationDefaultBackgroundBrush}"
                  BorderBrush="{StaticResource OnSurfaceBrush}"
                  BorderThickness="0,0,0,1"
                  CornerRadius="4,4,0,0"
                  Padding="12,4">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceBrush}"
                       HorizontalAlignment="Center" />
          </Border>
        </Grid>
      </utu:AutoLayout>

      <!-- Tabs Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Tabs"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <utu:AutoLayout Orientation="Horizontal" Spacing="0">
          <!-- Tab 1 (Active) -->
          <Border BorderBrush="{StaticResource OnSurfaceBrush}"
                  BorderThickness="0,0,0,1"
                  CornerRadius="4,4,0,0"
                  Padding="12,4">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceBrush}"
                       HorizontalAlignment="Center" />
          </Border>

          <!-- Tab 2 (Inactive) -->
          <Border BorderBrush="{StaticResource OnSurfaceMediumBrush}"
                  BorderThickness="0,0,0,1"
                  CornerRadius="4,4,0,0"
                  Padding="12,4">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceLowBrush}"
                       HorizontalAlignment="Center" />
          </Border>

          <!-- Tab 3 (Inactive) -->
          <Border BorderBrush="{StaticResource OnSurfaceMediumBrush}"
                  BorderThickness="0,0,0,1"
                  CornerRadius="4,4,0,0"
                  Padding="12,4">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceLowBrush}"
                       HorizontalAlignment="Center" />
          </Border>

          <!-- Tab 4 (Inactive) -->
          <Border BorderBrush="{StaticResource OnSurfaceMediumBrush}"
                  BorderThickness="0,0,0,1"
                  CornerRadius="4,4,0,0"
                  Padding="12,4">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceLowBrush}"
                       HorizontalAlignment="Center" />
          </Border>

          <!-- Tab 5 (Inactive) -->
          <Border BorderBrush="{StaticResource OnSurfaceMediumBrush}"
                  BorderThickness="0,0,0,1"
                  CornerRadius="4,4,0,0"
                  Padding="12,4">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceLowBrush}"
                       HorizontalAlignment="Center" />
          </Border>

          <!-- Tab 6 (Inactive) -->
          <Border BorderBrush="{StaticResource OnSurfaceMediumBrush}"
                  BorderThickness="0,0,0,1"
                  CornerRadius="4,4,0,0"
                  Padding="12,4">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceLowBrush}"
                       HorizontalAlignment="Center" />
          </Border>
        </utu:AutoLayout>
      </utu:AutoLayout>

      <!-- Source Code Viewer -->
      <controls:SourceCodeViewer 
        PageXamlPath="ms-appx:///Presentation/TabsPage.xaml" />

    </utu:AutoLayout>
  </ScrollViewer>
</Page>
