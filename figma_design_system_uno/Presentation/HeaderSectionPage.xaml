<Page x:Class="figma_design_system_uno.Presentation.HeaderSectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:controls="using:figma_design_system_uno.Controls"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="{StaticResource DefaultBackgroundBrush}">

  <Page.Resources>
    <local:HeaderSectionModel x:Key="ViewModel" />
  </Page.Resources>

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Padding="32"
                    Spacing="24"
                    DataContext="{StaticResource ViewModel}">

      <!-- Controls -->
      <utu:AutoLayout Orientation="Vertical" Spacing="16">
        <TextBlock Text="Header Section"
                   FontSize="32"
                   FontWeight="Bold" />
        
        <TextBlock Text="Resize the window or toggle between desktop and mobile views to see responsive behavior"
                   TextWrapping="Wrap"
                   Foreground="{StaticResource SecondaryTextBrush}" />

        <!-- Device Mode Toggle -->
        <utu:AutoLayout Orientation="Horizontal" Spacing="16" PrimaryAxisAlignment="Start">
          <RadioButton Content="Desktop (1200px)"
                       IsChecked="{Binding DeviceMode, Mode=TwoWay, Converter={StaticResource EqualsConverter}, ConverterParameter=Desktop}"
                       GroupName="DeviceMode" />
          <RadioButton Content="Mobile (375px)"
                       IsChecked="{Binding DeviceMode, Mode=TwoWay, Converter={StaticResource EqualsConverter}, ConverterParameter=Mobile}"
                       GroupName="DeviceMode" />
        </utu:AutoLayout>

        <!-- Mobile Menu State (only visible in Mobile mode) -->
        <CheckBox Content="Open Mobile Menu"
                  IsChecked="{Binding IsMobileMenuOpen, Mode=TwoWay}"
                  Visibility="{Binding DeviceMode, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=Mobile}" />
      </utu:AutoLayout>

      <!-- Device Frame -->
      <Border BorderBrush="{StaticResource NeutralSecondaryBrush}"
              BorderThickness="2"
              CornerRadius="4"
              Width="{Binding DeviceWidth}"
              HorizontalAlignment="Center"
              Background="White">
        
        <!-- Header Component -->
        <controls:HeaderControl IsMobile="{Binding DeviceMode, Converter={StaticResource EqualsConverter}, ConverterParameter=Mobile}"
                             IsMenuOpen="{Binding IsMobileMenuOpen}" />
      </Border>
    </utu:AutoLayout>
  </ScrollViewer>
</Page>
