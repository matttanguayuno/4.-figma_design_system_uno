<Page x:Class="figma_design_system_uno.Presentation.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      Background="Transparent"
      NavigationCacheMode="Required"
      uen:Navigation.Data="{Binding}"
      Loaded="OnPageLoaded">

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Padding="{StaticResource Spacing800}"
                    Spacing="64"
                    MaxWidth="1200"
                    HorizontalAlignment="Left">

      <!-- Hero Section -->
      <utu:AutoLayout Orientation="Vertical" 
                      Spacing="{StaticResource Space600}"
                      HorizontalAlignment="Left"
                      PrimaryAxisAlignment="Start">
        <TextBlock Text="Uno SDS"
                   Style="{StaticResource TitleHeroTextBlockStyle}"
                   HorizontalAlignment="Left"
                   TextAlignment="Left" />
        <TextBlock Text="Figma Simple Design System implemented in Uno Platform"
                   Style="{StaticResource SubtitleTextBlockStyle}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   HorizontalAlignment="Left"
                   TextAlignment="Left" />
      </utu:AutoLayout>

      <!-- Component Cards Grid -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <!-- Cards in Responsive Grid -->
        <ItemsRepeater x:Name="ComponentCardsRepeater" 
                       ItemsSource="{Binding ComponentCards, Mode=OneWay}">
          <ItemsRepeater.Layout>
            <UniformGridLayout MinItemWidth="200"
                               MinItemHeight="200"
                               ItemsStretch="Fill"
                               MinColumnSpacing="16"
                               MinRowSpacing="16" />
          </ItemsRepeater.Layout>
          <ItemsRepeater.ItemTemplate>
            <DataTemplate>
              <Border CornerRadius="{StaticResource Radius200}"
                      BorderThickness="2"
                      VerticalAlignment="Stretch"
                      HorizontalAlignment="Stretch"
                      Translation="0,0,16">
                <Border.BorderBrush>
                  <SolidColorBrush Color="{StaticResource SDSCardBorderColor}" />
                </Border.BorderBrush>
                <Border.Background>
                  <SolidColorBrush Color="{StaticResource SDSCardBackgroundLightColor}" />
                </Border.Background>
                <Border.Shadow>
                  <ThemeShadow />
                </Border.Shadow>
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}"
                                Padding="{StaticResource Spacing600}"
                                PrimaryAxisAlignment="Center"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch">

                  <!-- Icon and Name -->
                  <StackPanel Orientation="Horizontal" Spacing="12"
                              HorizontalAlignment="Center">
                    <Border Width="48" Height="48"
                            Background="{StaticResource BrandTertiaryBrush}"
                            CornerRadius="{StaticResource Radius200}">
                      <FontIcon Glyph="{Binding Icon}"
                                FontSize="24"
                                Foreground="{StaticResource DefaultTextBrush}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                    </Border>

                    <TextBlock Text="{Binding Title}"
                               Foreground="Black"
                               FontSize="18"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />
                  </StackPanel>

                  <!-- Navigation Button -->
                  <Button Content="View"
                          Background="{StaticResource PrimaryBrush}"
                          Foreground="{StaticResource OnPrimaryBrush}"
                          BorderThickness="0"
                          CornerRadius="4"
                          Padding="16,8"
                          MinHeight="40"
                          FontSize="14"
                          FontWeight="Medium"
                          HorizontalAlignment="Center"
                          Command="{Binding NavigateCommand}">
                    <Button.Template>
                      <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid"
                              Background="{TemplateBinding Background}"
                              CornerRadius="{TemplateBinding CornerRadius}"
                              Padding="{TemplateBinding Padding}">
                          <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                              <VisualState x:Name="Normal" />
                              <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                  <Setter Target="RootGrid.Background" Value="{StaticResource PrimaryVariantDarkBrush}" />
                                </VisualState.Setters>
                              </VisualState>
                              <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                  <Setter Target="RootGrid.Opacity" Value="0.8" />
                                </VisualState.Setters>
                              </VisualState>
                            </VisualStateGroup>
                          </VisualStateManager.VisualStateGroups>
                          <TextBlock Text="{TemplateBinding Content}"
                                     Foreground="{TemplateBinding Foreground}"
                                     FontSize="{TemplateBinding FontSize}"
                                     FontWeight="{TemplateBinding FontWeight}"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center" />
                        </Grid>
                      </ControlTemplate>
                    </Button.Template>
                  </Button>
                </utu:AutoLayout>
              </Border>
            </DataTemplate>
          </ItemsRepeater.ItemTemplate>
        </ItemsRepeater>
      </utu:AutoLayout>

      <!-- Pages & Sections Cards Grid -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <!-- Cards in Responsive Grid -->
        <ItemsRepeater x:Name="PageCardsRepeater" 
                       ItemsSource="{Binding PageCards, Mode=OneWay}">
          <ItemsRepeater.Layout>
            <UniformGridLayout MinItemWidth="200"
                               MinItemHeight="200"
                               ItemsStretch="Fill"
                               MinColumnSpacing="16"
                               MinRowSpacing="16" />
          </ItemsRepeater.Layout>
          <ItemsRepeater.ItemTemplate>
            <DataTemplate>
              <Border CornerRadius="{StaticResource Radius200}"
                      BorderThickness="2"
                      VerticalAlignment="Stretch"
                      HorizontalAlignment="Stretch"
                      Translation="0,0,16">
                <Border.BorderBrush>
                  <SolidColorBrush Color="{StaticResource SDSCardBorderColor}" />
                </Border.BorderBrush>
                <Border.Background>
                  <SolidColorBrush Color="{StaticResource SDSCardBackgroundLightColor}" />
                </Border.Background>
                <Border.Shadow>
                  <ThemeShadow />
                </Border.Shadow>
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}"
                                Padding="{StaticResource Spacing600}"
                                PrimaryAxisAlignment="Center"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch">

                  <!-- Icon and Name -->
                  <StackPanel Orientation="Horizontal" Spacing="12"
                              HorizontalAlignment="Center">
                    <Border Width="48" Height="48"
                            Background="{StaticResource BrandTertiaryBrush}"
                            CornerRadius="{StaticResource Radius200}">
                      <FontIcon Glyph="{Binding Icon}"
                                FontSize="24"
                                Foreground="{StaticResource DefaultTextBrush}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                    </Border>

                    <TextBlock Text="{Binding Title}"
                               Foreground="Black"
                               FontSize="18"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />
                  </StackPanel>

                  <!-- Navigation Button -->
                  <Button Content="View"
                          Background="{StaticResource PrimaryBrush}"
                          Foreground="{StaticResource OnPrimaryBrush}"
                          BorderThickness="0"
                          CornerRadius="4"
                          Padding="16,8"
                          MinHeight="40"
                          FontSize="14"
                          FontWeight="Medium"
                          HorizontalAlignment="Center"
                          Command="{Binding NavigateCommand}">
                    <Button.Template>
                      <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid"
                              Background="{TemplateBinding Background}"
                              CornerRadius="{TemplateBinding CornerRadius}"
                              Padding="{TemplateBinding Padding}">
                          <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                              <VisualState x:Name="Normal" />
                              <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                  <Setter Target="RootGrid.Background" Value="{StaticResource PrimaryVariantDarkBrush}" />
                                </VisualState.Setters>
                              </VisualState>
                              <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                  <Setter Target="RootGrid.Opacity" Value="0.8" />
                                </VisualState.Setters>
                              </VisualState>
                            </VisualStateGroup>
                          </VisualStateManager.VisualStateGroups>
                          <TextBlock Text="{TemplateBinding Content}"
                                     Foreground="{TemplateBinding Foreground}"
                                     FontSize="{TemplateBinding FontSize}"
                                     FontWeight="{TemplateBinding FontWeight}"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center" />
                        </Grid>
                      </ControlTemplate>
                    </Button.Template>
                  </Button>
                </utu:AutoLayout>
              </Border>
            </DataTemplate>
          </ItemsRepeater.ItemTemplate>
        </ItemsRepeater>
      </utu:AutoLayout>

    </utu:AutoLayout>
  </ScrollViewer>

</Page>

