<Page x:Class="figma_design_system_uno.Presentation.NavigationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      Background="Transparent">

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Padding="{StaticResource Spacing800}"
                    Spacing="{StaticResource Space1200}">

      <!-- Page Header -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
        <utu:NavigationBar Content="Navigation"
                           HorizontalContentAlignment="Left"
                           VerticalAlignment="Bottom">
          <utu:NavigationBar.MainCommand>
            <AppBarButton Icon="Back" Click="OnBackClick" />
          </utu:NavigationBar.MainCommand>
          <utu:NavigationBar.ContentTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding}"
                         FontSize="48"
                         FontWeight="Bold"
                         VerticalAlignment="Bottom" />
            </DataTemplate>
          </utu:NavigationBar.ContentTemplate>
        </utu:NavigationBar>
      </utu:AutoLayout>

      <!-- 1. Navigation Button -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
        <TextBlock Text="Navigation Button"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Small Size Matrix -->
        <utu:AutoLayout Orientation="Vertical" Spacing="16">
          <TextBlock Text="Small" FontSize="16" FontWeight="SemiBold" />
          <Grid ColumnSpacing="24" RowSpacing="24">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Column Headers -->
            <Border Grid.Row="0" Grid.Column="1"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8">
              <TextBlock Text="Default" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
            </Border>
            <Border Grid.Row="0" Grid.Column="2"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8">
              <TextBlock Text="Hover" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
            </Border>
            <Border Grid.Row="0" Grid.Column="3"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8">
              <TextBlock Text="Active" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
            </Border>

            <!-- Row 1: Column -->
            <Border Grid.Row="1" Grid.Column="0"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" VerticalAlignment="Center">
              <TextBlock Text="Column" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
            </Border>
            <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource SDSNavigationButtonStyle}">
              <utu:AutoLayout Orientation="Vertical" Spacing="8">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="14" Style="{StaticResource BodyStrongTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource SDSNavigationButtonStyle}"
                    Background="{StaticResource SDSNavHoverBackgroundBrush}">
              <utu:AutoLayout Orientation="Vertical" Spacing="8">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="14" Style="{StaticResource BodyStrongTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
            <Button Grid.Row="1" Grid.Column="3" Style="{StaticResource SDSNavigationButtonActiveStyle}">
              <utu:AutoLayout Orientation="Vertical" Spacing="8">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="14" Style="{StaticResource BodyStrongTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>

            <!-- Row 2: Row -->
            <Border Grid.Row="2" Grid.Column="0"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" VerticalAlignment="Center">
              <TextBlock Text="Row" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
            </Border>
            <Button Grid.Row="2" Grid.Column="1" Style="{StaticResource SDSNavigationButtonStyle}">
              <utu:AutoLayout Orientation="Horizontal" Spacing="6">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="14" Style="{StaticResource BodyStrongTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
            <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource SDSNavigationButtonStyle}"
                    Background="{StaticResource SDSNavHoverBackgroundBrush}">
              <utu:AutoLayout Orientation="Horizontal" Spacing="6">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="14" Style="{StaticResource BodyStrongTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
            <Button Grid.Row="2" Grid.Column="3" Style="{StaticResource SDSNavigationButtonActiveStyle}">
              <utu:AutoLayout Orientation="Horizontal" Spacing="6">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="14" Style="{StaticResource BodyStrongTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
          </Grid>
        </utu:AutoLayout>

        <!-- Medium Size Matrix -->
        <utu:AutoLayout Orientation="Vertical" Spacing="16">
          <TextBlock Text="Medium" FontSize="16" FontWeight="SemiBold" />
          <Grid ColumnSpacing="24" RowSpacing="24">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Column Headers -->
            <Border Grid.Row="0" Grid.Column="1"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8">
              <TextBlock Text="Default" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
            </Border>
            <Border Grid.Row="0" Grid.Column="2"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8">
              <TextBlock Text="Hover" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
            </Border>
            <Border Grid.Row="0" Grid.Column="3"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8">
              <TextBlock Text="Active" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
            </Border>

            <!-- Row 1: Column -->
            <Border Grid.Row="1" Grid.Column="0"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" VerticalAlignment="Center">
              <TextBlock Text="Column" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
            </Border>
            <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource SDSNavigationButtonStyle}">
              <utu:AutoLayout Orientation="Vertical" Spacing="8">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="16" Style="{StaticResource BodyBaseTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource SDSNavigationButtonStyle}"
                    Background="{StaticResource SDSNavHoverBackgroundBrush}">
              <utu:AutoLayout Orientation="Vertical" Spacing="8">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="16" Style="{StaticResource BodyBaseTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
            <Button Grid.Row="1" Grid.Column="3" Style="{StaticResource SDSNavigationButtonActiveStyle}">
              <utu:AutoLayout Orientation="Vertical" Spacing="8">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="16" Style="{StaticResource BodyBaseTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>

            <!-- Row 2: Row -->
            <Border Grid.Row="2" Grid.Column="0"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" VerticalAlignment="Center">
              <TextBlock Text="Row" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
            </Border>
            <Button Grid.Row="2" Grid.Column="1" Style="{StaticResource SDSNavigationButtonStyle}">
              <utu:AutoLayout Orientation="Horizontal" Spacing="6">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="16" Style="{StaticResource BodyBaseTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
            <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource SDSNavigationButtonStyle}"
                    Background="{StaticResource SDSNavHoverBackgroundBrush}">
              <utu:AutoLayout Orientation="Horizontal" Spacing="6">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="16" Style="{StaticResource BodyBaseTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
            <Button Grid.Row="2" Grid.Column="3" Style="{StaticResource SDSNavigationButtonActiveStyle}">
              <utu:AutoLayout Orientation="Horizontal" Spacing="6">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="16" Style="{StaticResource BodyBaseTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
          </Grid>
        </utu:AutoLayout>
      </utu:AutoLayout>

      <!-- 2. Navigation Button List -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
        <TextBlock Text="Navigation Button List"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <Grid ColumnSpacing="24" RowSpacing="24">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>

          <!-- Row 1: Row Layout -->
          <Border Grid.Row="1" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" VerticalAlignment="Center">
            <TextBlock Text="Row" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <utu:AutoLayout Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="0">
            <Button Style="{StaticResource SDSNavigationButtonStyle}">
              <utu:AutoLayout Orientation="Vertical" Spacing="8">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="14" Style="{StaticResource BodyStrongTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
            <Button Style="{StaticResource SDSNavigationButtonActiveStyle}">
              <utu:AutoLayout Orientation="Vertical" Spacing="8">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="14" Style="{StaticResource BodyStrongTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
            <Button Style="{StaticResource SDSNavigationButtonStyle}">
              <utu:AutoLayout Orientation="Vertical" Spacing="8">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="14" Style="{StaticResource BodyStrongTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
            <Button Style="{StaticResource SDSNavigationButtonStyle}">
              <utu:AutoLayout Orientation="Vertical" Spacing="8">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="14" Style="{StaticResource BodyStrongTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
            <Button Style="{StaticResource SDSNavigationButtonStyle}">
              <utu:AutoLayout Orientation="Vertical" Spacing="8">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="14" Style="{StaticResource BodyStrongTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
          </utu:AutoLayout>

          <!-- Row 2: Column Layout -->
          <Border Grid.Row="2" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" VerticalAlignment="Top">
            <TextBlock Text="Column" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <utu:AutoLayout Grid.Row="2" Grid.Column="1" Orientation="Vertical" Spacing="0" Width="115" HorizontalAlignment="Left">
            <Button Style="{StaticResource SDSNavigationButtonStyle}">
              <utu:AutoLayout Orientation="Horizontal" Spacing="6">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="14" Style="{StaticResource BodyStrongTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
            <Button Style="{StaticResource SDSNavigationButtonActiveStyle}">
              <utu:AutoLayout Orientation="Horizontal" Spacing="6">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="14" Style="{StaticResource BodyStrongTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
            <Button Style="{StaticResource SDSNavigationButtonStyle}">
              <utu:AutoLayout Orientation="Horizontal" Spacing="6">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="14" Style="{StaticResource BodyStrongTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
            <Button Style="{StaticResource SDSNavigationButtonStyle}">
              <utu:AutoLayout Orientation="Horizontal" Spacing="6">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="14" Style="{StaticResource BodyStrongTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
            <Button Style="{StaticResource SDSNavigationButtonStyle}">
              <utu:AutoLayout Orientation="Horizontal" Spacing="6">
                <FontIcon Glyph="&#xE734;" FontSize="24" />
                <TextBlock Text="Label" FontSize="14" Style="{StaticResource BodyStrongTextBlockStyle}" />
              </utu:AutoLayout>
            </Button>
          </utu:AutoLayout>
        </Grid>
      </utu:AutoLayout>

      <!-- 3. Navigation Pill -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
        <TextBlock Text="Navigation Pill"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <Grid ColumnSpacing="24" RowSpacing="24">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <!-- Headers -->
          <Border Grid.Row="0" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8">
            <TextBlock Text="Default" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <Border Grid.Row="0" Grid.Column="1"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8">
            <TextBlock Text="Hover" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <Border Grid.Row="0" Grid.Column="2"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8">
            <TextBlock Text="Active" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Pills -->
          <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource SDSNavigationPillStyle}">
            <TextBlock Text="Link" />
          </Button>
          <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource SDSNavigationPillStyle}"
                  Background="{StaticResource SDSNavHoverBackgroundBrush}">
            <TextBlock Text="Link" />
          </Button>
          <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource SDSNavigationPillActiveStyle}">
            <TextBlock Text="Link" />
          </Button>
        </Grid>
      </utu:AutoLayout>

      <!-- 4. Navigation Pill List -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
        <TextBlock Text="Navigation Pill List"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <Grid ColumnSpacing="24" RowSpacing="24">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>

          <!-- Row 1: Row Layout -->
          <Border Grid.Row="1" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" VerticalAlignment="Center">
            <TextBlock Text="Row" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <utu:AutoLayout Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="8">
            <Button Style="{StaticResource SDSNavigationPillActiveStyle}">
              <TextBlock Text="Link" />
            </Button>
            <Button Style="{StaticResource SDSNavigationPillStyle}">
              <TextBlock Text="Link" />
            </Button>
            <Button Style="{StaticResource SDSNavigationPillStyle}">
              <TextBlock Text="Link" />
            </Button>
            <Button Style="{StaticResource SDSNavigationPillStyle}">
              <TextBlock Text="Link" />
            </Button>
            <Button Style="{StaticResource SDSNavigationPillStyle}">
              <TextBlock Text="Link" />
            </Button>
            <Button Style="{StaticResource SDSNavigationPillStyle}">
              <TextBlock Text="Link" />
            </Button>
            <Button Style="{StaticResource SDSNavigationPillStyle}">
              <TextBlock Text="Link" />
            </Button>
          </utu:AutoLayout>

          <!-- Row 2: Column Layout -->
          <Border Grid.Row="2" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" VerticalAlignment="Top">
            <TextBlock Text="Column" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <utu:AutoLayout Grid.Row="2" Grid.Column="1" Orientation="Vertical" Spacing="8" Width="115" HorizontalAlignment="Left">
            <Button Style="{StaticResource SDSNavigationPillStyle}">
              <TextBlock Text="Link" />
            </Button>
            <Button Style="{StaticResource SDSNavigationPillActiveStyle}">
              <TextBlock Text="Link" />
            </Button>
            <Button Style="{StaticResource SDSNavigationPillStyle}">
              <TextBlock Text="Link" />
            </Button>
            <Button Style="{StaticResource SDSNavigationPillStyle}">
              <TextBlock Text="Link" />
            </Button>
            <Button Style="{StaticResource SDSNavigationPillStyle}">
              <TextBlock Text="Link" />
            </Button>
            <Button Style="{StaticResource SDSNavigationPillStyle}">
              <TextBlock Text="Link" />
            </Button>
          </utu:AutoLayout>
        </Grid>
      </utu:AutoLayout>

      <!-- Source Code Viewer -->
      <controls:SourceCodeViewer 
          PageXamlPath="ms-appx:///Presentation/NavigationPage.xaml"
          StyleXamlPath="" />

    </utu:AutoLayout>
  </ScrollViewer>

</Page>
