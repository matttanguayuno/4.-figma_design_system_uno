<Page x:Class="figma_design_system_uno.Presentation.NotificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      Background="Transparent">

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Padding="{StaticResource Spacing800}"
                    Spacing="{StaticResource Space1200}">

      <!-- Page Header -->
      <utu:NavigationBar Content="Notification"
                         HorizontalContentAlignment="Left"
                         VerticalAlignment="Bottom">
        <utu:NavigationBar.MainCommand>
          <AppBarButton Icon="Back" Click="OnBackClick" />
        </utu:NavigationBar.MainCommand>
        <utu:NavigationBar.ContentTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding}"
                       FontSize="48"
                       FontWeight="Bold"
                       VerticalAlignment="Bottom" />
          </DataTemplate>
        </utu:NavigationBar.ContentTemplate>
      </utu:NavigationBar>

      <!-- Notification Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Notification"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Matrix Layout with Row Labels -->
        <Grid ColumnSpacing="24" RowSpacing="16">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

          <!-- Row 1: Message -->
          <Border Grid.Row="0" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Top" Margin="0,0,24,0">
            <TextBlock Text="Message" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Message Notification -->
          <Border Grid.Row="0" Grid.Column="1"
                  Background="{StaticResource SurfaceBrush}"
                  BorderBrush="{StaticResource OnSurfaceMediumBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="16"
                  MinWidth="340"
                  MaxWidth="450"
                  Translation="0, 0, 8">
            <Border.Shadow>
              <ThemeShadow />
            </Border.Shadow>
            
            <Grid ColumnSpacing="12">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>

              <!-- Info Icon -->
              <Viewbox Grid.Column="0" Width="20" Height="20" VerticalAlignment="Top">
                <Canvas Width="20" Height="20">
                  <Ellipse Width="20" Height="20" 
                           Stroke="{StaticResource OnSurfaceColor}" StrokeThickness="1.5" Fill="Transparent" />
                  <Ellipse Canvas.Left="9" Canvas.Top="4.5" Width="2" Height="2" Fill="{StaticResource OnSurfaceColor}" />
                  <Rectangle Canvas.Left="9" Canvas.Top="8.5" Width="2" Height="7" Fill="{StaticResource OnSurfaceColor}" />
                </Canvas>
              </Viewbox>

              <!-- Content -->
              <utu:AutoLayout Grid.Column="1" Orientation="Vertical" Spacing="12">
                <utu:AutoLayout Orientation="Vertical" Spacing="4">
                  <TextBlock Text="Title" 
                             Style="{StaticResource SubtitleTextBlockStyle}"
                             Foreground="{StaticResource OnSurfaceBrush}" />
                  <TextBlock Text="Body text." 
                             Style="{StaticResource BodyTextBlockStyle}"
                             Foreground="{StaticResource OnSurfaceBrush}" 
                             TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        Background="{StaticResource PrimaryBrush}"
                        BorderBrush="{StaticResource PrimaryBrush}"
                        BorderThickness="1"
                        Foreground="{StaticResource OnPrimaryBrush}"
                        CornerRadius="4"
                        Padding="12,8"
                        Style="{StaticResource BodyTextBlockStyle}"
                        MinWidth="0"
                        HorizontalAlignment="Left"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>

              <!-- Close Button -->
              <Button Grid.Column="2" 
                      Background="Transparent"
                      BorderThickness="0"
                      Padding="0"
                      Width="20"
                      Height="20"
                      VerticalAlignment="Top">
                <Path Data="M 4 4 L 16 16 M 16 4 L 4 16" 
                      Stroke="{StaticResource OnSurfaceColor}" 
                      StrokeThickness="1.5" />
              </Button>
            </Grid>
          </Border>

          <!-- Row 2: Alert -->
          <Border Grid.Row="1" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Top" Margin="0,0,24,0">
            <TextBlock Text="Alert" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Alert Notification -->
          <Border Grid.Row="1" Grid.Column="1"
                  Background="{StaticResource SDSNotificationAlertBackgroundBrush}"
                  BorderBrush="{StaticResource SDSNotificationAlertBorderBrush}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="16"
                  MinWidth="340"
                  MaxWidth="450"
                  Translation="0, 0, 8">
            <Border.Shadow>
              <ThemeShadow />
            </Border.Shadow>
            
            <Grid ColumnSpacing="12">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>

              <!-- Alert Icon -->
              <Viewbox Grid.Column="0" Width="20" Height="20" VerticalAlignment="Top">
                <Canvas Width="20" Height="20">
                  <Ellipse Width="20" Height="20" 
                           Stroke="{StaticResource ErrorColor}" StrokeThickness="1.5" Fill="Transparent" />
                  <Ellipse Canvas.Left="9" Canvas.Top="4.5" Width="2" Height="2" Fill="{StaticResource ErrorColor}" />
                  <Rectangle Canvas.Left="9" Canvas.Top="8.5" Width="2" Height="7" Fill="{StaticResource ErrorColor}" />
                </Canvas>
              </Viewbox>

              <!-- Content -->
              <utu:AutoLayout Grid.Column="1" Orientation="Vertical" Spacing="12">
                <utu:AutoLayout Orientation="Vertical" Spacing="4">
                  <TextBlock Text="Title" 
                             Style="{StaticResource SubtitleTextBlockStyle}"
                             Foreground="{StaticResource ErrorBrush}" />
                  <TextBlock Text="Body text." 
                             Style="{StaticResource BodyTextBlockStyle}"
                             Foreground="{StaticResource ErrorBrush}" 
                             TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        Background="{StaticResource SDSNotificationAlertButtonBrush}"
                        BorderBrush="{StaticResource SDSDangerPrimaryHoverBrush}"
                        BorderThickness="1"
                        Foreground="{StaticResource SDSNotificationAlertBackgroundBrush}"
                        CornerRadius="4"
                        Padding="12,8"
                        Style="{StaticResource BodyTextBlockStyle}"
                        MinWidth="0"
                        HorizontalAlignment="Left"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>

              <!-- Close Button -->
              <Button Grid.Column="2" 
                      Background="Transparent"
                      BorderThickness="0"
                      Padding="0"
                      Width="20"
                      Height="20"
                      VerticalAlignment="Top">
                <Path Data="M 4 4 L 16 16 M 16 4 L 4 16" 
                      Stroke="{StaticResource ErrorColor}" 
                      StrokeThickness="1.5" />
              </Button>
            </Grid>
          </Border>
        </Grid>
      </utu:AutoLayout>

      <!-- Source Code Viewer -->
      <controls:SourceCodeViewer 
        PageXamlPath="ms-appx:///Presentation/NotificationPage.xaml" />

    </utu:AutoLayout>
  </ScrollViewer>
</Page>
