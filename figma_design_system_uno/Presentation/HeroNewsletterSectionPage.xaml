<Page x:Class="figma_design_system_uno.Presentation.HeroNewsletterSectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:models="using:figma_design_system_uno.Models"
      xmlns:controls="using:figma_design_system_uno.Controls"
      xmlns:utu="using:Uno.Toolkit.UI">

  <Page.Resources>
    <models:HeroNewsletterSectionModel x:Key="ViewModel" />
  </Page.Resources>

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Spacing="48"
                    Padding="32"
                    DataContext="{StaticResource ViewModel}">
      
      <!-- Controls Section -->
      <utu:AutoLayout Orientation="Vertical"
                      Spacing="16">
        <TextBlock Text="Hero Newsletter Section"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="{StaticResource DefaultTextBrush}" />
        
        <TextBlock Text="Hero section with title, subtitle, and email newsletter signup form. Desktop shows title first, mobile shows form first."
                   FontSize="16"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   TextWrapping="Wrap" />

        <!-- Device Mode Selection -->
        <StackPanel Orientation="Horizontal" Spacing="16">
          <RadioButton Content="Desktop (1200px)"
                       GroupName="DeviceMode"
                       IsChecked="{Binding DeviceMode, Mode=TwoWay, Converter={StaticResource EqualsConverter}, ConverterParameter=Desktop}" />
          <RadioButton Content="Mobile (375px)"
                       GroupName="DeviceMode"
                       IsChecked="{Binding DeviceMode, Mode=TwoWay, Converter={StaticResource EqualsConverter}, ConverterParameter=Mobile}" />
        </StackPanel>
      </utu:AutoLayout>

      <!-- Device Frame -->
      <Border BorderBrush="{StaticResource BorderBrush}"
              BorderThickness="1"
              Width="{Binding DeviceWidth}"
              HorizontalAlignment="Left">
        <controls:HeroNewsletterControl IsMobile="{Binding IsMobile}" />
      </Border>
    </utu:AutoLayout>
  </ScrollViewer>
</Page>
