<Page x:Class="figma_design_system_uno.Presentation.FigmaComponentListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:uer="using:Uno.Extensions.Reactive.UI"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Input Section -->
        <StackPanel Grid.Row="0"
                    Padding="24"
                    Spacing="16"
                    MaxWidth="800">
            
            <TextBlock Text="Figma Component Extractor"
                       Style="{StaticResource TitleTextBlockStyle}" />

            <TextBlock Text="Extract component names and node IDs from a Figma file"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

            <TextBox x:Name="FileKeyInput"
                     Header="Figma File Key"
                     PlaceholderText="Enter file key (e.g., abc123xyz)" />

            <PasswordBox x:Name="AccessTokenInput"
                         Header="Figma Access Token"
                         PlaceholderText="Enter your personal access token" />

            <Button Content="Fetch Components"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="OnFetchClick" />
        </StackPanel>

        <!-- Results Section -->
        <ScrollViewer Grid.Row="1"
                      Padding="24,0,24,24">
            <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    MaxWidth="800"
                    HorizontalAlignment="Stretch">
                
                <StackPanel Spacing="8">
                    <TextBlock Text="Component List"
                               Style="{StaticResource SubtitleTextBlockStyle}" />
                    
                    <TextBlock Text="{Binding ComponentList}"
                               Style="{StaticResource BodyTextBlockStyle}"
                               FontFamily="Consolas,Courier New"
                               IsTextSelectionEnabled="True"
                               TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>

