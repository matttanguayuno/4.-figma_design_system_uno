<Page
    x:Class="figma_design_system_uno.Presentation.AvatarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI"
    xmlns:controls="using:figma_design_system_uno.Controls"
    Background="{StaticResource DefaultBackgroundBrush}">

    <ScrollViewer>
        <utu:AutoLayout Orientation="Vertical"
                        Padding="{StaticResource Spacing800}"
                        Spacing="32"
                        MaxWidth="1200"
                        HorizontalAlignment="Center">

            <!-- Page Header -->
            <utu:AutoLayout Orientation="Vertical" Spacing="8">
                <TextBlock Text="Avatar Component"
                           Style="{StaticResource TitlePageTextBlockStyle}" />
                <TextBlock Text="User profile images and initials in circle and square shapes with three sizes."
                           Style="{StaticResource BodyBaseTextBlockStyle}"
                           Foreground="{StaticResource SecondaryTextBrush}" />
            </utu:AutoLayout>

            <!-- Generic XAML Implementation -->
            <utu:AutoLayout Orientation="Vertical" Spacing="16">
                <TextBlock Text="Generic XAML Implementation" Style="{StaticResource HeadingTextBlockStyle}" />
                <TextBlock Text="Using standard Border, Image, and TextBlock controls with custom styles."
                           Style="{StaticResource BodyBaseTextBlockStyle}"
                           Foreground="{StaticResource SecondaryTextBrush}"
                           TextWrapping="Wrap" />
                
                <!-- Circle Shapes -->
                <utu:AutoLayout Orientation="Vertical" Spacing="16">
                    <TextBlock Text="Circle Shape" Style="{StaticResource BodyStrongTextBlockStyle}" />
                
                <!-- Large Circle Row -->
                <utu:AutoLayout Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                    <TextBlock Text="Large (40px)" Width="150" VerticalAlignment="Center" Style="{StaticResource BodyBaseTextBlockStyle}" />
                    
                    <!-- Image Avatar -->
                    <Border Style="{StaticResource AvatarLargeCircleStyle}" Background="Transparent">
                        <Image Source="https://picsum.photos/40/40?random=1" Style="{StaticResource AvatarImageLargeStyle}" />
                    </Border>
                    
                    <!-- Initial Avatar -->
                    <Border Style="{StaticResource AvatarLargeCircleStyle}">
                        <TextBlock Text="F" Style="{StaticResource AvatarInitialsLargeStyle}" />
                    </Border>
                </utu:AutoLayout>
                
                <!-- Medium Circle Row -->
                <utu:AutoLayout Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                    <TextBlock Text="Medium (32px)" Width="150" VerticalAlignment="Center" Style="{StaticResource BodyBaseTextBlockStyle}" />
                    
                    <!-- Image Avatar -->
                    <Border Style="{StaticResource AvatarMediumCircleStyle}" Background="Transparent">
                        <Image Source="https://picsum.photos/32/32?random=2" Style="{StaticResource AvatarImageMediumStyle}" />
                    </Border>
                    
                    <!-- Initial Avatar -->
                    <Border Style="{StaticResource AvatarMediumCircleStyle}">
                        <TextBlock Text="F" Style="{StaticResource AvatarInitialsMediumStyle}" />
                    </Border>
                </utu:AutoLayout>
                
                <!-- Small Circle Row -->
                <utu:AutoLayout Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                    <TextBlock Text="Small (24px)" Width="150" VerticalAlignment="Center" Style="{StaticResource BodyBaseTextBlockStyle}" />
                    
                    <!-- Image Avatar -->
                    <Border Style="{StaticResource AvatarSmallCircleStyle}" Background="Transparent">
                        <Image Source="https://picsum.photos/24/24?random=3" Style="{StaticResource AvatarImageSmallStyle}" />
                    </Border>
                    
                    <!-- Initial Avatar -->
                    <Border Style="{StaticResource AvatarSmallCircleStyle}">
                        <TextBlock Text="F" Style="{StaticResource AvatarInitialsSmallStyle}" />
                    </Border>
                    </utu:AutoLayout>
                </utu:AutoLayout>

                <!-- Square Shapes -->
                <utu:AutoLayout Orientation="Vertical" Spacing="16">
                    <TextBlock Text="Square Shape" Style="{StaticResource BodyStrongTextBlockStyle}" />                <!-- Large Square Row -->
                <utu:AutoLayout Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                    <TextBlock Text="Large (40px)" Width="150" VerticalAlignment="Center" Style="{StaticResource BodyBaseTextBlockStyle}" />
                    
                    <!-- Image Avatar -->
                    <Border Style="{StaticResource AvatarLargeSquareStyle}" Background="Transparent">
                        <Image Source="https://picsum.photos/40/40?random=4" Style="{StaticResource AvatarImageLargeStyle}" />
                    </Border>
                    
                    <!-- Initial Avatar -->
                    <Border Style="{StaticResource AvatarLargeSquareStyle}">
                        <TextBlock Text="F" Style="{StaticResource AvatarInitialsLargeStyle}" />
                    </Border>
                </utu:AutoLayout>
                
                <!-- Medium Square Row -->
                <utu:AutoLayout Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                    <TextBlock Text="Medium (32px)" Width="150" VerticalAlignment="Center" Style="{StaticResource BodyBaseTextBlockStyle}" />
                    
                    <!-- Image Avatar -->
                    <Border Style="{StaticResource AvatarMediumSquareStyle}" Background="Transparent">
                        <Image Source="https://picsum.photos/32/32?random=5" Style="{StaticResource AvatarImageMediumStyle}" />
                    </Border>
                    
                    <!-- Initial Avatar -->
                    <Border Style="{StaticResource AvatarMediumSquareStyle}">
                        <TextBlock Text="F" Style="{StaticResource AvatarInitialsMediumStyle}" />
                    </Border>
                </utu:AutoLayout>
                
                <!-- Small Square Row -->
                <utu:AutoLayout Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                    <TextBlock Text="Small (24px)" Width="150" VerticalAlignment="Center" Style="{StaticResource BodyBaseTextBlockStyle}" />
                    
                    <!-- Image Avatar -->
                    <Border Style="{StaticResource AvatarSmallSquareStyle}" Background="Transparent">
                        <Image Source="https://picsum.photos/24/24?random=6" Style="{StaticResource AvatarImageSmallStyle}" />
                    </Border>
                    
                    <!-- Initial Avatar -->
                    <Border Style="{StaticResource AvatarSmallSquareStyle}">
                        <TextBlock Text="F" Style="{StaticResource AvatarInitialsSmallStyle}" />
                    </Border>
                </utu:AutoLayout>
            </utu:AutoLayout>
            </utu:AutoLayout>

            <!-- Separator -->
            <Border Height="1" Background="{StaticResource DividerBrush}" Margin="0,32,0,0" />

            <!-- Uno PersonPicture Control Section -->
            <utu:AutoLayout Orientation="Vertical" Spacing="16">
                <TextBlock Text="Uno PersonPicture Control" Style="{StaticResource HeadingTextBlockStyle}" />
                <TextBlock Text="Using the built-in PersonPicture control from WinUI/Uno Platform with automatic sizing and initials support."
                           Style="{StaticResource BodyBaseTextBlockStyle}"
                           Foreground="{StaticResource SecondaryTextBrush}"
                           TextWrapping="Wrap" />
                
                <!-- Circle Shapes -->
                <utu:AutoLayout Orientation="Vertical" Spacing="16">
                    <TextBlock Text="Circle Shape" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    
                    <!-- Large Circle Row -->
                    <utu:AutoLayout Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                        <TextBlock Text="Large (40px)" Width="150" VerticalAlignment="Center" Style="{StaticResource BodyBaseTextBlockStyle}" />
                        
                        <!-- With Image -->
                        <PersonPicture 
                            ProfilePicture="https://picsum.photos/40/40?random=7"
                            DisplayName="John Doe"
                            Width="40" Height="40" />
                        
                        <!-- With Initials -->
                        <PersonPicture 
                            Initials="JD"
                            DisplayName="Jane Doe"
                            Width="40" Height="40" />
                    </utu:AutoLayout>
                    
                    <!-- Medium Circle Row -->
                    <utu:AutoLayout Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                        <TextBlock Text="Medium (32px)" Width="150" VerticalAlignment="Center" Style="{StaticResource BodyBaseTextBlockStyle}" />
                        
                        <!-- With Image -->
                        <PersonPicture 
                            ProfilePicture="https://picsum.photos/32/32?random=8"
                            DisplayName="Alice Smith"
                            Width="32" Height="32" />
                        
                        <!-- With Initials -->
                        <PersonPicture 
                            Initials="AS"
                            DisplayName="Alice Smith"
                            Width="32" Height="32" />
                    </utu:AutoLayout>
                    
                    <!-- Small Circle Row -->
                    <utu:AutoLayout Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                        <TextBlock Text="Small (24px)" Width="150" VerticalAlignment="Center" Style="{StaticResource BodyBaseTextBlockStyle}" />
                        
                        <!-- With Image -->
                        <PersonPicture 
                            ProfilePicture="https://picsum.photos/24/24?random=9"
                            DisplayName="Bob Johnson"
                            Width="24" Height="24" />
                        
                        <!-- With Initials -->
                        <PersonPicture 
                            Initials="BJ"
                            DisplayName="Bob Johnson"
                            Width="24" Height="24" />
                    </utu:AutoLayout>
                </utu:AutoLayout>
                
                <!-- Square Shapes with PersonPicture -->
                <utu:AutoLayout Orientation="Vertical" Spacing="16">
                    <TextBlock Text="Square Shape (Custom CornerRadius)" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    
                    <!-- Large Square Row -->
                    <utu:AutoLayout Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                        <TextBlock Text="Large (40px)" Width="150" VerticalAlignment="Center" Style="{StaticResource BodyBaseTextBlockStyle}" />
                        
                        <!-- With Image -->
                        <PersonPicture 
                            ProfilePicture="https://picsum.photos/40/40?random=10"
                            DisplayName="Sarah Lee"
                            Width="40" Height="40"
                            CornerRadius="8" />
                        
                        <!-- With Initials -->
                        <PersonPicture 
                            Initials="SL"
                            DisplayName="Sarah Lee"
                            Width="40" Height="40"
                            CornerRadius="8" />
                    </utu:AutoLayout>
                    
                    <!-- Medium Square Row -->
                    <utu:AutoLayout Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                        <TextBlock Text="Medium (32px)" Width="150" VerticalAlignment="Center" Style="{StaticResource BodyBaseTextBlockStyle}" />
                        
                        <!-- With Image -->
                        <PersonPicture 
                            ProfilePicture="https://picsum.photos/32/32?random=11"
                            DisplayName="Mike Chen"
                            Width="32" Height="32"
                            CornerRadius="8" />
                        
                        <!-- With Initials -->
                        <PersonPicture 
                            Initials="MC"
                            DisplayName="Mike Chen"
                            Width="32" Height="32"
                            CornerRadius="8" />
                    </utu:AutoLayout>
                    
                    <!-- Small Square Row -->
                    <utu:AutoLayout Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                        <TextBlock Text="Small (24px)" Width="150" VerticalAlignment="Center" Style="{StaticResource BodyBaseTextBlockStyle}" />
                        
                        <!-- With Image -->
                        <PersonPicture 
                            ProfilePicture="https://picsum.photos/24/24?random=12"
                            DisplayName="Emma Wu"
                            Width="24" Height="24"
                            CornerRadius="4" />
                        
                        <!-- With Initials -->
                        <PersonPicture 
                            Initials="EW"
                            DisplayName="Emma Wu"
                            Width="24" Height="24"
                            CornerRadius="4" />
                    </utu:AutoLayout>
                </utu:AutoLayout>
            </utu:AutoLayout>

            <!-- Source Code Viewer -->
            <controls:SourceCodeViewer 
                PageXamlPath="ms-appx:///Presentation/AvatarPage.xaml"
                StyleXamlPath="ms-appx:///Styles/Avatar.xaml" />

        </utu:AutoLayout>
    </ScrollViewer>
</Page>
