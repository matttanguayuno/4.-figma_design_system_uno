<Page x:Class="figma_design_system_uno.Presentation.AvatarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      Background="Transparent">

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Padding="{StaticResource Spacing800}"
                    Spacing="{StaticResource Space1200}">

      <!-- Page Header -->
      <utu:NavigationBar Content="Avatar Component"
                         HorizontalContentAlignment="Left"
                         VerticalAlignment="Bottom">
        <utu:NavigationBar.MainCommand>
          <AppBarButton Icon="Back" Click="OnBackClick" />
        </utu:NavigationBar.MainCommand>
        <utu:NavigationBar.ContentTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding}"
                       FontSize="48"
                       FontWeight="Bold"
                       VerticalAlignment="Bottom" />
          </DataTemplate>
        </utu:NavigationBar.ContentTemplate>
      </utu:NavigationBar>

      <!-- LEVEL 1: Avatar Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Avatar"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Matrix Layout with Row/Column Labels -->
        <Grid ColumnSpacing="24" RowSpacing="16">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

          <!-- Column Headers -->
          <TextBlock Grid.Row="0" Grid.Column="1" Text="Circle" FontSize="12" 
                     Foreground="{StaticResource SecondaryTextBrush}" 
                     HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,8"/>
          <TextBlock Grid.Row="0" Grid.Column="2" Text="Square" FontSize="12" 
                     Foreground="{StaticResource SecondaryTextBrush}" 
                     HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,8"/>

          <!-- Row 1: Large -->
          <TextBlock Grid.Row="1" Grid.Column="0" Text="Large" 
                     FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,24,0"/>
          
          <utu:AutoLayout Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
            <PersonPicture ProfilePicture="https://picsum.photos/40/40?random=1"
                           DisplayName="User"
                           Width="40" Height="40" />
            <PersonPicture Initials="F"
                           DisplayName="User"
                           Width="40" Height="40" />
          </utu:AutoLayout>

          <utu:AutoLayout Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
            <Border Width="40" Height="40" CornerRadius="8" Background="Transparent">
              <Image Source="https://picsum.photos/40/40?random=2" Stretch="UniformToFill" />
            </Border>
            <Border Width="40" Height="40" CornerRadius="8" Background="{StaticResource NeutralTertiaryBrush}">
              <TextBlock Text="F" FontSize="16" FontWeight="Medium" Foreground="{StaticResource DefaultTextBrush}" 
                         HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
          </utu:AutoLayout>

          <!-- Row 2: Medium -->
          <TextBlock Grid.Row="2" Grid.Column="0" Text="Medium" 
                     FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,24,0"/>
          
          <utu:AutoLayout Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
            <PersonPicture ProfilePicture="https://picsum.photos/32/32?random=3"
                           DisplayName="User"
                           Width="32" Height="32" />
            <PersonPicture Initials="F"
                           DisplayName="User"
                           Width="32" Height="32" />
          </utu:AutoLayout>

          <utu:AutoLayout Grid.Row="2" Grid.Column="2" Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
            <Border Width="32" Height="32" CornerRadius="8" Background="Transparent">
              <Image Source="https://picsum.photos/32/32?random=4" Stretch="UniformToFill" />
            </Border>
            <Border Width="32" Height="32" CornerRadius="8" Background="{StaticResource NeutralTertiaryBrush}">
              <TextBlock Text="F" FontSize="14" FontWeight="Medium" Foreground="{StaticResource DefaultTextBrush}" 
                         HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
          </utu:AutoLayout>

          <!-- Row 3: Small -->
          <TextBlock Grid.Row="3" Grid.Column="0" Text="Small" 
                     FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,24,0"/>
          
          <utu:AutoLayout Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
            <PersonPicture ProfilePicture="https://picsum.photos/24/24?random=5"
                           DisplayName="User"
                           Width="24" Height="24" />
            <PersonPicture Initials="F"
                           DisplayName="User"
                           Width="24" Height="24" />
          </utu:AutoLayout>

          <utu:AutoLayout Grid.Row="3" Grid.Column="2" Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
            <Border Width="24" Height="24" CornerRadius="4" Background="Transparent">
              <Image Source="https://picsum.photos/24/24?random=6" Stretch="UniformToFill" />
            </Border>
            <Border Width="24" Height="24" CornerRadius="4" Background="{StaticResource NeutralTertiaryBrush}">
              <TextBlock Text="F" FontSize="12" FontWeight="Medium" Foreground="{StaticResource DefaultTextBrush}" 
                         HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
          </utu:AutoLayout>
        </Grid>
      </utu:AutoLayout>

      <!-- LEVEL 1: Avatar Group Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Avatar Group"
Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Avatar Group Variants -->
        <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
          
          <!-- Spaced Group -->
          <utu:AutoLayout Orientation="Vertical" Spacing="12">
            <TextBlock Text="Spaced"
                       FontWeight="SemiBold" />
            <Grid Width="150" Height="32">
              <PersonPicture ProfilePicture="https://picsum.photos/32/32?random=7"
                             DisplayName="User 1"
                             Width="32" Height="32"
                             HorizontalAlignment="Left" />
              <PersonPicture ProfilePicture="https://picsum.photos/32/32?random=8"
                             DisplayName="User 2"
                             Width="32" Height="32"
                             Margin="40,0,0,0"
                             HorizontalAlignment="Left" />
              <PersonPicture ProfilePicture="https://picsum.photos/32/32?random=9"
                             DisplayName="User 3"
                             Width="32" Height="32"
                             Margin="80,0,0,0"
                             HorizontalAlignment="Left" />
              <TextBlock Text="+1"
                         FontSize="14"
                         FontWeight="SemiBold"
                         Foreground="{StaticResource DefaultTextBrush}"
                         VerticalAlignment="Center"
                         Margin="124,0,0,0"
                         HorizontalAlignment="Left" />
            </Grid>
          </utu:AutoLayout>

          <!-- Overlap Group -->
          <utu:AutoLayout Orientation="Vertical" Spacing="12">
            <TextBlock Text="Overlap"
                       FontWeight="SemiBold" />
            <Grid Width="150" Height="32">
              <PersonPicture ProfilePicture="https://picsum.photos/32/32?random=10"
                             DisplayName="User 1"
                             Width="32" Height="32"
                             Canvas.Left="0"
                             Canvas.ZIndex="3"
                             HorizontalAlignment="Left" />
              <PersonPicture ProfilePicture="https://picsum.photos/32/32?random=11"
                             DisplayName="User 2"
                             Width="32" Height="32"
                             Margin="20,0,0,0"
                             Canvas.ZIndex="2"
                             HorizontalAlignment="Left" />
              <PersonPicture ProfilePicture="https://picsum.photos/32/32?random=12"
                             DisplayName="User 3"
                             Width="32" Height="32"
                             Margin="40,0,0,0"
                             Canvas.ZIndex="1"
                             HorizontalAlignment="Left" />
              <TextBlock Text="+1"
                         FontSize="14"
                         FontWeight="SemiBold"
                         Foreground="{StaticResource DefaultTextBrush}"
                         VerticalAlignment="Center"
                         Margin="84,0,0,0"
                         HorizontalAlignment="Left" />
            </Grid>
          </utu:AutoLayout>

        </utu:AutoLayout>
      </utu:AutoLayout>

      <!-- Source Code Viewer -->
      <controls:SourceCodeViewer 
        PageXamlPath="ms-appx:///Presentation/AvatarPage.xaml"
        StyleXamlPath="ms-appx:///Styles/Avatar.xaml" />

    </utu:AutoLayout>
  </ScrollViewer>
</Page>

