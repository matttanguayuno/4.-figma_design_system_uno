<Page x:Class="figma_design_system_uno.Presentation.SwitchFieldPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      Background="{StaticResource DefaultBackgroundBrush}">

  <Page.Resources>
    <local:SwitchFieldModel x:Key="ViewModel" />
  </Page.Resources>

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Padding="{StaticResource Spacing800}"
                    Spacing="{StaticResource Space1200}"
                    MaxWidth="1200"
                    HorizontalAlignment="Center">

      <!-- Page Title -->
      <TextBlock Text="Switch Field"
                 Style="{StaticResource TitlePageTextBlockStyle}" />

      <!-- Default State -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space300}">
        <TextBlock Text="Default"
                   Style="{StaticResource BodyStrongTextBlockStyle}" />
        
        <Grid ColumnSpacing="24" RowSpacing="24">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <!-- Column Headers -->
          <TextBlock Grid.Row="0" Grid.Column="0"
                     Text="Checked"
                     Style="{StaticResource BodyBaseTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     Margin="0,0,0,8" />
          <TextBlock Grid.Row="0" Grid.Column="1"
                     Text="Unchecked"
                     Style="{StaticResource BodyBaseTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     Margin="0,0,0,8" />
          
          <!-- Checked -->
          <Grid Grid.Row="1" Grid.Column="0" Width="340">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <utu:AutoLayout Grid.Column="0" Orientation="Vertical" Spacing="0" VerticalAlignment="Center">
              <TextBlock Text="Label"
                         Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description"
                         Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" />
            </utu:AutoLayout>
            <ToggleSwitch Grid.Column="1"
                          IsOn="True"
                          Style="{StaticResource SwitchFieldToggleSwitchStyle}"
                          VerticalAlignment="Center"
                          Margin="12,0,0,0" />
          </Grid>

          <!-- Unchecked -->
          <Grid Grid.Row="1" Grid.Column="1" Width="340">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <utu:AutoLayout Grid.Column="0" Orientation="Vertical" Spacing="0" VerticalAlignment="Center">
              <TextBlock Text="Label"
                         Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description"
                         Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" />
            </utu:AutoLayout>
            <ToggleSwitch Grid.Column="1"
                          IsOn="False"
                          Style="{StaticResource SwitchFieldToggleSwitchStyle}"
                          VerticalAlignment="Center"
                          Margin="12,0,0,0" />
          </Grid>
        </Grid>
      </utu:AutoLayout>

      <!-- Disabled State -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space300}">
        <TextBlock Text="Disabled"
                   Style="{StaticResource BodyStrongTextBlockStyle}" />
        
        <Grid ColumnSpacing="24" RowSpacing="24">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <!-- Column Headers -->
          <TextBlock Grid.Row="0" Grid.Column="0"
                     Text="Checked"
                     Style="{StaticResource BodyBaseTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     Margin="0,0,0,8" />
          <TextBlock Grid.Row="0" Grid.Column="1"
                     Text="Unchecked"
                     Style="{StaticResource BodyBaseTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     Margin="0,0,0,8" />
          
          <!-- Checked -->
          <Grid Grid.Row="1" Grid.Column="0" Width="340">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <utu:AutoLayout Grid.Column="0" Orientation="Vertical" Spacing="0" VerticalAlignment="Center">
              <TextBlock Text="Label"
                         Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="#b3b3b3" />
              <TextBlock Text="Description"
                         Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="#b3b3b3" />
            </utu:AutoLayout>
            <ToggleSwitch Grid.Column="1"
                          IsOn="True"
                          IsEnabled="False"
                          Style="{StaticResource SwitchFieldToggleSwitchStyle}"
                          VerticalAlignment="Center"
                          Margin="12,0,0,0" />
          </Grid>

          <!-- Unchecked -->
          <Grid Grid.Row="1" Grid.Column="1" Width="340">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <utu:AutoLayout Grid.Column="0" Orientation="Vertical" Spacing="0" VerticalAlignment="Center">
              <TextBlock Text="Label"
                         Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="#b3b3b3" />
              <TextBlock Text="Description"
                         Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="#b3b3b3" />
            </utu:AutoLayout>
            <ToggleSwitch Grid.Column="1"
                          IsOn="False"
                          IsEnabled="False"
                          Style="{StaticResource SwitchFieldToggleSwitchStyle}"
                          VerticalAlignment="Center"
                          Margin="12,0,0,0" />
          </Grid>
        </Grid>
      </utu:AutoLayout>



      <!-- Source Code Viewer -->
      <controls:SourceCodeViewer 
          PageXamlPath="ms-appx:///Presentation/SwitchFieldPage.xaml"
          StyleXamlPath="ms-appx:///Styles/ToggleSwitch.xaml" />

    </utu:AutoLayout>
  </ScrollViewer>
</Page>
