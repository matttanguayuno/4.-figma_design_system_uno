<Page x:Class="figma_design_system_uno.Presentation.SectionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="Transparent"
      NavigationCacheMode="Required">

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Padding="{StaticResource Spacing800}"
                    Spacing="{StaticResource Space1200}">

      <!-- Page Header -->
      <utu:NavigationBar Content="Sections"
                         HorizontalContentAlignment="Left"
                         VerticalAlignment="Bottom">
        <utu:NavigationBar.MainCommand>
          <AppBarButton Icon="Back" Click="OnBackClick" />
        </utu:NavigationBar.MainCommand>
        <utu:NavigationBar.ContentTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding}"
                       FontSize="48"
                       FontWeight="Bold"
                       VerticalAlignment="Bottom" />
          </DataTemplate>
        </utu:NavigationBar.ContentTemplate>
      </utu:NavigationBar>

      <!-- Description -->
      <TextBlock Text="Full-width responsive sections. Click any section to open it in a new tab/window where you can resize to see responsive behavior."
                 Style="{StaticResource BodyLargeTextBlockStyle}"
                 TextWrapping="Wrap"
                 Foreground="{StaticResource SecondaryTextBrush}" />

      <!-- Sections List -->
      <utu:AutoLayout Orientation="Vertical" Spacing="16">
        <TextBlock Text="Available Sections"
                   FontWeight="SemiBold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Cards in Grid Layout -->
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>

          <!-- Header Section Card -->
          <Border Grid.Column="0"
                  CornerRadius="{StaticResource Radius200}"
                  BorderThickness="2"
                  VerticalAlignment="Stretch"
                  Translation="0,0,16">
            <Border.BorderBrush>
              <SolidColorBrush Color="{StaticResource SDSCardBorderColor}" />
            </Border.BorderBrush>
            <Border.Background>
              <SolidColorBrush Color="{StaticResource SDSCardBackgroundLightColor}" />
            </Border.Background>
            <Border.Shadow>
              <ThemeShadow />
            </Border.Shadow>
            <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}"
                            PrimaryAxisAlignment="Center"
                            VerticalAlignment="Stretch">

              <!-- Icon and Name -->
              <StackPanel Orientation="Horizontal" Spacing="12"
                          HorizontalAlignment="Center">
                <Border Width="48" Height="48"
                        Background="{StaticResource BrandTertiaryBrush}"
                        CornerRadius="{StaticResource Radius200}">
                  <FontIcon Glyph="&#xE8BC;"
                            FontSize="24"
                            Foreground="{StaticResource DefaultTextBrush}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                </Border>

                <TextBlock Text="Header"
                           Foreground="Black"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" />
              </StackPanel>

              <!-- Navigation Button -->
              <Button Content="View"
                      Click="OnOpenHeaderClick"
                      Style="{StaticResource FilledButtonStyle}"
                      HorizontalAlignment="Center" />
            </utu:AutoLayout>
          </Border>

          <!-- Footer Section Card -->
          <Border Grid.Column="2"
                  CornerRadius="{StaticResource Radius200}"
                  BorderThickness="2"
                  VerticalAlignment="Stretch"
                  Translation="0,0,16">
            <Border.BorderBrush>
              <SolidColorBrush Color="{StaticResource SDSCardBorderColor}" />
            </Border.BorderBrush>
            <Border.Background>
              <SolidColorBrush Color="{StaticResource SDSCardBackgroundLightColor}" />
            </Border.Background>
            <Border.Shadow>
              <ThemeShadow />
            </Border.Shadow>
            <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}"
                            PrimaryAxisAlignment="Center"
                            VerticalAlignment="Stretch">

              <!-- Icon and Name -->
              <StackPanel Orientation="Horizontal" Spacing="12"
                          HorizontalAlignment="Center">
                <Border Width="48" Height="48"
                        Background="{StaticResource BrandTertiaryBrush}"
                        CornerRadius="{StaticResource Radius200}">
                  <FontIcon Glyph="&#xE8BC;"
                            FontSize="24"
                            Foreground="{StaticResource DefaultTextBrush}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                </Border>

                <TextBlock Text="Footer"
                           Foreground="Black"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" />
              </StackPanel>

              <!-- Navigation Button -->
              <Button Content="View"
                      Click="OnOpenFooterClick"
                      Style="{StaticResource FilledButtonStyle}"
                      HorizontalAlignment="Center" />
            </utu:AutoLayout>
          </Border>

          <!-- Hero Section Card -->
          <Border Grid.Column="4"
                  CornerRadius="{StaticResource Radius200}"
                  BorderThickness="2"
                  VerticalAlignment="Stretch"
                  Translation="0,0,16">
            <Border.BorderBrush>
              <SolidColorBrush Color="{StaticResource SDSCardBorderColor}" />
            </Border.BorderBrush>
            <Border.Background>
              <SolidColorBrush Color="{StaticResource SDSCardBackgroundLightColor}" />
            </Border.Background>
            <Border.Shadow>
              <ThemeShadow />
            </Border.Shadow>
            <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}"
                            PrimaryAxisAlignment="Center"
                            VerticalAlignment="Stretch">

              <!-- Icon and Name -->
              <StackPanel Orientation="Horizontal" Spacing="12"
                          HorizontalAlignment="Center">
                <Border Width="48" Height="48"
                        Background="{StaticResource BrandTertiaryBrush}"
                        CornerRadius="{StaticResource Radius200}">
                  <FontIcon Glyph="&#xE8BC;"
                            FontSize="24"
                            Foreground="{StaticResource DefaultTextBrush}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                </Border>

                <TextBlock Text="Hero"
                           Foreground="Black"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" />
              </StackPanel>

              <!-- Navigation Button -->
              <Button Content="View"
                      Style="{StaticResource FilledButtonStyle}"
                      HorizontalAlignment="Center">
                <Button.Flyout>
                  <MenuFlyout>
                    <MenuFlyoutItem Text="Hero Basic"
                                    Click="OnOpenHeroBasicClick" />
                    <MenuFlyoutItem Text="Hero Actions"
                                    Click="OnOpenHeroActionsClick" />
                    <MenuFlyoutItem Text="Hero Newsletter"
                                    Click="OnOpenHeroNewsletterClick" />
                    <MenuFlyoutItem Text="Hero Form"
                                    Click="OnOpenHeroFormClick" />
                    <MenuFlyoutItem Text="Hero Image"
                                    Click="OnOpenHeroImageClick" />
                  </MenuFlyout>
                </Button.Flyout>
              </Button>
            </utu:AutoLayout>
          </Border>
        </Grid>

        <!-- Second Row of Cards -->
        <Grid Margin="0,16,0,0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>

          <!-- Panel Section Card -->
          <Border Grid.Column="0"
                  CornerRadius="{StaticResource Radius200}"
                  BorderThickness="2"
                  VerticalAlignment="Stretch"
                  Translation="0,0,16">
            <Border.BorderBrush>
              <SolidColorBrush Color="{StaticResource SDSCardBorderColor}" />
            </Border.BorderBrush>
            <Border.Background>
              <SolidColorBrush Color="{StaticResource SDSCardBackgroundLightColor}" />
            </Border.Background>
            <Border.Shadow>
              <ThemeShadow />
            </Border.Shadow>
            <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}"
                            PrimaryAxisAlignment="Center"
                            VerticalAlignment="Stretch">

              <!-- Icon and Name -->
              <StackPanel Orientation="Horizontal" Spacing="12"
                          HorizontalAlignment="Center">
                <Border Width="48" Height="48"
                        Background="{StaticResource BrandTertiaryBrush}"
                        CornerRadius="{StaticResource Radius200}">
                  <FontIcon Glyph="&#xE8BC;"
                            FontSize="24"
                            Foreground="{StaticResource DefaultTextBrush}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                </Border>

                <TextBlock Text="Panel"
                           Foreground="Black"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" />
              </StackPanel>

              <!-- Navigation Button -->
              <Button Content="View"
                      Style="{StaticResource FilledButtonStyle}"
                      HorizontalAlignment="Center">
                <Button.Flyout>
                  <MenuFlyout>
                    <MenuFlyoutItem Text="Panel Image Content"
                                    Click="OnOpenPanelImageContentClick" />
                    <MenuFlyoutItem Text="Panel Image Content Reverse"
                                    Click="OnOpenPanelImageContentReverseClick" />
                    <MenuFlyoutItem Text="Panel Image"
                                    Click="OnOpenPanelImageClick" />
                    <MenuFlyoutItem Text="Panel Image Double"
                                    Click="OnOpenPanelImageDoubleClick" />
                  </MenuFlyout>
                </Button.Flyout>
              </Button>
            </utu:AutoLayout>
          </Border>

          <!-- Card Grid Section Card -->
          <Border Grid.Column="2"
                  CornerRadius="{StaticResource Radius200}"
                  BorderThickness="2"
                  VerticalAlignment="Stretch"
                  Translation="0,0,16">
            <Border.BorderBrush>
              <SolidColorBrush Color="{StaticResource SDSCardBorderColor}" />
            </Border.BorderBrush>
            <Border.Background>
              <SolidColorBrush Color="{StaticResource SDSCardBackgroundLightColor}" />
            </Border.Background>
            <Border.Shadow>
              <ThemeShadow />
            </Border.Shadow>
            <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}"
                            PrimaryAxisAlignment="Center"
                            VerticalAlignment="Stretch">

              <!-- Icon and Name -->
              <StackPanel Orientation="Horizontal" Spacing="12"
                          HorizontalAlignment="Center">
                <Border Width="48" Height="48"
                        Background="{StaticResource BrandTertiaryBrush}"
                        CornerRadius="{StaticResource Radius200}">
                  <FontIcon Glyph="&#xE8BC;"
                            FontSize="24"
                            Foreground="{StaticResource DefaultTextBrush}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                </Border>

                <TextBlock Text="Card Grid"
                           Foreground="Black"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" />
              </StackPanel>

              <!-- Navigation Button with Menu -->
              <Button Content="View"
                      Style="{StaticResource FilledButtonStyle}"
                      HorizontalAlignment="Center">
                <Button.Flyout>
                  <MenuFlyout>
                    <MenuFlyoutItem Text="Card Grid Pricing"
                                    Click="OnOpenCardGridPricingClick" />
                    <MenuFlyoutItem Text="Card Grid Icon"
                                    Click="OnOpenCardGridIconClick" />
                    <MenuFlyoutItem Text="Card Grid Image"
                                    Click="OnOpenCardGridImageClick" />
                    <MenuFlyoutItem Text="Card Grid Content List"
                                    Click="OnOpenCardGridContentListClick" />
                    <MenuFlyoutItem Text="Card Grid Testimonials"
                                    Click="OnOpenCardGridTestimonialsClick" />
                    <MenuFlyoutItem Text="Card Grid Reviews"
                                    Click="OnOpenCardGridReviewsClick" />
                  </MenuFlyout>
                </Button.Flyout>
              </Button>
            </utu:AutoLayout>
          </Border>
        </Grid>

        <!-- Page Sections Card -->
        <Border CornerRadius="{StaticResource Radius200}"
                BorderThickness="2"
                VerticalAlignment="Stretch"
                Translation="0,0,16"
                MaxWidth="400">
          <Border.BorderBrush>
            <SolidColorBrush Color="{StaticResource SDSCardBorderColor}" />
          </Border.BorderBrush>
          <Border.Background>
            <SolidColorBrush Color="{StaticResource SDSCardBackgroundLightColor}" />
          </Border.Background>
          <Border.Shadow>
            <ThemeShadow />
          </Border.Shadow>
          <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}"
                          Padding="{StaticResource Spacing600}"
                          PrimaryAxisAlignment="Center"
                          VerticalAlignment="Stretch">

            <!-- Icon and Name -->
            <StackPanel Orientation="Horizontal" Spacing="12"
                        HorizontalAlignment="Center">
              <Border Width="48" Height="48"
                      Background="{StaticResource BrandTertiaryBrush}"
                      CornerRadius="{StaticResource Radius200}">
                <FontIcon Glyph="&#xE8A5;"
                          FontSize="24"
                          Foreground="{StaticResource DefaultTextBrush}"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" />
              </Border>

              <TextBlock Text="Page Sections"
                         Foreground="Black"
                         FontSize="18"
                         FontWeight="SemiBold"
                         VerticalAlignment="Center" />
            </StackPanel>

            <!-- Navigation Button with Menu -->
            <Button Content="View"
                    Style="{StaticResource FilledButtonStyle}"
                    HorizontalAlignment="Center">
              <Button.Flyout>
                <MenuFlyout>
                  <MenuFlyoutItem Text="Page Accordion"
                                  Click="OnOpenPageAccordionClick" />
                  <MenuFlyoutItem Text="Page Product"
                                  Click="OnOpenPageProductClick" />
                  <MenuFlyoutItem Text="Page Product Results"
                                  Click="OnOpenPageProductResultsClick" />
                  <MenuFlyoutItem Text="Page Newsletter"
                                  Click="OnOpenPageNewsletterClick" />
                </MenuFlyout>
              </Button.Flyout>
            </Button>
          </utu:AutoLayout>
        </Border>
      </utu:AutoLayout>
    </utu:AutoLayout>
  </ScrollViewer>
</Page>
