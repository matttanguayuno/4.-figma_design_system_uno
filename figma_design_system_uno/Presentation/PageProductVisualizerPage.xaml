<Page
    x:Class="figma_design_system_uno.Presentation.PageProductVisualizerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:figma_design_system_uno.Presentation"
    xmlns:controls="using:figma_design_system_uno.Controls"
    Background="{StaticResource BackgroundSecondaryBrush}">

    <Grid x:Name="RootGrid"
          Loaded="RootGrid_Loaded"
          SizeChanged="RootGrid_SizeChanged">
        
        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <controls:PageProductControl x:Name="ProductControl" />
        </ScrollViewer>
    </Grid>
</Page>
