<Page x:Class="figma_design_system_uno.Presentation.HeroFormVisualizerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:figma_design_system_uno.Controls"
      Background="{StaticResource DefaultBackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid SizeChanged="OnPageSizeChanged">
            <controls:HeroFormControl x:Name="HeroFormControlElement"/>
        </Grid>
    </ScrollViewer>
</Page>
