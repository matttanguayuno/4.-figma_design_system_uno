<Page x:Class="figma_design_system_uno.Presentation.InputFieldsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      NavigationCacheMode="Required"
      Background="Transparent">

  <Page.Resources>
    <SolidColorBrush x:Key="ErrorTextBrush" Color="#900b09" />
    <SolidColorBrush x:Key="ErrorBorderBrush" Color="#900b09" />
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#ffffff" />
    <SolidColorBrush x:Key="InputBorderBrush" Color="#d9d9d9" />
    <SolidColorBrush x:Key="InputDisabledBackgroundBrush" Color="#d9d9d9" />
    <SolidColorBrush x:Key="InputDisabledBorderBrush" Color="#b2b2b2" />
    <SolidColorBrush x:Key="InputDisabledTextBrush" Color="#b3b3b3" />
  </Page.Resources>

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Spacing="{StaticResource Space1200}"
                    Padding="{StaticResource Spacing800}">

      <!-- Page Header -->
      <utu:NavigationBar Content="Inputs"
                         HorizontalContentAlignment="Left"
                         VerticalAlignment="Bottom">
        <utu:NavigationBar.MainCommand>
          <AppBarButton Icon="Back" Click="OnBackClick" />
        </utu:NavigationBar.MainCommand>
        <utu:NavigationBar.ContentTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding}"
                       FontSize="48"
                       FontWeight="Bold"
                       VerticalAlignment="Bottom" />
          </DataTemplate>
        </utu:NavigationBar.ContentTemplate>
      </utu:NavigationBar>

      <!-- 1. Checkbox Field -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
        <TextBlock Text="Checkbox Field"
                   Style="{StaticResource BodyStrongTextBlockStyle}" />
        
        <!-- Test with different negative margins -->
        <utu:AutoLayout Orientation="Horizontal" Spacing="12" 
                        PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
          <CheckBox IsChecked="True" VerticalContentAlignment="Top" Padding="0" />
          <utu:AutoLayout Orientation="Vertical" Spacing="0" Margin="-70,0,0,0">
            <TextBlock Text="Test -70" Style="{StaticResource BodyBaseTextBlockStyle}" />
            <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}" Foreground="{StaticResource SecondaryTextBrush}" />
          </utu:AutoLayout>
        </utu:AutoLayout>
        
        <Grid ColumnSpacing="64">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <TextBlock Grid.Row="0" Grid.Column="1" Text="Checked"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,16" />
          <TextBlock Grid.Row="0" Grid.Column="2" Text="Unchecked"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,16" />
          <TextBlock Grid.Row="0" Grid.Column="3" Text="Indeterminate"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,16" />

          <TextBlock Grid.Row="1" Grid.Column="0" Text="Default"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     VerticalAlignment="Center" Margin="0,0,24,0" />
          <TextBlock Grid.Row="2" Grid.Column="0" Text="Disabled"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     VerticalAlignment="Center" Margin="0,0,24,0" />

          <!-- Default Checked -->
          <utu:AutoLayout Grid.Row="1" Grid.Column="1" Orientation="Horizontal"
                          Spacing="12" Width="240" Margin="0,0,0,24"
                          PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
            <CheckBox IsChecked="True" VerticalContentAlignment="Top" Padding="0" />
            <utu:AutoLayout Orientation="Vertical" Spacing="0" utu:AutoLayout.CounterAlignment="Start" Margin="-50,0,0,0">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <!-- Default Unchecked -->
          <utu:AutoLayout Grid.Row="1" Grid.Column="2" Orientation="Horizontal"
                          Spacing="12" Width="240" Margin="0,0,0,24"
                          PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
            <CheckBox IsChecked="False" VerticalContentAlignment="Top" Padding="0" />
            <utu:AutoLayout Orientation="Vertical" Spacing="0" utu:AutoLayout.CounterAlignment="Start" Margin="-50,0,0,0">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <!-- Default Indeterminate -->
          <utu:AutoLayout Grid.Row="1" Grid.Column="3" Orientation="Horizontal"
                          Spacing="12" Width="240" Margin="0,0,0,24"
                          PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
            <CheckBox IsChecked="{x:Null}" VerticalContentAlignment="Top" Padding="0" />
            <utu:AutoLayout Orientation="Vertical" Spacing="0" utu:AutoLayout.CounterAlignment="Start" Margin="-50,0,0,0">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <!-- Disabled Checked -->
          <utu:AutoLayout Grid.Row="2" Grid.Column="1" Orientation="Horizontal"
                          Spacing="12" Width="240"
                          PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
            <CheckBox IsChecked="True" IsEnabled="False" VerticalContentAlignment="Top" Padding="0" />
            <utu:AutoLayout Orientation="Vertical" Spacing="0" utu:AutoLayout.CounterAlignment="Start" Margin="-50,0,0,0">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" Opacity="0.5" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <!-- Disabled Unchecked -->
          <utu:AutoLayout Grid.Row="2" Grid.Column="2" Orientation="Horizontal"
                          Spacing="12" Width="240"
                          PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
            <CheckBox IsChecked="False" IsEnabled="False" VerticalContentAlignment="Top" Padding="0" />
            <utu:AutoLayout Orientation="Vertical" Spacing="0" utu:AutoLayout.CounterAlignment="Start" Margin="-50,0,0,0">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" Opacity="0.5" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <!-- Disabled Indeterminate -->
          <utu:AutoLayout Grid.Row="2" Grid.Column="3" Orientation="Horizontal"
                          Spacing="12" Width="240"
                          PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
            <CheckBox IsChecked="{x:Null}" IsEnabled="False" VerticalContentAlignment="Top" Padding="0" />
            <utu:AutoLayout Orientation="Vertical" Spacing="0" utu:AutoLayout.CounterAlignment="Start" Margin="-50,0,0,0">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" Opacity="0.5" />
            </utu:AutoLayout>
          </utu:AutoLayout>
        </Grid>
      </utu:AutoLayout>

      <!-- 2. Radio Field -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
        <TextBlock Text="Radio Field"
                   Style="{StaticResource BodyStrongTextBlockStyle}" />
        
        <Grid ColumnSpacing="64">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <TextBlock Grid.Row="0" Grid.Column="1" Text="Checked"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,16" />
          <TextBlock Grid.Row="0" Grid.Column="2" Text="Unchecked"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,16" />

          <TextBlock Grid.Row="1" Grid.Column="0" Text="Default"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     VerticalAlignment="Center" Margin="0,0,24,0" />
          <TextBlock Grid.Row="2" Grid.Column="0" Text="Disabled"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     VerticalAlignment="Center" Margin="0,0,24,0" />

          <utu:AutoLayout Grid.Row="1" Grid.Column="1" Orientation="Vertical"
                          Spacing="{StaticResource Space300}" Width="240" Margin="0,0,0,24">
            <utu:AutoLayout Orientation="Horizontal" Spacing="{StaticResource Space300}">
              <RadioButton GroupName="Group1" IsChecked="True" VerticalAlignment="Center" />
              <TextBlock Text="Label" Style="{StaticResource BodyTextBlockStyle}" VerticalAlignment="Center" />
            </utu:AutoLayout>
            <utu:AutoLayout Orientation="Horizontal" Spacing="{StaticResource Space300}">
              <Border Width="16" Height="16" />
              <TextBlock Text="Description" Style="{StaticResource BodyTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" TextWrapping="Wrap" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <utu:AutoLayout Grid.Row="1" Grid.Column="2" Orientation="Vertical"
                          Spacing="{StaticResource Space300}" Width="240" Margin="0,0,0,24">
            <utu:AutoLayout Orientation="Horizontal" Spacing="{StaticResource Space300}">
              <RadioButton GroupName="Group2" IsChecked="False" VerticalAlignment="Center" />
              <TextBlock Text="Label" Style="{StaticResource BodyTextBlockStyle}" VerticalAlignment="Center" />
            </utu:AutoLayout>
            <utu:AutoLayout Orientation="Horizontal" Spacing="{StaticResource Space300}">
              <Border Width="16" Height="16" />
              <TextBlock Text="Description" Style="{StaticResource BodyTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" TextWrapping="Wrap" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <utu:AutoLayout Grid.Row="2" Grid.Column="1" Orientation="Vertical"
                          Spacing="{StaticResource Space300}" Width="240">
            <utu:AutoLayout Orientation="Horizontal" Spacing="{StaticResource Space300}">
              <RadioButton GroupName="Group3" IsChecked="True" IsEnabled="False" VerticalAlignment="Center" />
              <TextBlock Text="Label" Style="{StaticResource BodyTextBlockStyle}"
                         Foreground="{StaticResource InputDisabledTextBrush}" VerticalAlignment="Center" />
            </utu:AutoLayout>
            <utu:AutoLayout Orientation="Horizontal" Spacing="{StaticResource Space300}">
              <Border Width="16" Height="16" />
              <TextBlock Text="Description" Style="{StaticResource BodyTextBlockStyle}"
                         Foreground="{StaticResource InputDisabledTextBrush}" TextWrapping="Wrap" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <utu:AutoLayout Grid.Row="2" Grid.Column="2" Orientation="Vertical"
                          Spacing="{StaticResource Space300}" Width="240">
            <utu:AutoLayout Orientation="Horizontal" Spacing="{StaticResource Space300}">
              <RadioButton GroupName="Group4" IsChecked="False" IsEnabled="False" VerticalAlignment="Center" />
              <TextBlock Text="Label" Style="{StaticResource BodyTextBlockStyle}"
                         Foreground="{StaticResource InputDisabledTextBrush}" VerticalAlignment="Center" />
            </utu:AutoLayout>
            <utu:AutoLayout Orientation="Horizontal" Spacing="{StaticResource Space300}">
              <Border Width="16" Height="16" />
              <TextBlock Text="Description" Style="{StaticResource BodyTextBlockStyle}"
                         Foreground="{StaticResource InputDisabledTextBrush}" TextWrapping="Wrap" />
            </utu:AutoLayout>
          </utu:AutoLayout>
        </Grid>
      </utu:AutoLayout>

      <!-- 3. Switch Field -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
        <TextBlock Text="Switch Field"
                   Style="{StaticResource BodyStrongTextBlockStyle}" />
        
        <Grid ColumnSpacing="64">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <TextBlock Grid.Row="0" Grid.Column="1" Text="Checked"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,16" />
          <TextBlock Grid.Row="0" Grid.Column="2" Text="Unchecked"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,16" />

          <TextBlock Grid.Row="1" Grid.Column="0" Text="Default"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     VerticalAlignment="Center" Margin="0,0,24,0" />
          <TextBlock Grid.Row="2" Grid.Column="0" Text="Disabled"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     VerticalAlignment="Center" Margin="0,0,24,0" />

          <Grid Grid.Row="1" Grid.Column="1" Width="340" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <utu:AutoLayout Grid.Column="0" Orientation="Vertical" Spacing="0" VerticalAlignment="Center">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" />
            </utu:AutoLayout>
            <ToggleSwitch Grid.Column="1" IsOn="True"
                          Style="{StaticResource SwitchFieldToggleSwitchStyle}"
                          VerticalAlignment="Center" Margin="12,0,0,0" />
          </Grid>

          <Grid Grid.Row="1" Grid.Column="2" Width="340" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <utu:AutoLayout Grid.Column="0" Orientation="Vertical" Spacing="0" VerticalAlignment="Center">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" />
            </utu:AutoLayout>
            <ToggleSwitch Grid.Column="1" IsOn="False"
                          Style="{StaticResource SwitchFieldToggleSwitchStyle}"
                          VerticalAlignment="Center" Margin="12,0,0,0" />
          </Grid>

          <Grid Grid.Row="2" Grid.Column="1" Width="340">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <utu:AutoLayout Grid.Column="0" Orientation="Vertical" Spacing="0" VerticalAlignment="Center">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource InputDisabledTextBrush}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource InputDisabledTextBrush}" />
            </utu:AutoLayout>
            <ToggleSwitch Grid.Column="1" IsOn="True" IsEnabled="False"
                          Style="{StaticResource SwitchFieldToggleSwitchStyle}"
                          VerticalAlignment="Center" Margin="12,0,0,0" />
          </Grid>

          <Grid Grid.Row="2" Grid.Column="2" Width="340">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <utu:AutoLayout Grid.Column="0" Orientation="Vertical" Spacing="0" VerticalAlignment="Center">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource InputDisabledTextBrush}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource InputDisabledTextBrush}" />
            </utu:AutoLayout>
            <ToggleSwitch Grid.Column="1" IsOn="False" IsEnabled="False"
                          Style="{StaticResource SwitchFieldToggleSwitchStyle}"
                          VerticalAlignment="Center" Margin="12,0,0,0" />
          </Grid>
        </Grid>
      </utu:AutoLayout>

      <!-- 4. Input Field -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
        <TextBlock Text="Input Field"
                   Style="{StaticResource BodyStrongTextBlockStyle}" />
        
        <!-- Default -->
        <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space300}">
          <TextBlock Text="Default" Style="{StaticResource BodyStrongTextBlockStyle}" />
          <Grid ColumnSpacing="24">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Default"
                       Style="{StaticResource BodyBaseTextBlockStyle}"
                       Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,8" />
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Placeholder"
                       Style="{StaticResource BodyBaseTextBlockStyle}"
                       Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,8" />

            <utu:AutoLayout Grid.Row="1" Grid.Column="0" Orientation="Vertical" Spacing="8" Width="240">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <Border Background="{StaticResource InputBackgroundBrush}"
                      BorderBrush="{StaticResource InputBorderBrush}"
                      BorderThickness="1" CornerRadius="{StaticResource Radius200}" MinWidth="240">
                <TextBox Text="Value" BorderThickness="0" Background="Transparent"
                         Padding="16,12" FontSize="16" Style="{StaticResource InputFieldTextBoxStyle}" />
              </Border>
            </utu:AutoLayout>

            <utu:AutoLayout Grid.Row="1" Grid.Column="1" Orientation="Vertical" Spacing="8" Width="240">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <Border Background="{StaticResource InputBackgroundBrush}"
                      BorderBrush="{StaticResource InputBorderBrush}"
                      BorderThickness="1" CornerRadius="{StaticResource Radius200}" MinWidth="240">
                <TextBox Text="" PlaceholderText="Value" BorderThickness="0" Background="Transparent"
                         Padding="16,12" FontSize="16" Style="{StaticResource InputFieldTextBoxStyle}" />
              </Border>
            </utu:AutoLayout>
          </Grid>
        </utu:AutoLayout>

        <!-- Disabled -->
        <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space300}">
          <TextBlock Text="Disabled" Style="{StaticResource BodyStrongTextBlockStyle}" />
          <Grid ColumnSpacing="24">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Default"
                       Style="{StaticResource BodyBaseTextBlockStyle}"
                       Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,8" />
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Placeholder"
                       Style="{StaticResource BodyBaseTextBlockStyle}"
                       Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,8" />

            <utu:AutoLayout Grid.Row="1" Grid.Column="0" Orientation="Vertical" Spacing="8" Width="240">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource InputDisabledTextBrush}" />
              <Border Background="{StaticResource InputDisabledBackgroundBrush}"
                      BorderBrush="{StaticResource InputDisabledBorderBrush}"
                      BorderThickness="1" CornerRadius="{StaticResource Radius200}" MinWidth="240">
                <TextBox Text="Value" IsEnabled="False" BorderThickness="0" Background="Transparent"
                         Foreground="{StaticResource InputDisabledTextBrush}"
                         Padding="16,12" FontSize="16" Style="{StaticResource InputFieldTextBoxStyle}" />
              </Border>
            </utu:AutoLayout>

            <utu:AutoLayout Grid.Row="1" Grid.Column="1" Orientation="Vertical" Spacing="8" Width="240">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource InputDisabledTextBrush}" />
              <Border Background="{StaticResource InputDisabledBackgroundBrush}"
                      BorderBrush="{StaticResource InputDisabledBorderBrush}"
                      BorderThickness="1" CornerRadius="{StaticResource Radius200}" MinWidth="240">
                <TextBox Text="" PlaceholderText="Value" IsEnabled="False" BorderThickness="0"
                         Background="Transparent" Foreground="{StaticResource InputDisabledTextBrush}"
                         Padding="16,12" FontSize="16" Style="{StaticResource InputFieldTextBoxStyle}" />
              </Border>
            </utu:AutoLayout>
          </Grid>
        </utu:AutoLayout>

        <!-- Error -->
        <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space300}">
          <TextBlock Text="Error" Style="{StaticResource BodyStrongTextBlockStyle}" />
          <Grid ColumnSpacing="24">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Default"
                       Style="{StaticResource BodyBaseTextBlockStyle}"
                       Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,8" />
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Placeholder"
                       Style="{StaticResource BodyBaseTextBlockStyle}"
                       Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,8" />

            <utu:AutoLayout Grid.Row="1" Grid.Column="0" Orientation="Vertical" Spacing="8" Width="240">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <Border Background="{StaticResource InputBackgroundBrush}"
                      BorderBrush="{StaticResource ErrorBorderBrush}"
                      BorderThickness="1" CornerRadius="{StaticResource Radius200}" MinWidth="240">
                <TextBox Text="Value" BorderThickness="0" Background="Transparent"
                         Padding="16,12" FontSize="16" Style="{StaticResource InputFieldTextBoxStyle}" />
              </Border>
            </utu:AutoLayout>

            <utu:AutoLayout Grid.Row="1" Grid.Column="1" Orientation="Vertical" Spacing="8" Width="240">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <Border Background="{StaticResource InputBackgroundBrush}"
                      BorderBrush="{StaticResource ErrorBorderBrush}"
                      BorderThickness="1" CornerRadius="{StaticResource Radius200}" MinWidth="240">
                <TextBox Text="" PlaceholderText="Value" BorderThickness="0" Background="Transparent"
                         Padding="16,12" FontSize="16" Style="{StaticResource InputFieldTextBoxStyle}" />
              </Border>
            </utu:AutoLayout>
          </Grid>
        </utu:AutoLayout>
      </utu:AutoLayout>

      <!-- 5. Select Field -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
        <TextBlock Text="Select Field"
                   Style="{StaticResource BodyStrongTextBlockStyle}" />
        
        <Grid ColumnSpacing="64">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <TextBlock Grid.Row="0" Grid.Column="1" Text="Placeholder"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,16" />
          <TextBlock Grid.Row="0" Grid.Column="2" Text="Value"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,16" />

          <TextBlock Grid.Row="1" Grid.Column="0" Text="Default"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     VerticalAlignment="Center" Margin="0,0,24,0" />
          <TextBlock Grid.Row="2" Grid.Column="0" Text="Error"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     VerticalAlignment="Center" Margin="0,0,24,0" />
          <TextBlock Grid.Row="3" Grid.Column="0" Text="Disabled"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     VerticalAlignment="Center" Margin="0,0,24,0" />

          <utu:AutoLayout Grid.Row="1" Grid.Column="1" Orientation="Vertical"
                          Spacing="{StaticResource Space200}" Margin="0,0,0,24">
            <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
            <ComboBox SelectedIndex="0" Style="{StaticResource SelectFieldComboBoxStyle}"
                      CornerRadius="{StaticResource Radius200}" MinWidth="240">
              <ComboBoxItem Content="Value" />
              <ComboBoxItem Content="Option 2" />
            </ComboBox>
          </utu:AutoLayout>

          <utu:AutoLayout Grid.Row="1" Grid.Column="2" Orientation="Vertical"
                          Spacing="{StaticResource Space200}" Margin="0,0,0,24">
            <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
            <ComboBox SelectedIndex="0" Style="{StaticResource SelectFieldComboBoxStyle}"
                      CornerRadius="{StaticResource Radius200}" MinWidth="240">
              <ComboBoxItem Content="Value" />
              <ComboBoxItem Content="Option 2" />
            </ComboBox>
          </utu:AutoLayout>

          <!-- Error state -->
          <utu:AutoLayout Grid.Row="2" Grid.Column="1" Orientation="Vertical"
                          Spacing="{StaticResource Space200}" Margin="0,0,0,24">
            <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
            <ComboBox SelectedIndex="0" Style="{StaticResource SelectFieldComboBoxStyle}"
                      BorderBrush="{StaticResource ErrorBorderBrush}"
                      CornerRadius="{StaticResource Radius200}" MinWidth="240">
              <ComboBoxItem Content="Value" />
            </ComboBox>
          </utu:AutoLayout>

