<Page x:Class="figma_design_system_uno.Presentation.InputFieldsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      NavigationCacheMode="Required"
      Background="Transparent">

  <Page.Resources>
    <SolidColorBrush x:Key="ErrorTextBrush" Color="#900b09" />
    <SolidColorBrush x:Key="ErrorBorderBrush" Color="#900b09" />
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#ffffff" />
    <SolidColorBrush x:Key="InputBorderBrush" Color="#d9d9d9" />
    <SolidColorBrush x:Key="InputDisabledBackgroundBrush" Color="#d9d9d9" />
    <SolidColorBrush x:Key="InputDisabledBorderBrush" Color="#b2b2b2" />
    <SolidColorBrush x:Key="InputDisabledTextBrush" Color="#b3b3b3" />
  </Page.Resources>

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Spacing="{StaticResource Space1200}"
                    Padding="{StaticResource Spacing800}">

      <!-- Page Header -->
      <utu:NavigationBar Content="Inputs"
                         HorizontalContentAlignment="Left"
                         VerticalAlignment="Bottom">
        <utu:NavigationBar.MainCommand>
          <AppBarButton Icon="Back" Click="OnBackClick" />
        </utu:NavigationBar.MainCommand>
        <utu:NavigationBar.ContentTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding}"
                       FontSize="48"
                       FontWeight="Bold"
                       VerticalAlignment="Bottom" />
          </DataTemplate>
        </utu:NavigationBar.ContentTemplate>
      </utu:NavigationBar>

      <!-- 1. Checkbox Field -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
        <TextBlock Text="Checkbox Field"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />
        
        <Grid ColumnSpacing="64">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <Border Grid.Row="0" Grid.Column="1"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" Margin="0,0,0,16">
            <TextBlock Text="Checked"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <Border Grid.Row="0" Grid.Column="2"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" Margin="0,0,0,16">
            <TextBlock Text="Unchecked"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <Border Grid.Row="0" Grid.Column="3"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" Margin="0,0,0,16">
            <TextBlock Text="Indeterminate"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Border Grid.Row="1" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,24,0">
            <TextBlock Text="Default"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <Border Grid.Row="2" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,24,0">
            <TextBlock Text="Disabled"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Default Checked -->
          <utu:AutoLayout Grid.Row="1" Grid.Column="1" Orientation="Horizontal"
                          Spacing="12" Width="240" Margin="0,0,0,24"
                          PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
            <CheckBox IsChecked="True" VerticalContentAlignment="Top" Padding="0" />
            <utu:AutoLayout Orientation="Vertical" Spacing="0" utu:AutoLayout.CounterAlignment="Start" Margin="-95,5,0,0">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <!-- Default Unchecked -->
          <utu:AutoLayout Grid.Row="1" Grid.Column="2" Orientation="Horizontal"
                          Spacing="12" Width="240" Margin="0,0,0,24"
                          PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
            <CheckBox IsChecked="False" VerticalContentAlignment="Top" Padding="0" />
            <utu:AutoLayout Orientation="Vertical" Spacing="0" utu:AutoLayout.CounterAlignment="Start" Margin="-95,5,0,0">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <!-- Default Indeterminate -->
          <utu:AutoLayout Grid.Row="1" Grid.Column="3" Orientation="Horizontal"
                          Spacing="12" Width="240" Margin="0,0,0,24"
                          PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
            <CheckBox IsChecked="{x:Null}" VerticalContentAlignment="Top" Padding="0" />
            <utu:AutoLayout Orientation="Vertical" Spacing="0" utu:AutoLayout.CounterAlignment="Start" Margin="-95,5,0,0">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <!-- Disabled Checked -->
          <utu:AutoLayout Grid.Row="2" Grid.Column="1" Orientation="Horizontal"
                          Spacing="12" Width="240"
                          PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
            <CheckBox IsChecked="True" IsEnabled="False" VerticalContentAlignment="Top" Padding="0">
              <CheckBox.Template>
                <ControlTemplate TargetType="CheckBox">
                  <StackPanel Orientation="Horizontal">
                    <Grid Width="18" Height="18" VerticalAlignment="Center">
                      <Rectangle Fill="{ThemeResource CheckBoxCheckBackgroundFillCheckedDisabled}" 
                                 Stroke="{ThemeResource CheckBoxCheckBackgroundStrokeCheckedDisabled}" 
                                 StrokeThickness="1" RadiusX="2" RadiusY="2" />
                      <Path Data="{StaticResource CheckBoxCheckGlyphPathData}"
                            Fill="#B3B3B3" Stretch="Uniform" Width="12" Height="12" />
                    </Grid>
                    <ContentPresenter Content="{TemplateBinding Content}" Margin="8,0,0,0" VerticalAlignment="Center" />
                  </StackPanel>
                </ControlTemplate>
              </CheckBox.Template>
            </CheckBox>
            <utu:AutoLayout Orientation="Vertical" Spacing="0" utu:AutoLayout.CounterAlignment="Start" Margin="-95,5,0,0">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" Opacity="0.5" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <!-- Disabled Unchecked -->
          <utu:AutoLayout Grid.Row="2" Grid.Column="2" Orientation="Horizontal"
                          Spacing="12" Width="240"
                          PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
            <CheckBox IsChecked="False" IsEnabled="False" VerticalContentAlignment="Top" Padding="0" />
            <utu:AutoLayout Orientation="Vertical" Spacing="0" utu:AutoLayout.CounterAlignment="Start" Margin="-95,5,0,0">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" Opacity="0.5" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <!-- Disabled Indeterminate -->
          <utu:AutoLayout Grid.Row="2" Grid.Column="3" Orientation="Horizontal"
                          Spacing="12" Width="240"
                          PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
            <CheckBox IsChecked="{x:Null}" IsEnabled="False" VerticalContentAlignment="Top" Padding="0">
              <CheckBox.Template>
                <ControlTemplate TargetType="CheckBox">
                  <StackPanel Orientation="Horizontal">
                    <Grid Width="18" Height="18" VerticalAlignment="Center">
                      <Rectangle Fill="{ThemeResource CheckBoxCheckBackgroundFillIndeterminateDisabled}" 
                                 Stroke="{ThemeResource CheckBoxCheckBackgroundStrokeIndeterminateDisabled}" 
                                 StrokeThickness="1" RadiusX="2" RadiusY="2" />
                      <Path Data="{StaticResource CheckBoxHyphenGlyphPathData}"
                            Fill="#B3B3B3" Stretch="Uniform" Width="10" Height="10" />
                    </Grid>
                    <ContentPresenter Content="{TemplateBinding Content}" Margin="8,0,0,0" VerticalAlignment="Center" />
                  </StackPanel>
                </ControlTemplate>
              </CheckBox.Template>
            </CheckBox>
            <utu:AutoLayout Orientation="Vertical" Spacing="0" utu:AutoLayout.CounterAlignment="Start" Margin="-95,5,0,0">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" Opacity="0.5" />
            </utu:AutoLayout>
          </utu:AutoLayout>
        </Grid>
      </utu:AutoLayout>

      <!-- 2. Radio Field -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
        <TextBlock Text="Radio Field"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />
        
        <Grid ColumnSpacing="64">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <Border Grid.Row="0" Grid.Column="1"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" Margin="0,0,0,16">
            <TextBlock Text="Checked"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <Border Grid.Row="0" Grid.Column="2"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" Margin="0,0,0,16">
            <TextBlock Text="Unchecked"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Border Grid.Row="1" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,24,0">
            <TextBlock Text="Default"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <Border Grid.Row="2" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,24,0">
            <TextBlock Text="Disabled"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <utu:AutoLayout Grid.Row="1" Grid.Column="1" Orientation="Horizontal"
                          Spacing="12" Width="240" Margin="0,0,0,24"
                          PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
            <RadioButton GroupName="Group1" IsChecked="True" VerticalContentAlignment="Top" Padding="0" Margin="0,7,0,0">
              <RadioButton.Template>
                <ControlTemplate TargetType="RadioButton">
                  <StackPanel Orientation="Horizontal">
                    <Grid Width="16" Height="16" VerticalAlignment="Center">
                      <Ellipse Fill="#e6e6e6" Stroke="#000000" StrokeThickness="1" />
                      <Ellipse Fill="#000000" Width="10" Height="10" />
                    </Grid>
                    <ContentPresenter Content="{TemplateBinding Content}" Margin="8,0,0,0" VerticalAlignment="Center" />
                  </StackPanel>
                </ControlTemplate>
              </RadioButton.Template>
            </RadioButton>
            <utu:AutoLayout Orientation="Vertical" Spacing="0" utu:AutoLayout.CounterAlignment="Start" Margin="-95,5,0,0">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <utu:AutoLayout Grid.Row="1" Grid.Column="2" Orientation="Horizontal"
                          Spacing="12" Width="240" Margin="0,0,0,24"
                          PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
            <RadioButton GroupName="Group2" IsChecked="False" VerticalContentAlignment="Top" Padding="0" Margin="0,7,0,0">
              <RadioButton.Template>
                <ControlTemplate TargetType="RadioButton">
                  <StackPanel Orientation="Horizontal">
                    <Grid Width="16" Height="16" VerticalAlignment="Center">
                      <Ellipse Fill="Transparent" Stroke="#737373" StrokeThickness="1" />
                    </Grid>
                    <ContentPresenter Content="{TemplateBinding Content}" Margin="8,0,0,0" VerticalAlignment="Center" />
                  </StackPanel>
                </ControlTemplate>
              </RadioButton.Template>
            </RadioButton>
            <utu:AutoLayout Orientation="Vertical" Spacing="0" utu:AutoLayout.CounterAlignment="Start" Margin="-95,5,0,0">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <utu:AutoLayout Grid.Row="2" Grid.Column="1" Orientation="Horizontal"
                          Spacing="12" Width="240"
                          PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
            <RadioButton GroupName="Group3" IsChecked="True" IsEnabled="False" VerticalContentAlignment="Top" Padding="0" Margin="0,7,0,0">
              <RadioButton.Template>
                <ControlTemplate TargetType="RadioButton">
                  <StackPanel Orientation="Horizontal">
                    <Grid Width="16" Height="16" VerticalAlignment="Center">
                      <Ellipse Fill="#d9d9d9" Stroke="#b3b3b3" StrokeThickness="1" />
                      <Ellipse Fill="#b3b3b3" Width="10" Height="10" />
                    </Grid>
                    <ContentPresenter Content="{TemplateBinding Content}" Margin="8,0,0,0" VerticalAlignment="Center" />
                  </StackPanel>
                </ControlTemplate>
              </RadioButton.Template>
            </RadioButton>
            <utu:AutoLayout Orientation="Vertical" Spacing="0" utu:AutoLayout.CounterAlignment="Start" Margin="-95,5,0,0">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" Foreground="#B3B3B3" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" Opacity="0.5" />
            </utu:AutoLayout>
          </utu:AutoLayout>

          <utu:AutoLayout Grid.Row="2" Grid.Column="2" Orientation="Horizontal"
                          Spacing="12" Width="240"
                          PrimaryAxisAlignment="Start" CounterAxisAlignment="Start">
            <RadioButton GroupName="Group4" IsChecked="False" IsEnabled="False" VerticalContentAlignment="Top" Padding="0" Margin="0,7,0,0">
              <RadioButton.Template>
                <ControlTemplate TargetType="RadioButton">
                  <StackPanel Orientation="Horizontal">
                    <Grid Width="16" Height="16" VerticalAlignment="Center">
                      <Ellipse Fill="#d9d9d9" Stroke="#b3b3b3" StrokeThickness="1" />
                    </Grid>
                    <ContentPresenter Content="{TemplateBinding Content}" Margin="8,0,0,0" VerticalAlignment="Center" />
                  </StackPanel>
                </ControlTemplate>
              </RadioButton.Template>
            </RadioButton>
            <utu:AutoLayout Orientation="Vertical" Spacing="0" utu:AutoLayout.CounterAlignment="Start" Margin="-95,5,0,0">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" Opacity="0.5" />
            </utu:AutoLayout>
          </utu:AutoLayout>
        </Grid>
      </utu:AutoLayout>

      <!-- 3. Switch Field -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
        <TextBlock Text="Switch Field"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />
        
        <Grid ColumnSpacing="64">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <Border Grid.Row="0" Grid.Column="1"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" Margin="0,0,0,16">
            <TextBlock Text="Checked"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <Border Grid.Row="0" Grid.Column="2"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" Margin="0,0,0,16">
            <TextBlock Text="Unchecked"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Border Grid.Row="1" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,24,0">
            <TextBlock Text="Default"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <Border Grid.Row="2" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,24,0">
            <TextBlock Text="Disabled"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Grid Grid.Row="1" Grid.Column="1" Width="340" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <utu:AutoLayout Grid.Column="0" Orientation="Vertical" Spacing="0" VerticalAlignment="Center">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" />
            </utu:AutoLayout>
            <ToggleSwitch Grid.Column="1" IsOn="True"
                          Style="{StaticResource SwitchFieldToggleSwitchStyle}"
                          OnContent="" OffContent=""
                          VerticalAlignment="Center" Margin="12,0,0,0" />
          </Grid>

          <Grid Grid.Row="1" Grid.Column="2" Width="340" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <utu:AutoLayout Grid.Column="0" Orientation="Vertical" Spacing="0" VerticalAlignment="Center">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource SecondaryTextBrush}" />
            </utu:AutoLayout>
            <ToggleSwitch Grid.Column="1" IsOn="False"
                          Style="{StaticResource SwitchFieldToggleSwitchStyle}"
                          OnContent="" OffContent=""
                          VerticalAlignment="Center" Margin="12,0,0,0" />
          </Grid>

          <Grid Grid.Row="2" Grid.Column="1" Width="340">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <utu:AutoLayout Grid.Column="0" Orientation="Vertical" Spacing="0" VerticalAlignment="Center">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource InputDisabledTextBrush}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource InputDisabledTextBrush}" />
            </utu:AutoLayout>
            <ToggleSwitch Grid.Column="1" IsOn="True" IsEnabled="False"
                          Style="{StaticResource SwitchFieldToggleSwitchStyle}"
                          OnContent="" OffContent=""
                          VerticalAlignment="Center" Margin="12,0,0,0" />
          </Grid>

          <Grid Grid.Row="2" Grid.Column="2" Width="340">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <utu:AutoLayout Grid.Column="0" Orientation="Vertical" Spacing="0" VerticalAlignment="Center">
              <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource InputDisabledTextBrush}" />
              <TextBlock Text="Description" Style="{StaticResource BodyBaseTextBlockStyle}"
                         Foreground="{StaticResource InputDisabledTextBrush}" />
            </utu:AutoLayout>
            <ToggleSwitch Grid.Column="1" IsOn="False" IsEnabled="False"
                          Style="{StaticResource SwitchFieldToggleSwitchStyle}"
                          OnContent="" OffContent=""
                          VerticalAlignment="Center" Margin="12,0,0,0" />
          </Grid>
        </Grid>
      </utu:AutoLayout>

      <!-- 4. Input Field -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
        <TextBlock Text="Input Field"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />
        
        <Grid ColumnSpacing="64">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <!-- Column Headers -->
          <Border Grid.Row="0" Grid.Column="1"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" Margin="0,0,0,16">
            <TextBlock Text="Default"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <Border Grid.Row="0" Grid.Column="2"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8" Margin="0,0,0,16">
            <TextBlock Text="Placeholder"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Row Headers -->
          <Border Grid.Row="1" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,24,0">
            <TextBlock Text="Default"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <Border Grid.Row="2" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,24,0">
            <TextBlock Text="Disabled"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <Border Grid.Row="3" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,24,0">
            <TextBlock Text="Error"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Default Default -->
          <utu:AutoLayout Grid.Row="1" Grid.Column="1" Orientation="Vertical" Spacing="8" Width="240" Margin="0,0,0,24">
            <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
            <Border Background="{StaticResource InputBackgroundBrush}"
                    BorderBrush="{StaticResource InputBorderBrush}"
                    BorderThickness="1" CornerRadius="{StaticResource Radius200}" MinWidth="240">
              <TextBox Text="Value" BorderThickness="0" Background="Transparent"
                       Padding="16,12" FontSize="16" Style="{StaticResource InputFieldTextBoxStyle}" />
            </Border>
          </utu:AutoLayout>

          <!-- Default Placeholder -->
          <utu:AutoLayout Grid.Row="1" Grid.Column="2" Orientation="Vertical" Spacing="8" Width="240" Margin="0,0,0,24">
            <TextBlock Text="Label" Style="{StaticResource BodyBaseTextBlockStyle}" />
            <Border Background="{StaticResource InputBackgroundBrush}"
                    BorderBrush="{StaticResource InputBorderBrush}"
                    BorderThickness="1" CornerRadius="{StaticResource Radius200}" MinWidth="240">
              <TextBox Text="" PlaceholderText="Value" BorderThickness="0" Background="Transparent"
                       Padding="16,12" FontSize="16" Style="{StaticResource InputFieldTextBoxStyle}" />
            </Border>
          </utu:AutoLayout>

          <!-- Disabled Default -->
          <utu:AutoLayout Grid.Row="2" Grid.Column="1" Orientation="Vertical" Spacing="8" Width="240" Margin="0,0,0,24">
