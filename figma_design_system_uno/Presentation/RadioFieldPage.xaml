<Page x:Class="figma_design_system_uno.Presentation.RadioFieldPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      Background="{StaticResource DefaultBackgroundBrush}">

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Padding="{StaticResource Spacing800}"
                    Spacing="{StaticResource Space1200}"
                    MaxWidth="1200"
                    HorizontalAlignment="Center">

      <!-- Back Navigation -->
      <Button Content="â† Back to Home"
              Style="{StaticResource TextButtonStyle}"
              Click="BackButton_Click"
              HorizontalAlignment="Left"
              Margin="0,0,0,16" />

      <!-- Page Title -->
      <TextBlock Text="Radio Field"
                 Style="{StaticResource TitlePageTextBlockStyle}" />

      <!-- Grid Layout matching Figma -->
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Empty top-left cell -->

        <!-- Column Headers -->
        <TextBlock Grid.Row="0" Grid.Column="1"
                   Text="Checked"
                   Style="{StaticResource BodyStrongTextBlockStyle}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   Margin="0,0,0,16" />
        <TextBlock Grid.Row="0" Grid.Column="2"
                   Text="Unchecked"
                   Style="{StaticResource BodyStrongTextBlockStyle}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   Margin="0,0,0,16" />

        <!-- Row Headers -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Default"
                   Style="{StaticResource BodyStrongTextBlockStyle}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   VerticalAlignment="Center"
                   Margin="0,0,24,0" />
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Disabled"
                   Style="{StaticResource BodyStrongTextBlockStyle}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   VerticalAlignment="Center"
                   Margin="0,0,24,0" />

        <!-- Default Checked -->
        <utu:AutoLayout Grid.Row="1" Grid.Column="1"
                        Orientation="Horizontal"
                        Spacing="{StaticResource Space300}"
                        Margin="0,0,64,16">
          <RadioButton IsChecked="True" VerticalAlignment="Center" />
          <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
            <TextBlock Text="Label" Style="{StaticResource BodyTextBlockStyle}" />
            <TextBlock Text="Description"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource SecondaryTextBrush}" />
          </utu:AutoLayout>
        </utu:AutoLayout>

        <!-- Default Unchecked -->
        <utu:AutoLayout Grid.Row="1" Grid.Column="2"
                        Orientation="Horizontal"
                        Spacing="{StaticResource Space300}"
                        Margin="0,0,0,16">
          <RadioButton IsChecked="False" VerticalAlignment="Center" />
          <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
            <TextBlock Text="Label" Style="{StaticResource BodyTextBlockStyle}" />
            <TextBlock Text="Description"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource SecondaryTextBrush}" />
          </utu:AutoLayout>
        </utu:AutoLayout>

        <!-- Disabled Checked -->
        <utu:AutoLayout Grid.Row="2" Grid.Column="1"
                        Orientation="Horizontal"
                        Spacing="{StaticResource Space300}"
                        Margin="0,0,64,0">
          <RadioButton IsChecked="True" IsEnabled="False" VerticalAlignment="Center" />
          <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
            <TextBlock Text="Label"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource DisabledTextBrush}" />
            <TextBlock Text="Description"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource SecondaryTextBrush}"
                       Opacity="0.6" />
          </utu:AutoLayout>
        </utu:AutoLayout>

        <!-- Disabled Unchecked -->
        <utu:AutoLayout Grid.Row="2" Grid.Column="2"
                        Orientation="Horizontal"
                        Spacing="{StaticResource Space300}">
          <RadioButton IsChecked="False" IsEnabled="False" VerticalAlignment="Center" />
          <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
            <TextBlock Text="Label" Style="{StaticResource BodyTextBlockStyle}" />
            <TextBlock Text="Description"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource SecondaryTextBrush}" />
          </utu:AutoLayout>
        </utu:AutoLayout>
      </Grid>



      <!-- Source Code Viewer -->
      <controls:SourceCodeViewer 
          PageXamlPath="ms-appx:///Presentation/RadioFieldPage.xaml"
          StyleXamlPath="ms-appx:///Styles/RadioButton.xaml" />

    </utu:AutoLayout>
  </ScrollViewer>
</Page>
