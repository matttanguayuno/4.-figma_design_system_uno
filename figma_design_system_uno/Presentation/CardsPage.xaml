<Page x:Class="figma_design_system_uno.Presentation.CardsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      xmlns:sds="using:Uno.Themes.SDS.Controls"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      Background="Transparent">

  <Page.Resources>
    <local:CardsModel x:Key="ViewModel" />
  </Page.Resources>

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Padding="{StaticResource Spacing800}"
                    Spacing="{StaticResource Space1200}"
                    MaxWidth="1200"
                    HorizontalAlignment="Left">

      <!-- Page Header -->
      <utu:NavigationBar Content="Cards"
                         HorizontalContentAlignment="Left"
                         VerticalAlignment="Bottom">
        <utu:NavigationBar.MainCommand>
          <AppBarButton Icon="Back" Click="OnBackClick" />
        </utu:NavigationBar.MainCommand>
        <utu:NavigationBar.ContentTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding}"
                       FontSize="48"
                       FontWeight="Bold"
                       VerticalAlignment="Bottom" />
          </DataTemplate>
        </utu:NavigationBar.ContentTemplate>
      </utu:NavigationBar>

      <!-- Card Section - All 8 Variants -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Card"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Horizontal Section -->
        <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
          <TextBlock Text="Horizontal"
                     Style="{StaticResource BodyStrongTextBlockStyle}" />

          <Grid RowSpacing="24" ColumnSpacing="32">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="440"/>
              <ColumnDefinition Width="440"/>
            </Grid.ColumnDefinitions>

            <!-- Column Headers -->
            <Border Grid.Row="0" Grid.Column="1"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    Margin="0,0,0,8">
              <TextBlock Text="Stroke"
                         FontWeight="SemiBold"
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
            </Border>
            <Border Grid.Row="0" Grid.Column="2"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    Margin="0,0,0,8">
              <TextBlock Text="Default"
                         FontWeight="SemiBold"
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
            </Border>

            <!-- Row 1: Icon -->
            <Border Grid.Row="1" Grid.Column="0"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    VerticalAlignment="Center">
              <TextBlock Text="Icon"
                         FontWeight="SemiBold"
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
            </Border>

          <!-- Icon Horizontal Stroke -->
          <Border Grid.Row="1" Grid.Column="1"
                  Width="440"
                  Background="{StaticResource SurfaceBrush}"
                  BorderBrush="{StaticResource OutlineBrush}"
                  BorderThickness="1"
                  CornerRadius="{StaticResource Radius200}"
                  VerticalAlignment="Top">
            <utu:AutoLayout Orientation="Horizontal" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}">
              <FontIcon Glyph="&#xE946;" FontSize="24"
                        FontWeight="Bold"
                        Foreground="{StaticResource DefaultTextBrush}"
                        Width="32" Height="32"
                        HorizontalAlignment="Left" VerticalAlignment="Top" />
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space400}" Width="344">
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                  <TextBlock Text="Title" Style="{StaticResource CardHeadingTextBlockStyle}" TextWrapping="Wrap" />
                  <TextBlock Text="Body text for whatever you'd like to main takeaway points, quotes, anecdotes, or even a very very short story."
                             Style="{StaticResource CardBodyTextBlockStyle}" TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        FontSize="14"
                        Background="{StaticResource BackgroundTertiaryBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                        BorderBrush="{StaticResource OutlineVariantBrush}" BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="{StaticResource Spacing300}"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </Border>

          <!-- Icon Horizontal Default -->
          <ContentControl Grid.Row="1" Grid.Column="2" Width="440" VerticalAlignment="Top">
            <utu:AutoLayout Orientation="Horizontal" Spacing="{StaticResource Space600}">
              <FontIcon Glyph="&#xE946;" FontSize="24"
                        FontWeight="Bold"
                        Foreground="{StaticResource DefaultTextBrush}"
                        Width="32" Height="32"
                        HorizontalAlignment="Left" VerticalAlignment="Top" />
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space400}" Width="360">
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                  <TextBlock Text="Title" Style="{StaticResource CardHeadingTextBlockStyle}" />
                  <TextBlock Text="Body text for whatever you'd like to main takeaway points, quotes, anecdotes, or even a very very short story."
                             Style="{StaticResource CardBodyTextBlockStyle}" TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        FontSize="14"
                        Background="{StaticResource BackgroundTertiaryBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                        BorderBrush="{StaticResource OutlineVariantBrush}" BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="{StaticResource Spacing300}"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </ContentControl>

          <!-- Row 2: Image -->
          <Border Grid.Row="2" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center">
            <TextBlock Text="Image"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Image Horizontal Stroke -->
          <Border Grid.Row="2" Grid.Column="1"
                  Width="440"
                  Background="{StaticResource SurfaceBrush}"
                  BorderBrush="{StaticResource OutlineBrush}"
                  BorderThickness="1"
                  CornerRadius="{StaticResource Radius200}"
                  VerticalAlignment="Top">
            <utu:AutoLayout Orientation="Horizontal" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}">
              <Border Width="160" Height="160"
                      Background="{StaticResource NeutralTertiaryBrush}"
                      CornerRadius="{StaticResource Radius200}">
                <FontIcon Glyph="&#xEB9F;" FontSize="48"
                          Foreground="{StaticResource SecondaryTextBrush}"
                          HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space400}" Width="224">
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                  <TextBlock Text="Title" Style="{StaticResource CardHeadingTextBlockStyle}" />
                  <TextBlock Text="Body text for whatever you'd like to main takeaway points, quotes, anecdotes, or even a very very short story."
                             Style="{StaticResource CardBodyTextBlockStyle}" TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        FontSize="14"
                        Background="{StaticResource BackgroundTertiaryBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                        BorderBrush="{StaticResource OutlineVariantBrush}" BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="{StaticResource Spacing300}"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </Border>

          <!-- Image Horizontal Default -->
          <ContentControl Grid.Row="2" Grid.Column="2" Width="440" VerticalAlignment="Top">
            <utu:AutoLayout Orientation="Horizontal" Spacing="{StaticResource Space600}">
              <Border Width="160" Height="160"
                      Background="{StaticResource NeutralTertiaryBrush}"
                      CornerRadius="{StaticResource Radius200}">
                <FontIcon Glyph="&#xEB9F;" FontSize="48"
                          Foreground="{StaticResource SecondaryTextBrush}"
                          HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space400}" Width="360">
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                  <TextBlock Text="Title" Style="{StaticResource CardHeadingTextBlockStyle}" />
                  <TextBlock Text="Body text for whatever you'd like to say. Add main takeaway points, quotes, anecdotes, or even a very very short story."
                             Style="{StaticResource CardBodyTextBlockStyle}" TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        FontSize="14"
                        Background="{StaticResource BackgroundTertiaryBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                        BorderBrush="{StaticResource OutlineVariantBrush}" BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="{StaticResource Spacing300}"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </ContentControl>

        </Grid>
      </utu:AutoLayout>

      <!-- Vertical Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
        <TextBlock Text="Vertical"
                   Style="{StaticResource BodyStrongTextBlockStyle}" />

        <Grid RowSpacing="24" ColumnSpacing="32">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="440"/>
            <ColumnDefinition Width="440"/>
          </Grid.ColumnDefinitions>

          <!-- Column Headers -->
          <Border Grid.Row="0" Grid.Column="1"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  Margin="0,0,0,8">
            <TextBlock Text="Stroke"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>
          <Border Grid.Row="0" Grid.Column="2"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  Margin="0,0,0,8">
            <TextBlock Text="Default"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Row 1: Icon -->
          <Border Grid.Row="1" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center">
            <TextBlock Text="Icon"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Icon Vertical Stroke -->
          <Border Grid.Row="1" Grid.Column="1"
                  Width="440"
                  Background="{StaticResource SurfaceBrush}"
                  BorderBrush="{StaticResource OutlineBrush}"
                  BorderThickness="1"
                  CornerRadius="{StaticResource Radius200}"
                  VerticalAlignment="Top">
            <utu:AutoLayout Orientation="Vertical" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}">
              <FontIcon Glyph="&#xE946;" FontSize="24"
                        FontWeight="Bold"
                        Foreground="{StaticResource DefaultTextBrush}"
                        Width="32" Height="32"
                        HorizontalAlignment="Left" VerticalAlignment="Top" />
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space400}" Width="392">
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                  <TextBlock Text="Title" Style="{StaticResource CardHeadingTextBlockStyle}" />
                  <TextBlock Text="Body text for whatever you'd like to main takeaway points, quotes, anecdotes, or even a very very short story."
                             Style="{StaticResource CardBodyTextBlockStyle}" TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        FontSize="14"
                        Background="{StaticResource BackgroundTertiaryBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                        BorderBrush="{StaticResource OutlineVariantBrush}" BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="{StaticResource Spacing300}"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </Border>

          <!-- Icon Vertical Default -->
          <ContentControl Grid.Row="1" Grid.Column="2" Width="440" VerticalAlignment="Top">
            <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
              <FontIcon Glyph="&#xE946;" FontSize="24"
                        FontWeight="Bold"
                        Foreground="{StaticResource DefaultTextBrush}"
                        Width="32" Height="32"
                        HorizontalAlignment="Left" VerticalAlignment="Top" />
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space400}" Width="392">
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                  <TextBlock Text="Title" Style="{StaticResource CardHeadingTextBlockStyle}" />
                  <TextBlock Text="Body text for whatever you'd like to main takeaway points, quotes, anecdotes, or even a very very short story."
                             Style="{StaticResource CardBodyTextBlockStyle}" TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        FontSize="14"
                        Background="#E3E3E3" Foreground="#1E1E1E"
                        BorderBrush="#767676" BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="{StaticResource Spacing300}"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </ContentControl>

          <!-- Row 2: Image -->
          <Border Grid.Row="2" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center">
            <TextBlock Text="Image"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Image Vertical Stroke -->
          <Border Grid.Row="2" Grid.Column="1"
                  Width="440"
                  Background="{StaticResource SurfaceBrush}"
                  BorderBrush="{StaticResource OutlineBrush}"
                  BorderThickness="1"
                  CornerRadius="{StaticResource Radius200}"
                  VerticalAlignment="Top">
            <utu:AutoLayout Orientation="Vertical" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}">
              <Border Width="160" Height="160"
                      Background="{StaticResource NeutralTertiaryBrush}"
                      CornerRadius="{StaticResource Radius200}"
                      HorizontalAlignment="Left">
                <FontIcon Glyph="&#xEB9F;" FontSize="48"
                          Foreground="{StaticResource SecondaryTextBrush}"
                          HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space400}" Width="392">
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                  <TextBlock Text="Title" Style="{StaticResource CardHeadingTextBlockStyle}" />
                  <TextBlock Text="Body text for whatever you'd like to main takeaway points, quotes, anecdotes, or even a very very short story."
                             Style="{StaticResource CardBodyTextBlockStyle}" TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        FontSize="14"
                        Background="{StaticResource BackgroundTertiaryBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                        BorderBrush="{StaticResource OutlineVariantBrush}" BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="{StaticResource Spacing300}"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </Border>

          <!-- Image Vertical Default -->
          <ContentControl Grid.Row="2" Grid.Column="2" Width="440" VerticalAlignment="Top">
            <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
              <Border Width="160" Height="160"
                      Background="{StaticResource NeutralTertiaryBrush}"
                      CornerRadius="{StaticResource Radius200}"
                      HorizontalAlignment="Left">
                <FontIcon Glyph="&#xEB9F;" FontSize="48"
                          Foreground="{StaticResource SecondaryTextBrush}"
                          HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space400}" Width="392">
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                  <TextBlock Text="Title" Style="{StaticResource CardHeadingTextBlockStyle}" />
                  <TextBlock Text="Body text for whatever you'd like to main takeaway points, quotes, anecdotes, or even a very very short story."
                             Style="{StaticResource CardBodyTextBlockStyle}" TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        FontSize="14"
                        Background="{StaticResource BackgroundTertiaryBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                        BorderBrush="{StaticResource OutlineVariantBrush}" BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="{StaticResource Spacing300}"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </ContentControl>

        </Grid>
      </utu:AutoLayout>
      
    </utu:AutoLayout>

      <!-- Pricing Card Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Pricing Card"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- 2x2 Grid -->
        <Grid ColumnSpacing="16" RowSpacing="16">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

          <!-- Row 1, Col 1: Light/Desktop Style -->
          <sds:PricingCard Grid.Row="0" Grid.Column="0"
                           Title="Title"
                           Price="50"
                           Period=" / mo"
                           Features="{Binding PricingFeatures}"
                           ButtonText="Button"
                           Style="{StaticResource LightDesktopPricingCardStyle}" />

          <!-- Row 1, Col 2: Dark/Brand Style -->
          <sds:PricingCard Grid.Row="0" Grid.Column="1"
                           Title="Title"
                           Price="50"
                           Period=" / mo"
                           Features="{Binding PricingFeatures}"
                           ButtonText="Button"
                           Style="{StaticResource BrandedDesktopPricingCardStyle}" />

          <!-- Row 2, Col 1: Light/Mobile Style -->
          <sds:PricingCard Grid.Row="1" Grid.Column="0"
                           Title="Title"
                           Price="50"
                           Period=" / mo"
                           Features="{Binding PricingFeatures}"
                           ButtonText="Button"
                           Style="{StaticResource LightMobilePricingCardStyle}" />

          <!-- Row 2, Col 2: Dark/Mobile Brand Style -->
          <sds:PricingCard Grid.Row="1" Grid.Column="1"
                           Title="Title"
                           Price="50"
                           Period=" / mo"
                           Features="{Binding PricingFeatures}"
                           ButtonText="Button"
                           Style="{StaticResource BrandedMobilePricingCardStyle}" />

        </Grid>
      </utu:AutoLayout>

      <!-- Product Info Card Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Product Info Card"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Product Info Card -->
        <sds:ProductInfoCard ProductName="Text"
                             Price="$0"
                             Description="Body text." />
      </utu:AutoLayout>

      <!-- Review Card Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Review Card"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Review Card -->
        <sds:ReviewCard Rating="5"
                        ReviewTitle="Review title"
                        ReviewBody="Review body"
                        ReviewerName="Reviewer name"
                        ReviewDate="Date"
                        ReviewerImage="https://picsum.photos/id/64/40/40" />
      </utu:AutoLayout>

      <!-- Stats Card Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Stats Card"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Stats Card -->
        <sds:StatsCard IconGlyph="&#xE823;"
                       Value="100"
                       Label="Body text" />
      </utu:AutoLayout>

      <!-- Testimonial Card Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Testimonial Card"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Testimonial Card -->
        <sds:TestimonialCard Quote="&quot;Quote&quot;"
                             AuthorName="Title"
                             AuthorTitle="Description"
                             AuthorImage="https://picsum.photos/id/65/40/40" />
      </utu:AutoLayout>



      <!-- Source Code Viewer -->
      <controls:SourceCodeViewer 
          PageXamlPath="ms-appx:///Presentation/CardsPage.xaml"
          StyleXamlPath="ms-appx:///Styles/Cards.xaml" />

    </utu:AutoLayout>
  </ScrollViewer>

</Page>









