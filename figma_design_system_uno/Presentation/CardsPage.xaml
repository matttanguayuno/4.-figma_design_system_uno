          </Border>

        </Grid>
      </utu:AutoLayout>

      <!-- Product Info Card Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Product Info Card"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Product Info Card -->
        <Border Width="240"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource OutlineBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource Radius200}">
          <utu:AutoLayout Orientation="Vertical" 
                          Spacing="{StaticResource Space400}"
                          Padding="{StaticResource Spacing400}">
            
            <!-- Product Image -->
            <Border Width="208" Height="247"
                    Background="{StaticResource BackgroundTertiaryBrush}"
                    CornerRadius="{StaticResource Radius200}">
              <FontIcon Glyph="&#xEB9F;" 
                        FontSize="72"
                        Foreground="{StaticResource OutlineVariantBrush}"
                        Opacity="0.2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
            </Border>

            <!-- Product Details -->
            <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
              <TextBlock Text="Text"
                         FontWeight="SemiBold"
                         Foreground="{StaticResource OnSurfaceBrush}"
                         TextWrapping="Wrap" />
              <TextBlock Text="$0"
                         FontSize="16"
                         FontWeight="SemiBold"
                         Foreground="{StaticResource OnSurfaceBrush}" />
              <TextBlock Text="Body text."
                         FontSize="14"
                         Foreground="{StaticResource OnSurfaceMediumBrush}"
                         TextWrapping="Wrap" />
            </utu:AutoLayout>
          </utu:AutoLayout>
        </Border>
      </utu:AutoLayout>

      <!-- Review Card Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Review Card"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Review Card -->
        <Border Width="240"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource OutlineBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource Radius200}">
          <utu:AutoLayout Orientation="Vertical" 
                          Spacing="{StaticResource Space600}"
                          Padding="{StaticResource Spacing600}">
            
            <!-- Star Rating -->
            <utu:AutoLayout Orientation="Horizontal" 
                            Spacing="{StaticResource Space100}">
              <Path Data="M10 1.66667L12.575 7.00833L18.3333 7.80833L14.1667 11.825L15.15 17.55L10 14.8417L4.85 17.55L5.83333 11.825L1.66667 7.80833L7.425 7.00833L10 1.66667Z"
                    Stroke="{StaticResource OnSurfaceBrush}"
                    StrokeThickness="1.5"
                    Fill="Transparent"
                    Width="20"
                    Height="20"
