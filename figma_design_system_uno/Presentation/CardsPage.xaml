                    Stroke="{StaticResource OnSurfaceBrush}"
                    StrokeThickness="1.5"
                    Fill="Transparent"
                    Width="20"
                    Height="20"
                    Stretch="Uniform" />
              <Path Data="M10 1.66667L12.575 7.00833L18.3333 7.80833L14.1667 11.825L15.15 17.55L10 14.8417L4.85 17.55L5.83333 11.825L1.66667 7.80833L7.425 7.00833L10 1.66667Z"
                    Stroke="{StaticResource OnSurfaceBrush}"
                    StrokeThickness="1.5"
                    Fill="Transparent"
                    Width="20"
                    Height="20"
                    Stretch="Uniform" />
            </utu:AutoLayout>

            <!-- Review Content -->
            <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space100}">
              <TextBlock Text="Review title"
                         FontSize="24"
                         FontWeight="Bold"
                         CharacterSpacing="-20"
                         Foreground="{StaticResource OnSurfaceBrush}"
                         TextWrapping="Wrap" />
              <TextBlock Text="Review body"
                         FontSize="16"
                         Foreground="{StaticResource OnSurfaceBrush}"
                         TextWrapping="Wrap" />
            </utu:AutoLayout>

            <!-- Reviewer Info -->
            <utu:AutoLayout Orientation="Horizontal" 
                            Spacing="{StaticResource Space300}">
              <Ellipse Width="40" Height="40">
                <Ellipse.Fill>
                  <ImageBrush ImageSource="https://picsum.photos/id/64/40/40" 
                              Stretch="UniformToFill" />
                </Ellipse.Fill>
              </Ellipse>
              <utu:AutoLayout Orientation="Vertical" Spacing="2">
                <TextBlock Text="Reviewer name"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource OnSurfaceMediumBrush}" />
                <TextBlock Text="Date"
                           FontSize="16"
                           Foreground="{StaticResource OnSurfaceMediumBrush}"
                           Opacity="0.6" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </utu:AutoLayout>
        </Border>
      </utu:AutoLayout>

      <!-- Stats Card Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Stats Card"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Stats Card -->
        <Border Width="240"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource OutlineBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource Radius200}">
          <utu:AutoLayout Orientation="Vertical" 
                          Spacing="{StaticResource Space600}"
                          Padding="{StaticResource Spacing600}"
                          CounterAxisAlignment="Center">
            
            <!-- Icon -->
            <FontIcon Glyph="&#xE823;" 
                      FontSize="32"
                      FontWeight="Bold"
                      Foreground="{StaticResource OnSurfaceBrush}" />

            <!-- Stats Content -->
            <utu:AutoLayout Orientation="Vertical" 
                            Spacing="{StaticResource Space100}"
                            CounterAxisAlignment="Center">
              <TextBlock Text="100"
                         FontSize="48"
                         FontWeight="SemiBold"
                         Foreground="{StaticResource OnSurfaceBrush}"
                         HorizontalAlignment="Center" />
              <TextBlock Text="Body text"
                         FontSize="16"
                         Foreground="{StaticResource OnSurfaceBrush}"
                         HorizontalAlignment="Center" />
            </utu:AutoLayout>
          </utu:AutoLayout>
        </Border>
      </utu:AutoLayout>

      <!-- Testimonial Card Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Testimonial Card"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Testimonial Card -->
        <Border Width="300"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource OutlineBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource Radius200}">
          <utu:AutoLayout Orientation="Vertical" 
                          Spacing="{StaticResource Space600}"
                          Padding="{StaticResource Spacing600}">
            
            <!-- Quote -->
            <TextBlock Text="&quot;Quote&quot;"
                       FontSize="24"
                       FontWeight="Bold"
                       CharacterSpacing="-20"
                       Foreground="{StaticResource OnSurfaceBrush}"
                       TextWrapping="Wrap" />

            <!-- Author Info -->
            <utu:AutoLayout Orientation="Horizontal" 
                            Spacing="{StaticResource Space300}">
              <Ellipse Width="40" Height="40">
                <Ellipse.Fill>
                  <ImageBrush ImageSource="https://picsum.photos/id/65/40/40" 
                              Stretch="UniformToFill" />
                </Ellipse.Fill>
              </Ellipse>
              <utu:AutoLayout Orientation="Vertical" Spacing="2">
