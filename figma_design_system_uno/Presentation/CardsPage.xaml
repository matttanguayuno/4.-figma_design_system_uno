<Page x:Class="figma_design_system_uno.Presentation.CardsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      Background="Transparent">

  <Page.Resources>
    <local:CardsModel x:Key="ViewModel" />
  </Page.Resources>

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Padding="{StaticResource Spacing800}"
                    Spacing="{StaticResource Space1200}"
                    MaxWidth="1200"
                    HorizontalAlignment="Left">

      <!-- Page Header -->
      <utu:NavigationBar Content="Cards Component"
                         HorizontalContentAlignment="Left"
                         VerticalAlignment="Bottom">
        <utu:NavigationBar.MainCommand>
          <AppBarButton Icon="Back" Click="OnBackClick" />
        </utu:NavigationBar.MainCommand>
        <utu:NavigationBar.ContentTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding}"
                       FontSize="48"
                       FontWeight="Bold"
                       VerticalAlignment="Bottom" />
          </DataTemplate>
        </utu:NavigationBar.ContentTemplate>
      </utu:NavigationBar>

      <!-- Card Section - All 8 Variants -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Card"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Horizontal Section -->
        <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
          <TextBlock Text="Horizontal"
                     Style="{StaticResource BodyStrongTextBlockStyle}" />

          <Grid RowSpacing="24" ColumnSpacing="32">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="440"/>
              <ColumnDefinition Width="440"/>
            </Grid.ColumnDefinitions>

            <!-- Column Headers -->
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Stroke"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       Foreground="{StaticResource SecondaryTextBrush}"
                       Margin="0,0,0,8" />
            <TextBlock Grid.Row="0" Grid.Column="2" Text="Default"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       Foreground="{StaticResource SecondaryTextBrush}"
                       Margin="0,0,0,8" />

            <!-- Row 1: Icon -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Icon"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center" />

          <!-- Icon Horizontal Stroke -->
          <Border Grid.Row="1" Grid.Column="1"
                  Width="440"
                  Background="{StaticResource SurfaceBrush}"
                  BorderBrush="{StaticResource OutlineBrush}"
                  BorderThickness="1"
                  CornerRadius="{StaticResource Radius200}"
                  VerticalAlignment="Top">
            <utu:AutoLayout Orientation="Horizontal" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}">
              <FontIcon Glyph="&#xE946;" FontSize="24"
                        FontWeight="Bold"
                        Foreground="{StaticResource DefaultTextBrush}"
                        Width="32" Height="32"
                        HorizontalAlignment="Left" VerticalAlignment="Top" />
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space400}" Width="344">
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                  <TextBlock Text="Title" Style="{StaticResource CardHeadingTextBlockStyle}" TextWrapping="Wrap" />
                  <TextBlock Text="Body text for whatever you'd like to main takeaway points, quotes, anecdotes, or even a very very short story."
                             Style="{StaticResource CardBodyTextBlockStyle}" TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        FontSize="14"
                        Background="{StaticResource BackgroundTertiaryBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                        BorderBrush="{StaticResource OutlineVariantBrush}" BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="{StaticResource Spacing300}"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </Border>

          <!-- Icon Horizontal Default -->
          <ContentControl Grid.Row="1" Grid.Column="2" Width="440" VerticalAlignment="Top">
            <utu:AutoLayout Orientation="Horizontal" Spacing="{StaticResource Space600}">
              <FontIcon Glyph="&#xE946;" FontSize="24"
                        FontWeight="Bold"
                        Foreground="{StaticResource DefaultTextBrush}"
                        Width="32" Height="32"
                        HorizontalAlignment="Left" VerticalAlignment="Top" />
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space400}" Width="360">
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                  <TextBlock Text="Title" Style="{StaticResource CardHeadingTextBlockStyle}" />
                  <TextBlock Text="Body text for whatever you'd like to main takeaway points, quotes, anecdotes, or even a very very short story."
                             Style="{StaticResource CardBodyTextBlockStyle}" TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        FontSize="14"
                        Background="{StaticResource BackgroundTertiaryBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                        BorderBrush="{StaticResource OutlineVariantBrush}" BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="{StaticResource Spacing300}"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </ContentControl>

          <!-- Row 2: Image -->
          <TextBlock Grid.Row="2" Grid.Column="0" Text="Image"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     VerticalAlignment="Center" />

          <!-- Image Horizontal Stroke -->
          <Border Grid.Row="2" Grid.Column="1"
                  Width="440"
                  Background="{StaticResource SurfaceBrush}"
                  BorderBrush="{StaticResource OutlineBrush}"
                  BorderThickness="1"
                  CornerRadius="{StaticResource Radius200}"
                  VerticalAlignment="Top">
            <utu:AutoLayout Orientation="Horizontal" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}">
              <Border Width="160" Height="160"
                      Background="{StaticResource NeutralTertiaryBrush}"
                      CornerRadius="{StaticResource Radius200}">
                <FontIcon Glyph="&#xEB9F;" FontSize="48"
                          Foreground="{StaticResource SecondaryTextBrush}"
                          HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space400}" Width="224">
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                  <TextBlock Text="Title" Style="{StaticResource CardHeadingTextBlockStyle}" />
                  <TextBlock Text="Body text for whatever you'd like to main takeaway points, quotes, anecdotes, or even a very very short story."
                             Style="{StaticResource CardBodyTextBlockStyle}" TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        FontSize="14"
                        Background="{StaticResource BackgroundTertiaryBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                        BorderBrush="{StaticResource OutlineVariantBrush}" BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="{StaticResource Spacing300}"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </Border>

          <!-- Image Horizontal Default -->
          <ContentControl Grid.Row="2" Grid.Column="2" Width="440" VerticalAlignment="Top">
            <utu:AutoLayout Orientation="Horizontal" Spacing="{StaticResource Space600}">
              <Border Width="160" Height="160"
                      Background="{StaticResource NeutralTertiaryBrush}"
                      CornerRadius="{StaticResource Radius200}">
                <FontIcon Glyph="&#xEB9F;" FontSize="48"
                          Foreground="{StaticResource SecondaryTextBrush}"
                          HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space400}" Width="360">
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                  <TextBlock Text="Title" Style="{StaticResource CardHeadingTextBlockStyle}" />
                  <TextBlock Text="Body text for whatever you'd like to say. Add main takeaway points, quotes, anecdotes, or even a very very short story."
                             Style="{StaticResource CardBodyTextBlockStyle}" TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        FontSize="14"
                        Background="{StaticResource BackgroundTertiaryBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                        BorderBrush="{StaticResource OutlineVariantBrush}" BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="{StaticResource Spacing300}"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </ContentControl>

        </Grid>
      </utu:AutoLayout>

      <!-- Vertical Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
        <TextBlock Text="Vertical"
                   Style="{StaticResource BodyStrongTextBlockStyle}" />

        <Grid RowSpacing="24" ColumnSpacing="32">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="440"/>
            <ColumnDefinition Width="440"/>
          </Grid.ColumnDefinitions>

          <!-- Column Headers -->
          <TextBlock Grid.Row="0" Grid.Column="1" Text="Stroke"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     Margin="0,0,0,8" />
          <TextBlock Grid.Row="0" Grid.Column="2" Text="Default"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     Margin="0,0,0,8" />

          <!-- Row 1: Icon -->
          <TextBlock Grid.Row="1" Grid.Column="0" Text="Icon"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     VerticalAlignment="Center" />

          <!-- Icon Vertical Stroke -->
          <Border Grid.Row="1" Grid.Column="1"
                  Width="440"
                  Background="{StaticResource SurfaceBrush}"
                  BorderBrush="{StaticResource OutlineBrush}"
                  BorderThickness="1"
                  CornerRadius="{StaticResource Radius200}"
                  VerticalAlignment="Top">
            <utu:AutoLayout Orientation="Vertical" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}">
              <FontIcon Glyph="&#xE946;" FontSize="24"
                        FontWeight="Bold"
                        Foreground="{StaticResource DefaultTextBrush}"
                        Width="32" Height="32"
                        HorizontalAlignment="Left" VerticalAlignment="Top" />
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space400}" Width="392">
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                  <TextBlock Text="Title" Style="{StaticResource CardHeadingTextBlockStyle}" />
                  <TextBlock Text="Body text for whatever you'd like to main takeaway points, quotes, anecdotes, or even a very very short story."
                             Style="{StaticResource CardBodyTextBlockStyle}" TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        FontSize="14"
                        Background="{StaticResource BackgroundTertiaryBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                        BorderBrush="{StaticResource OutlineVariantBrush}" BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="{StaticResource Spacing300}"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </Border>

          <!-- Icon Vertical Default -->
          <ContentControl Grid.Row="1" Grid.Column="2" Width="440" VerticalAlignment="Top">
            <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
              <FontIcon Glyph="&#xE946;" FontSize="24"
                        FontWeight="Bold"
                        Foreground="{StaticResource DefaultTextBrush}"
                        Width="32" Height="32"
                        HorizontalAlignment="Left" VerticalAlignment="Top" />
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space400}" Width="392">
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                  <TextBlock Text="Title" Style="{StaticResource CardHeadingTextBlockStyle}" />
                  <TextBlock Text="Body text for whatever you'd like to main takeaway points, quotes, anecdotes, or even a very very short story."
                             Style="{StaticResource CardBodyTextBlockStyle}" TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        FontSize="14"
                        Background="#E3E3E3" Foreground="#1E1E1E"
                        BorderBrush="#767676" BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="{StaticResource Spacing300}"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </ContentControl>

          <!-- Row 2: Image -->
          <TextBlock Grid.Row="2" Grid.Column="0" Text="Image"
                     Style="{StaticResource BodyStrongTextBlockStyle}"
                     VerticalAlignment="Center" />

          <!-- Image Vertical Stroke -->
          <Border Grid.Row="2" Grid.Column="1"
                  Width="440"
                  Background="{StaticResource SurfaceBrush}"
                  BorderBrush="{StaticResource OutlineBrush}"
                  BorderThickness="1"
                  CornerRadius="{StaticResource Radius200}"
                  VerticalAlignment="Top">
            <utu:AutoLayout Orientation="Vertical" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}">
              <Border Width="160" Height="160"
                      Background="{StaticResource NeutralTertiaryBrush}"
                      CornerRadius="{StaticResource Radius200}"
                      HorizontalAlignment="Left">
                <FontIcon Glyph="&#xEB9F;" FontSize="48"
                          Foreground="{StaticResource SecondaryTextBrush}"
                          HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space400}" Width="392">
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                  <TextBlock Text="Title" Style="{StaticResource CardHeadingTextBlockStyle}" />
                  <TextBlock Text="Body text for whatever you'd like to main takeaway points, quotes, anecdotes, or even a very very short story."
                             Style="{StaticResource CardBodyTextBlockStyle}" TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        FontSize="14"
                        Background="{StaticResource BackgroundTertiaryBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                        BorderBrush="{StaticResource OutlineVariantBrush}" BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="{StaticResource Spacing300}"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </Border>

          <!-- Image Vertical Default -->
          <ContentControl Grid.Row="2" Grid.Column="2" Width="440" VerticalAlignment="Top">
            <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
              <Border Width="160" Height="160"
                      Background="{StaticResource NeutralTertiaryBrush}"
                      CornerRadius="{StaticResource Radius200}"
                      HorizontalAlignment="Left">
                <FontIcon Glyph="&#xEB9F;" FontSize="48"
                          Foreground="{StaticResource SecondaryTextBrush}"
                          HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space400}" Width="392">
                <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                  <TextBlock Text="Title" Style="{StaticResource CardHeadingTextBlockStyle}" />
                  <TextBlock Text="Body text for whatever you'd like to main takeaway points, quotes, anecdotes, or even a very very short story."
                             Style="{StaticResource CardBodyTextBlockStyle}" TextWrapping="Wrap" />
                </utu:AutoLayout>
                <Button Content="Button"
                        FontSize="14"
                        Background="{StaticResource BackgroundTertiaryBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                        BorderBrush="{StaticResource OutlineVariantBrush}" BorderThickness="1"
                        CornerRadius="{StaticResource Radius200}"
                        Padding="{StaticResource Spacing300}"
                        utu:AutoLayout.CounterAlignment="Start" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </ContentControl>

        </Grid>
      </utu:AutoLayout>
      
    </utu:AutoLayout>

      <!-- Pricing Card Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Pricing Card"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- 2x2 Grid -->
        <Grid ColumnSpacing="16" RowSpacing="16">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

          <!-- Row 1, Col 1: Light/Desktop Style -->
          <Border Grid.Row="0" Grid.Column="0"
                  Background="{StaticResource SurfaceBrush}"
                  BorderBrush="{StaticResource OutlineBrush}"
                  BorderThickness="1"
                  CornerRadius="{StaticResource Radius200}">
            <utu:AutoLayout Orientation="Vertical" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing800}"
                            CounterAxisAlignment="Center">
              <TextBlock Text="Title"
                         FontSize="20"
                         FontWeight="Bold"
                         HorizontalAlignment="Center"
                         TextAlignment="Center" />
              
              <!-- Price Display -->
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto"/>
                  <ColumnDefinition Width="Auto"/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="$"
                           FontSize="24"
                           FontWeight="Bold"
                           CharacterSpacing="-20"
                           Foreground="{StaticResource OnSurfaceBrush}"
                           VerticalAlignment="Top"
                           Margin="0,8,0,0" />
                <TextBlock Grid.Column="1"
                           Text="50"
                           FontSize="48"
                           FontWeight="Bold"
                           CharacterSpacing="-20"
                           Foreground="{StaticResource OnSurfaceBrush}" />
                <TextBlock Grid.Column="2"
                           Text=" / mo"
                           FontSize="14"
                           Foreground="{StaticResource OnSurfaceBrush}"
                           VerticalAlignment="Bottom"
                           Margin="0,0,0,10" />
              </Grid>

              <!-- List Items -->
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space300}">
                <TextBlock TextWrapping="Wrap">
                  <Run Text="•" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                  <Run Text="  List item" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                  <Run Text="•" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                  <Run Text="  List item" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                  <Run Text="•" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                  <Run Text="  List item" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                  <Run Text="•" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                  <Run Text="  List item" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                  <Run Text="•" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                  <Run Text="  List item" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                </TextBlock>
              </utu:AutoLayout>

              <Button Content="Button"
                      Style="{StaticResource PrimaryButtonStyle}"
                      HorizontalAlignment="Stretch" />
            </utu:AutoLayout>
          </Border>

          <!-- Row 1, Col 2: Dark/Brand Style -->
          <Border Grid.Row="0" Grid.Column="1"
                  Background="{StaticResource PrimaryBrush}"
                  BorderBrush="{StaticResource PrimaryBrush}"
                  BorderThickness="1"
                  CornerRadius="{StaticResource Radius200}">
            <utu:AutoLayout Orientation="Vertical" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing800}"
                            CounterAxisAlignment="Center">
              <TextBlock Text="Title"
                         FontSize="20"
                         FontWeight="Bold"
                         Foreground="{StaticResource OnPrimaryBrush}"
                         HorizontalAlignment="Center"
                         TextAlignment="Center" />
              
              <!-- Price Display -->
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto"/>
                  <ColumnDefinition Width="Auto"/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="$"
                           FontSize="24"
                           FontWeight="Bold"
                           CharacterSpacing="-20"
                           Foreground="{StaticResource OnPrimaryBrush}"
                           VerticalAlignment="Top"
                           Margin="0,8,0,0" />
                <TextBlock Grid.Column="1"
                           Text="50"
                           FontSize="48"
                           FontWeight="Bold"
                           CharacterSpacing="-20"
                           Foreground="{StaticResource OnPrimaryBrush}" />
                <TextBlock Grid.Column="2"
                           Text=" / mo"
                           FontSize="14"
                           Foreground="{StaticResource OnPrimaryBrush}"
                           VerticalAlignment="Bottom"
                           Margin="0,0,0,10" />
              </Grid>

              <!-- List Items -->
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space300}">
                <TextBlock TextWrapping="Wrap">
                  <Run Text="•" FontSize="16" Foreground="{StaticResource OnPrimaryBrush}" />
                  <Run Text="  List item" FontSize="16" Foreground="{StaticResource OnPrimaryBrush}" />
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                  <Run Text="•" FontSize="16" Foreground="{StaticResource OnPrimaryBrush}" />
                  <Run Text="  List item" FontSize="16" Foreground="{StaticResource OnPrimaryBrush}" />
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                  <Run Text="•" FontSize="16" Foreground="{StaticResource OnPrimaryBrush}" />
                  <Run Text="  List item" FontSize="16" Foreground="{StaticResource OnPrimaryBrush}" />
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                  <Run Text="•" FontSize="16" Foreground="{StaticResource OnPrimaryBrush}" />
                  <Run Text="  List item" FontSize="16" Foreground="{StaticResource OnPrimaryBrush}" />
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                  <Run Text="•" FontSize="16" Foreground="{StaticResource OnPrimaryBrush}" />
                  <Run Text="  List item" FontSize="16" Foreground="{StaticResource OnPrimaryBrush}" />
                </TextBlock>
              </utu:AutoLayout>

              <Button Content="Button"
                      Background="{StaticResource SurfaceBrush}"
                      Foreground="{StaticResource OnSurfaceBrush}"
                      BorderBrush="{StaticResource SurfaceBrush}"
                      BorderThickness="1"
                      CornerRadius="{StaticResource Radius200}"
                      Padding="{StaticResource Spacing300}"
                      HorizontalAlignment="Stretch" />
            </utu:AutoLayout>
          </Border>

          <!-- Row 2, Col 1: Light/Mobile Style -->
          <Border Grid.Row="1" Grid.Column="0"
                  Background="{StaticResource SurfaceBrush}"
                  BorderBrush="{StaticResource OutlineBrush}"
                  BorderThickness="1"
                  CornerRadius="{StaticResource Radius200}">
            <utu:AutoLayout Orientation="Vertical" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}">
              
              <!-- Title and Price Row -->
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="Title"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource OnSurfaceBrush}"
                           VerticalAlignment="Top" />
                
                <Grid Grid.Column="1">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                  </Grid.ColumnDefinitions>
                  <TextBlock Grid.Column="0"
                             Text="$"
                             FontSize="20"
                             FontWeight="Bold"
                             CharacterSpacing="-20"
                             Foreground="{StaticResource OnSurfaceBrush}"
                             VerticalAlignment="Top"
                             Margin="0,4,0,0" />
                  <TextBlock Grid.Column="1"
                             Text="50"
                             FontSize="28"
                             FontWeight="Bold"
                             CharacterSpacing="-20"
                             Foreground="{StaticResource OnSurfaceBrush}" />
                  <TextBlock Grid.Column="2"
                             Text=" / mo"
                             FontSize="14"
                             Foreground="{StaticResource OnSurfaceBrush}"
                             VerticalAlignment="Bottom"
                             Margin="0,0,0,4" />
                </Grid>
              </Grid>

              <!-- List Items -->
              <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space200}">
                <TextBlock TextWrapping="Wrap">
                  <Run Text="•" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                  <Run Text="  List item" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                  <Run Text="•" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                  <Run Text="  List item" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                  <Run Text="•" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                  <Run Text="  List item" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                  <Run Text="•" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                  <Run Text="  List item" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                  <Run Text="•" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                  <Run Text="  List item" FontSize="16" Foreground="{StaticResource OnSurfaceMediumBrush}" />
                </TextBlock>
              </utu:AutoLayout>

              <Button Content="Button"
                      Style="{StaticResource PrimaryButtonStyle}"
                      HorizontalAlignment="Stretch" />
            </utu:AutoLayout>
          </Border>

          <!-- Row 2, Col 2: Dark/Mobile Brand Style -->
          <Border Grid.Row="1" Grid.Column="1"
                  Background="{StaticResource PrimaryBrush}"
                  BorderBrush="{StaticResource PrimaryBrush}"
                  BorderThickness="1"
                  CornerRadius="{StaticResource Radius200}">
            <utu:AutoLayout Orientation="Vertical" 
                            Spacing="{StaticResource Space600}"
                            Padding="{StaticResource Spacing600}">
              
              <!-- Title and Price Row -->
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="Title"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource OnPrimaryBrush}"
                           VerticalAlignment="Top" />
                
                <Grid Grid.Column="1">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                  </Grid.ColumnDefinitions>
                  <TextBlock Grid.Column="0"
                             Text="$"
                             FontSize="20"
                             FontWeight="Bold"
                             CharacterSpacing="-20"
                             Foreground="{StaticResource OnPrimaryBrush}"
                             VerticalAlignment="Top"
                             Margin="0,4,0,0" />
