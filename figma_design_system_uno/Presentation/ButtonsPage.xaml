<Page x:Class="figma_design_system_uno.Presentation.ButtonsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      Background="Transparent">

  <Page.Resources>
    <local:ButtonsModel x:Key="ViewModel" />
  </Page.Resources>

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Padding="{StaticResource Spacing800}"
                    Spacing="{StaticResource Space1200}">

      <!-- Page Header -->
      <utu:NavigationBar Content="Buttons"
                         HorizontalContentAlignment="Left"
                         VerticalAlignment="Bottom">
        <utu:NavigationBar.MainCommand>
          <AppBarButton Icon="Back" Click="OnBackClick" />
        </utu:NavigationBar.MainCommand>
        <utu:NavigationBar.ContentTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding}"
                       FontSize="48"
                       FontWeight="Bold"
                       VerticalAlignment="Bottom" />
          </DataTemplate>
        </utu:NavigationBar.ContentTemplate>
      </utu:NavigationBar>

      <!-- LEVEL 1: Interactive Button Examples -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Interactive Button Examples"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />
        
        <TextBlock Text="Hover over these buttons to see the visual states in action"
                   Style="{StaticResource BodyLargeTextBlockStyle}"
                   Opacity="0.7" />

        <utu:AutoLayout Orientation="Vertical" Spacing="24">
          <!-- Default Buttons -->
          <utu:AutoLayout Orientation="Vertical" Spacing="12">
            <TextBlock Text="Default"
                       FontWeight="SemiBold"
                       Style="{StaticResource BodyLargeTextBlockStyle}" />
            <utu:AutoLayout Orientation="Vertical" Spacing="8">
              <TextBlock Text="Small" FontSize="12" Opacity="0.6" />
              <utu:AutoLayout Orientation="Horizontal" Spacing="16" PrimaryAxisAlignment="Start">
                <Button Content="Primary" Style="{StaticResource FilledButtonSmallStyle}" />
                <Button Content="Neutral" Style="{StaticResource OutlinedButtonSmallStyle}" />
                <Button Content="Subtle" Style="{StaticResource TextButtonSmallStyle}" />
                <Button Content="Disabled" Style="{StaticResource FilledButtonSmallStyle}" IsEnabled="False" />
              </utu:AutoLayout>
            </utu:AutoLayout>
            <utu:AutoLayout Orientation="Vertical" Spacing="8">
              <TextBlock Text="Medium" FontSize="12" Opacity="0.6" />
              <utu:AutoLayout Orientation="Horizontal" Spacing="16" PrimaryAxisAlignment="Start">
                <Button Content="Primary" Style="{StaticResource FilledButtonStyle}" />
                <Button Content="Neutral" Style="{StaticResource OutlinedButtonStyle}" />
                <Button Content="Subtle" Style="{StaticResource TextButtonStyle}" />
                <Button Content="Disabled" Style="{StaticResource FilledButtonStyle}" IsEnabled="False" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </utu:AutoLayout>

          <!-- Danger Buttons -->
          <utu:AutoLayout Orientation="Vertical" Spacing="12">
            <TextBlock Text="Danger"
                       FontWeight="SemiBold"
                       Style="{StaticResource BodyLargeTextBlockStyle}" />
            <utu:AutoLayout Orientation="Vertical" Spacing="8">
              <TextBlock Text="Small" FontSize="12" Opacity="0.6" />
              <utu:AutoLayout Orientation="Horizontal" Spacing="16" PrimaryAxisAlignment="Start">
                <Button Content="Primary" Style="{StaticResource FilledErrorButtonSmallStyle}" />
                <Button Content="Subtle" Style="{StaticResource TextErrorButtonSmallStyle}" />
                <Button Content="Disabled" Style="{StaticResource FilledErrorButtonSmallStyle}" IsEnabled="False" />
              </utu:AutoLayout>
            </utu:AutoLayout>
            <utu:AutoLayout Orientation="Vertical" Spacing="8">
              <TextBlock Text="Medium" FontSize="12" Opacity="0.6" />
              <utu:AutoLayout Orientation="Horizontal" Spacing="16" PrimaryAxisAlignment="Start">
                <Button Content="Primary" Style="{StaticResource FilledErrorButtonStyle}" />
                <Button Content="Subtle" Style="{StaticResource TextErrorButtonStyle}" />
                <Button Content="Disabled" Style="{StaticResource FilledErrorButtonStyle}" IsEnabled="False" />
              </utu:AutoLayout>
            </utu:AutoLayout>
          </utu:AutoLayout>

          <!-- Icon Buttons -->
          <utu:AutoLayout Orientation="Vertical" Spacing="12">
            <TextBlock Text="Icon"
                       FontWeight="SemiBold"
                       Style="{StaticResource BodyLargeTextBlockStyle}" />
            <utu:AutoLayout Orientation="Vertical" Spacing="8">
              <TextBlock Text="Small" FontSize="12" Opacity="0.6" />
              <utu:AutoLayout Orientation="Horizontal" Spacing="16" PrimaryAxisAlignment="Start">
                <Button Width="32" Height="32" Style="{StaticResource FilledButtonSmallStyle}" 
                        Padding="6" CornerRadius="9999">
                  <Path Data="M7.66667 1L9.72667 5.17333L14.3333 5.84667L11 9.09333L11.7867 13.68L7.66667 11.5133L3.54667 13.68L4.33333 9.09333L1 5.84667L5.60667 5.17333L7.66667 1Z" 
                        Stroke="{StaticResource OnPrimaryBrush}" StrokeThickness="1.6" Fill="Transparent" 
                        Width="16" Height="16" Stretch="Uniform" />
                </Button>
                <Button Width="32" Height="32" Style="{StaticResource OutlinedButtonSmallStyle}" 
                        Padding="6" CornerRadius="9999">
                  <Path Data="M7.66667 1L9.72667 5.17333L14.3333 5.84667L11 9.09333L11.7867 13.68L7.66667 11.5133L3.54667 13.68L4.33333 9.09333L1 5.84667L5.60667 5.17333L7.66667 1Z" 
                        Stroke="{StaticResource OnSurfaceBrush}" StrokeThickness="1.6" Fill="Transparent" 
                        Width="16" Height="16" Stretch="Uniform" />
                </Button>
                <Button Width="32" Height="32" Style="{StaticResource TextButtonSmallStyle}" 
                        Padding="6" CornerRadius="9999">
                  <Path Data="M7.66667 1L9.72667 5.17333L14.3333 5.84667L11 9.09333L11.7867 13.68L7.66667 11.5133L3.54667 13.68L4.33333 9.09333L1 5.84667L5.60667 5.17333L7.66667 1Z" 
                        Stroke="{StaticResource PrimaryBrush}" StrokeThickness="1.6" Fill="Transparent" 
                        Width="16" Height="16" Stretch="Uniform" />
                </Button>
                <Button Width="32" Height="32" Style="{StaticResource FilledButtonSmallStyle}" 
                        IsEnabled="False" Padding="6" CornerRadius="9999">
                  <Path Data="M7.66667 1L9.72667 5.17333L14.3333 5.84667L11 9.09333L11.7867 13.68L7.66667 11.5133L3.54667 13.68L4.33333 9.09333L1 5.84667L5.60667 5.17333L7.66667 1Z" 
                        Stroke="{StaticResource OnPrimaryBrush}" StrokeThickness="1.6" Fill="Transparent" 
                        Width="16" Height="16" Stretch="Uniform" />
                </Button>
              </utu:AutoLayout>
            </utu:AutoLayout>
            <utu:AutoLayout Orientation="Vertical" Spacing="8">
              <TextBlock Text="Medium" FontSize="12" Opacity="0.6" />
              <utu:AutoLayout Orientation="Horizontal" Spacing="16" PrimaryAxisAlignment="Start">
                <Button Width="40" Height="40" Style="{StaticResource FilledButtonStyle}" 
                        Padding="8" CornerRadius="9999">
                  <Path Data="M7.66667 1L9.72667 5.17333L14.3333 5.84667L11 9.09333L11.7867 13.68L7.66667 11.5133L3.54667 13.68L4.33333 9.09333L1 5.84667L5.60667 5.17333L7.66667 1Z" 
                        Stroke="{StaticResource OnPrimaryBrush}" StrokeThickness="1.6" Fill="Transparent" 
                        Width="16" Height="16" Stretch="Uniform" />
                </Button>
                <Button Width="40" Height="40" Style="{StaticResource OutlinedButtonStyle}" 
                        Padding="8" CornerRadius="9999">
                  <Path Data="M7.66667 1L9.72667 5.17333L14.3333 5.84667L11 9.09333L11.7867 13.68L7.66667 11.5133L3.54667 13.68L4.33333 9.09333L1 5.84667L5.60667 5.17333L7.66667 1Z" 
                        Stroke="{StaticResource OnSurfaceBrush}" StrokeThickness="1.6" Fill="Transparent" 
                        Width="16" Height="16" Stretch="Uniform" />
                </Button>
                <Button Width="40" Height="40" Style="{StaticResource TextButtonStyle}" 
                        Padding="8" CornerRadius="9999">
                  <Path Data="M7.66667 1L9.72667 5.17333L14.3333 5.84667L11 9.09333L11.7867 13.68L7.66667 11.5133L3.54667 13.68L4.33333 9.09333L1 5.84667L5.60667 5.17333L7.66667 1Z" 
                        Stroke="{StaticResource PrimaryBrush}" StrokeThickness="1.6" Fill="Transparent" 
                        Width="16" Height="16" Stretch="Uniform" />
                </Button>
                <Button Width="40" Height="40" Style="{StaticResource FilledButtonStyle}" 
                        IsEnabled="False" Padding="8" CornerRadius="9999">
                  <Path Data="M7.66667 1L9.72667 5.17333L14.3333 5.84667L11 9.09333L11.7867 13.68L7.66667 11.5133L3.54667 13.68L4.33333 9.09333L1 5.84667L5.60667 5.17333L7.66667 1Z" 
                        Stroke="{StaticResource OnPrimaryBrush}" StrokeThickness="1.6" Fill="Transparent" 
                        Width="16" Height="16" Stretch="Uniform" />
                </Button>
              </utu:AutoLayout>
            </utu:AutoLayout>
          </utu:AutoLayout>
        </utu:AutoLayout>
      </utu:AutoLayout>

      <!-- LEVEL 1: Button Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Button States (Static Reference)"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- LEVEL 2: Medium Size -->
        <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
          <TextBlock Text="Medium Size (40px height)"
                     Style="{StaticResource BodyLargeTextBlockStyle}"
                     FontWeight="SemiBold" />

          <!-- Matrix Layout with Row/Column Labels -->
          <Grid ColumnSpacing="16" RowSpacing="12">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="90"/>
              <ColumnDefinition Width="90"/>
              <ColumnDefinition Width="90"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Column Headers -->
            <Border Grid.Row="0" Grid.Column="1"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4">
              <TextBlock Text="Default" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold" />
            </Border>
            <Border Grid.Row="0" Grid.Column="2"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4">
              <TextBlock Text="Hover" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold" />
            </Border>
            <Border Grid.Row="0" Grid.Column="3"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4">
              <TextBlock Text="Disabled" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold" />
            </Border>

            <!-- Row 1: Primary -->
            <Border Grid.Row="1" Grid.Column="0" 
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    VerticalAlignment="Center" Margin="0,0,16,0">
              <TextBlock Text="Primary" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold"/>
            </Border>
            <Button Grid.Row="1" Grid.Column="1" Content="Button" Style="{StaticResource PrimaryButtonStyle}" 
                    HorizontalAlignment="Stretch" IsHitTestVisible="False" />
            <Button Grid.Row="1" Grid.Column="2" Content="Button" Style="{StaticResource PrimaryButtonStyle}" 
                    HorizontalAlignment="Stretch" IsHitTestVisible="False" 
                    Background="{StaticResource SDSBrandHoverBrush}" />
            <Button Grid.Row="1" Grid.Column="3" Content="Button" Style="{StaticResource PrimaryButtonStyle}" 
                    HorizontalAlignment="Stretch" IsEnabled="False" IsHitTestVisible="False" />

            <!-- Row 2: Neutral -->
            <Border Grid.Row="2" Grid.Column="0" 
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    VerticalAlignment="Center" Margin="0,0,16,0">
              <TextBlock Text="Neutral" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold"/>
            </Border>
            <Button Grid.Row="2" Grid.Column="1" Content="Button" Style="{StaticResource NeutralButtonStyle}" 
                    HorizontalAlignment="Stretch" IsHitTestVisible="False" />
            <Button Grid.Row="2" Grid.Column="2" Content="Button" Style="{StaticResource NeutralButtonStyle}" 
                    HorizontalAlignment="Stretch" IsHitTestVisible="False" 
                    Background="{StaticResource SDSNeutralTertiaryHoverBrush}" />
            <Button Grid.Row="2" Grid.Column="3" Content="Button" Style="{StaticResource NeutralButtonStyle}" 
                    HorizontalAlignment="Stretch" IsEnabled="False" IsHitTestVisible="False" />

            <!-- Row 3: Subtle -->
            <Border Grid.Row="3" Grid.Column="0" 
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    VerticalAlignment="Center" Margin="0,0,16,0">
              <TextBlock Text="Subtle" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold"/>
            </Border>
            <Button Grid.Row="3" Grid.Column="1" Content="Button" Style="{StaticResource SubtleButtonStyle}" 
                    HorizontalAlignment="Stretch" IsHitTestVisible="False" />
            <Button Grid.Row="3" Grid.Column="2" Content="Button" Style="{StaticResource SubtleButtonStyle}" 
                    HorizontalAlignment="Stretch" IsHitTestVisible="False" 
                    BorderBrush="{StaticResource OutlineBrush}" BorderThickness="1" />
            <Button Grid.Row="3" Grid.Column="3" Content="Button" Style="{StaticResource SubtleButtonStyle}" 
                    HorizontalAlignment="Stretch" IsEnabled="False" IsHitTestVisible="False" />
          </Grid>
        </utu:AutoLayout>

        <!-- LEVEL 2: Small Size -->
        <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
          <TextBlock Text="Small Size (32px height)"
                     Style="{StaticResource BodyLargeTextBlockStyle}"
                     FontWeight="SemiBold" />

          <!-- Matrix Layout with Row/Column Labels -->
          <Grid ColumnSpacing="16" RowSpacing="12">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="90"/>
              <ColumnDefinition Width="90"/>
              <ColumnDefinition Width="90"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Column Headers -->
            <Border Grid.Row="0" Grid.Column="1"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4">
              <TextBlock Text="Default" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold" />
            </Border>
            <Border Grid.Row="0" Grid.Column="2"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4">
              <TextBlock Text="Hover" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold" />
            </Border>
            <Border Grid.Row="0" Grid.Column="3"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4">
              <TextBlock Text="Disabled" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold" />
            </Border>

            <!-- Row 1: Primary -->
            <Border Grid.Row="1" Grid.Column="0" 
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    VerticalAlignment="Center" Margin="0,0,16,0">
              <TextBlock Text="Primary" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold"/>
            </Border>
            <Button Grid.Row="1" Grid.Column="1" Content="Button" Style="{StaticResource PrimarySmallButtonStyle}" 
                    HorizontalAlignment="Stretch" IsHitTestVisible="False" />
            <Button Grid.Row="1" Grid.Column="2" Content="Button" Style="{StaticResource PrimarySmallButtonStyle}" 
                    HorizontalAlignment="Stretch" IsHitTestVisible="False" 
                    Background="{StaticResource SDSBrandHoverBrush}" />
            <Button Grid.Row="1" Grid.Column="3" Content="Button" Style="{StaticResource PrimarySmallButtonStyle}" 
                    HorizontalAlignment="Stretch" IsEnabled="False" IsHitTestVisible="False" />

            <!-- Row 2: Neutral -->
            <Border Grid.Row="2" Grid.Column="0" 
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    VerticalAlignment="Center" Margin="0,0,16,0">
              <TextBlock Text="Neutral" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold"/>
            </Border>
            <Button Grid.Row="2" Grid.Column="1" Content="Button" Style="{StaticResource NeutralSmallButtonStyle}" 
                    HorizontalAlignment="Stretch" IsHitTestVisible="False" />
            <Button Grid.Row="2" Grid.Column="2" Content="Button" Style="{StaticResource NeutralSmallButtonStyle}" 
                    HorizontalAlignment="Stretch" IsHitTestVisible="False" 
                    Background="{StaticResource SDSNeutralTertiaryHoverBrush}" />
            <Button Grid.Row="2" Grid.Column="3" Content="Button" Style="{StaticResource NeutralSmallButtonStyle}" 
                    HorizontalAlignment="Stretch" IsEnabled="False" IsHitTestVisible="False" />

            <!-- Row 3: Subtle -->
            <Border Grid.Row="3" Grid.Column="0" 
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    VerticalAlignment="Center" Margin="0,0,16,0">
              <TextBlock Text="Subtle" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold"/>
            </Border>
            <Button Grid.Row="3" Grid.Column="1" Content="Button" Style="{StaticResource SubtleSmallButtonStyle}" 
                    HorizontalAlignment="Stretch" IsHitTestVisible="False" />
            <Button Grid.Row="3" Grid.Column="2" Content="Button" Style="{StaticResource SubtleSmallButtonStyle}" 
                    HorizontalAlignment="Stretch" IsHitTestVisible="False" 
                    BorderBrush="{StaticResource OutlineBrush}" BorderThickness="1" />
            <Button Grid.Row="3" Grid.Column="3" Content="Button" Style="{StaticResource SubtleSmallButtonStyle}" 
                    HorizontalAlignment="Stretch" IsEnabled="False" IsHitTestVisible="False" />
          </Grid>
        </utu:AutoLayout>
      </utu:AutoLayout>

      <!-- LEVEL 1: Button Danger Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Button Danger"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- LEVEL 2: Medium Size -->
        <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
          <TextBlock Text="Medium Size (40px height)"
                     Style="{StaticResource BodyLargeTextBlockStyle}"
                     FontWeight="SemiBold" />

          <!-- Matrix Layout with Row/Column Labels -->
          <Grid ColumnSpacing="16" RowSpacing="12">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="90"/>
              <ColumnDefinition Width="90"/>
              <ColumnDefinition Width="90"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Column Headers -->
            <Border Grid.Row="0" Grid.Column="1"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4">
              <TextBlock Text="Default" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold" />
            </Border>
            <Border Grid.Row="0" Grid.Column="2"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4">
              <TextBlock Text="Hover" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold" />
            </Border>
            <Border Grid.Row="0" Grid.Column="3"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4">
              <TextBlock Text="Disabled" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold" />
            </Border>

            <!-- Row 1: Primary -->
            <Border Grid.Row="1" Grid.Column="0" 
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    VerticalAlignment="Center" Margin="0,0,16,0">
              <TextBlock Text="Primary" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold"/>
            </Border>
            <Button Grid.Row="1" Grid.Column="1" Content="Button" Style="{StaticResource FilledErrorButtonStyle}" 
                    HorizontalAlignment="Stretch" IsHitTestVisible="False" />
            <Button Grid.Row="1" Grid.Column="2" Content="Button" Style="{StaticResource FilledErrorButtonStyle}" 
                    HorizontalAlignment="Stretch" IsHitTestVisible="False" 
                    Background="{StaticResource SDSDangerPrimaryHoverBrush}" />
            <Button Grid.Row="1" Grid.Column="3" Content="Button" Style="{StaticResource FilledErrorButtonStyle}" 
                    HorizontalAlignment="Stretch" IsEnabled="False" IsHitTestVisible="False" 
                    Background="#D9D9D9" BorderBrush="#B3B3B3" BorderThickness="1" Foreground="#B3B3B3" />

            <!-- Row 2: Subtle -->
            <Border Grid.Row="2" Grid.Column="0" 
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    VerticalAlignment="Center" Margin="0,0,16,0">
              <TextBlock Text="Subtle" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold"/>
            </Border>
            <Button Grid.Row="2" Grid.Column="1" Content="Button" Style="{StaticResource TextErrorButtonStyle}" 
                    HorizontalAlignment="Stretch" IsHitTestVisible="False" />
            <Button Grid.Row="2" Grid.Column="2" Content="Button" Style="{StaticResource TextErrorButtonStyle}" 
                    HorizontalAlignment="Stretch" IsHitTestVisible="False" 
                    Background="{StaticResource SDSDangerSubtleHoverBackgroundBrush}" 
                    BorderBrush="#900B09" BorderThickness="1" />
            <Button Grid.Row="2" Grid.Column="3" Content="Button" Style="{StaticResource TextErrorButtonStyle}" 
                    HorizontalAlignment="Stretch" IsEnabled="False" IsHitTestVisible="False" 
                    Background="#D9D9D9" BorderBrush="#B3B3B3" BorderThickness="1" Foreground="#B3B3B3" />
          </Grid>
        </utu:AutoLayout>

        <!-- LEVEL 2: Small Size -->
        <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space600}">
          <TextBlock Text="Small Size (32px height)"
                     Style="{StaticResource BodyLargeTextBlockStyle}"
                     FontWeight="SemiBold" />

          <!-- Matrix Layout with Row/Column Labels -->
          <Grid ColumnSpacing="16" RowSpacing="12">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="90"/>
              <ColumnDefinition Width="90"/>
              <ColumnDefinition Width="90"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Column Headers -->
            <Border Grid.Row="0" Grid.Column="1"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4">
              <TextBlock Text="Default" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold" />
            </Border>
            <Border Grid.Row="0" Grid.Column="2"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4">
              <TextBlock Text="Hover" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold" />
            </Border>
            <Border Grid.Row="0" Grid.Column="3"
                    Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4">
              <TextBlock Text="Disabled" 
                         Foreground="{StaticResource SDSMatrixIdentifierTextBrush}"
                         FontWeight="SemiBold" />
            </Border>

