<Page x:Class="figma_design_system_uno.Presentation.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      Background="{ThemeResource DefaultBackgroundBrush}">

    <Page.DataContext>
        <local:SearchModel />
    </Page.DataContext>

    <ScrollViewer>
        <utu:AutoLayout Orientation="Vertical"
                        Spacing="{StaticResource Spacing800}"
                        Padding="{StaticResource Space1200}"
                        MaxWidth="1200"
                        HorizontalAlignment="Center">

      <!-- Back Navigation -->
      <Button Content="â† Back to Home"
              Style="{StaticResource TextButtonStyle}"
              utu:NavigationExtensions.Request="!/"
              HorizontalAlignment="Left"
              Margin="0,0,0,16" />

            <!-- Title -->
            <TextBlock Text="{Binding Title}"
                       Style="{StaticResource TitlePageTextBlockStyle}" />

        <!-- Search Component Grid -->
        <Grid ColumnSpacing="64">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!-- Row headers -->
                <ColumnDefinition Width="*" />
                <!-- Default column -->
                <ColumnDefinition Width="*" />
                <!-- Placeholder column -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Headers -->
                <RowDefinition Height="Auto" />
                <!-- Default -->
                <RowDefinition Height="Auto" />
                <!-- Disabled -->
            </Grid.RowDefinitions>

            <!-- Column Headers -->
            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Text="Default"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       Margin="0,0,0,16" />
            <TextBlock Grid.Row="0"
                       Grid.Column="2"
                       Text="Placeholder"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       Margin="0,0,0,16" />

            <!-- Default Row -->
            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Text="Default"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       Margin="0,0,24,0" />

            <utu:AutoLayout Grid.Row="1"
                            Grid.Column="1"
                            Orientation="Vertical"
                            Spacing="{StaticResource Space200}"
                            Margin="0,0,0,24">
                <TextBlock Text="Label"
                           Style="{StaticResource BodyBaseTextBlockStyle}"
                           Foreground="{ThemeResource SecondaryTextBrush}" />
                <Border Background="#ffffff"
                        BorderBrush="#d9d9d9"
                        BorderThickness="1"
                        CornerRadius="20"
                        Width="180"
                        Height="40">
                    <Grid Padding="16,12,12,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Value"
                                   Grid.Column="0"
                                   Foreground="#1e1e1e"
                                   FontSize="16"
                                   VerticalAlignment="Center" />
                        <FontIcon Grid.Column="1"
                                  Glyph="&#xE711;"
                                  FontSize="12"
                                  Foreground="#1e1e1e"
                                  VerticalAlignment="Center"
                                  Margin="8,0,0,0" />
                    </Grid>
                </Border>
            </utu:AutoLayout>

            <utu:AutoLayout Grid.Row="1"
                            Grid.Column="2"
                            Orientation="Vertical"
                            Spacing="{StaticResource Space200}"
                            Margin="0,0,0,24">
                <TextBlock Text="Label"
                           Style="{StaticResource BodyBaseTextBlockStyle}"
                           Foreground="{ThemeResource SecondaryTextBrush}" />
                <Border Background="#ffffff"
                        BorderBrush="#d9d9d9"
                        BorderThickness="1"
                        CornerRadius="20"
                        Width="180"
                        Height="40">
                    <Grid Padding="16,12,12,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Value"
                                   Grid.Column="0"
                                   Foreground="#b3b3b3"
                                   FontSize="16"
                                   VerticalAlignment="Center" />
                        <FontIcon Grid.Column="1"
                                  Glyph="&#xE721;"
                                  FontSize="12"
                                  Foreground="#1e1e1e"
                                  VerticalAlignment="Center"
                                  Margin="8,0,0,0" />
                    </Grid>
                </Border>
            </utu:AutoLayout>

            <!-- Disabled Row -->
            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Text="Disabled"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       Margin="0,0,24,0" />

            <utu:AutoLayout Grid.Row="2"
                            Grid.Column="1"
                            Orientation="Vertical"
                            Spacing="{StaticResource Space200}">
                <TextBlock Text="Label"
                           Style="{StaticResource BodyBaseTextBlockStyle}"
                           Foreground="{ThemeResource DisabledTextBrush}" />
                <Border Background="#d9d9d9"
                        BorderBrush="#b2b2b2"
                        BorderThickness="1"
                        CornerRadius="20"
                        Width="180"
                        Height="40">
                    <Grid Padding="16,12,12,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Value"
                                   Grid.Column="0"
                                   Foreground="#b3b3b3"
                                   FontSize="16"
                                   VerticalAlignment="Center" />
                        <FontIcon Grid.Column="1"
                                  Glyph="&#xE711;"
                                  FontSize="12"
                                  Foreground="#b3b3b3"
                                  VerticalAlignment="Center"
                                  Margin="8,0,0,0" />
                    </Grid>
                </Border>
            </utu:AutoLayout>

            <utu:AutoLayout Grid.Row="2"
                            Grid.Column="2"
                            Orientation="Vertical"
                            Spacing="{StaticResource Space200}">
                <TextBlock Text="Label"
                           Style="{StaticResource BodyBaseTextBlockStyle}"
                           Foreground="{ThemeResource DisabledTextBrush}" />
                <Border Background="#d9d9d9"
                        BorderBrush="#b2b2b2"
                        BorderThickness="1"
                        CornerRadius="20"
                        Width="180"
                        Height="40">
                    <Grid Padding="16,12,12,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Value"
                                   Grid.Column="0"
                                   Foreground="#b3b3b3"
                                   FontSize="16"
                                   VerticalAlignment="Center" />
                        <FontIcon Grid.Column="1"
                                  Glyph="&#xE721;"
                                  FontSize="12"
                                  Foreground="#b3b3b3"
                                  VerticalAlignment="Center"
                                  Margin="8,0,0,0" />
                    </Grid>
                </Border>
            </utu:AutoLayout>

        </Grid>

    

      <!-- Source Code Viewer -->
      <controls:SourceCodeViewer 
          PageXamlPath="ms-appx:///Presentation/SearchPage.xaml"
          StyleXamlPath="ms-appx:///Styles/Search.xaml" />

    </utu:AutoLayout>
    </ScrollViewer>

</Page>
