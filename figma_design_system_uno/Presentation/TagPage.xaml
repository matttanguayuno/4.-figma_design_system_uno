<Page x:Class="figma_design_system_uno.Presentation.TagPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      Background="{StaticResource BackgroundBrush}">

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space1600}"
                    Padding="{StaticResource Space1600}">

      <!-- Page Header -->
      <utu:NavigationBar Content="Tag"
                         HorizontalContentAlignment="Left"
                         VerticalAlignment="Bottom">
        <utu:NavigationBar.MainCommand>
          <AppBarButton Icon="Back" Click="OnBackClick" />
        </utu:NavigationBar.MainCommand>
        <utu:NavigationBar.ContentTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding}"
                       FontSize="48"
                       FontWeight="Bold"
                       Foreground="{StaticResource OnSurfaceBrush}" />
          </DataTemplate>
        </utu:NavigationBar.ContentTemplate>
      </utu:NavigationBar>

      <!-- Uno.Toolkit.UI Chip Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Tag"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Matrix Layout -->
        <Grid ColumnSpacing="16" RowSpacing="16">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

          <!-- Column Headers -->
          <Border Grid.Row="0" Grid.Column="1"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  HorizontalAlignment="Center">
            <TextBlock Text="Brand" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Border Grid.Row="0" Grid.Column="2"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  HorizontalAlignment="Center">
            <TextBlock Text="Danger" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Border Grid.Row="0" Grid.Column="3"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  HorizontalAlignment="Center">
            <TextBlock Text="Positive" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Border Grid.Row="0" Grid.Column="4"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  HorizontalAlignment="Center">
            <TextBlock Text="Warning" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Border Grid.Row="0" Grid.Column="5"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  HorizontalAlignment="Center">
            <TextBlock Text="Neutral" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Row 1: Primary/Default -->
          <Border Grid.Row="1" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Primary - Default" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <utu:Chip Grid.Row="1" Grid.Column="1" Background="{StaticResource TagBrandPrimaryBackground}" Foreground="{StaticResource TagBrandPrimaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="White" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <utu:Chip Grid.Row="1" Grid.Column="2" Background="{StaticResource TagDangerPrimaryBackground}" Foreground="{StaticResource TagDangerPrimaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="White" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <utu:Chip Grid.Row="1" Grid.Column="3" Background="{StaticResource TagPositivePrimaryBackground}" Foreground="{StaticResource TagPositivePrimaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="White" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <utu:Chip Grid.Row="1" Grid.Column="4" Background="{StaticResource TagWarningPrimaryBackground}" Foreground="{StaticResource TagWarningPrimaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="Black" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <utu:Chip Grid.Row="1" Grid.Column="5" Background="{StaticResource TagNeutralPrimaryBackground}" Foreground="{StaticResource TagNeutralPrimaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="Black" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <!-- Row 2: Primary/Hover -->
          <Border Grid.Row="2" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Primary - Hover" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <utu:Chip Grid.Row="2" Grid.Column="1" Background="{StaticResource TagBrandPrimaryBackgroundHover}" Foreground="{StaticResource TagBrandPrimaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="White" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <utu:Chip Grid.Row="2" Grid.Column="2" Background="{StaticResource TagDangerPrimaryBackgroundHover}" Foreground="{StaticResource TagDangerPrimaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="White" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <utu:Chip Grid.Row="2" Grid.Column="3" Background="{StaticResource TagPositivePrimaryBackgroundHover}" Foreground="{StaticResource TagPositivePrimaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="White" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <utu:Chip Grid.Row="2" Grid.Column="4" Background="{StaticResource TagWarningPrimaryBackgroundHover}" Foreground="{StaticResource TagWarningPrimaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="Black" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <utu:Chip Grid.Row="2" Grid.Column="5" Background="{StaticResource TagNeutralPrimaryBackgroundHover}" Foreground="{StaticResource TagNeutralPrimaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="Black" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <!-- Row 3: Secondary/Default -->
          <Border Grid.Row="3" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Secondary - Default" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <utu:Chip Grid.Row="3" Grid.Column="1" Background="{StaticResource TagBrandSecondaryBackground}" Foreground="{StaticResource TagBrandSecondaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="Black" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <utu:Chip Grid.Row="3" Grid.Column="2" Background="{StaticResource TagDangerSecondaryBackground}" Foreground="{StaticResource TagDangerSecondaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="Black" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <utu:Chip Grid.Row="3" Grid.Column="3" Background="{StaticResource TagPositiveSecondaryBackground}" Foreground="{StaticResource TagPositiveSecondaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="Black" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <utu:Chip Grid.Row="3" Grid.Column="4" Background="{StaticResource TagWarningSecondaryBackground}" Foreground="{StaticResource TagWarningSecondaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="Black" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <utu:Chip Grid.Row="3" Grid.Column="5" Background="{StaticResource TagNeutralSecondaryBackground}" Foreground="{StaticResource TagNeutralSecondaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="Black" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <!-- Row 4: Secondary/Hover -->
          <Border Grid.Row="4" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Secondary - Hover" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <utu:Chip Grid.Row="4" Grid.Column="1" Background="{StaticResource TagBrandSecondaryBackgroundHover}" Foreground="{StaticResource TagBrandSecondaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="Black" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <utu:Chip Grid.Row="4" Grid.Column="2" Background="{StaticResource TagDangerSecondaryBackgroundHover}" Foreground="{StaticResource TagDangerSecondaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="Black" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <utu:Chip Grid.Row="4" Grid.Column="3" Background="{StaticResource TagPositiveSecondaryBackgroundHover}" Foreground="{StaticResource TagPositiveSecondaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="Black" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <utu:Chip Grid.Row="4" Grid.Column="4" Background="{StaticResource TagWarningSecondaryBackgroundHover}" Foreground="{StaticResource TagWarningSecondaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="Black" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>

          <utu:Chip Grid.Row="4" Grid.Column="5" Background="{StaticResource TagNeutralSecondaryBackgroundHover}" Foreground="{StaticResource TagNeutralSecondaryForeground}" CornerRadius="8" Padding="8" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Tag" VerticalAlignment="Center" />
              <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="Black" Margin="8,0,0,0" FontSize="12" VerticalAlignment="Center" />
            </StackPanel>
          </utu:Chip>
        </Grid>
      </utu:AutoLayout>

      <!-- Tag Toggle Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Tag Toggle"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Matrix Layout with Row Labels -->
        <Grid ColumnSpacing="16" RowSpacing="16">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

          <!-- Row 1: Active -->
          <Border Grid.Row="0" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Active" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Active Tag (Selected) -->
          <Border Grid.Row="0" Grid.Column="1"
                  Background="{StaticResource PrimaryBrush}"
                  CornerRadius="8"
                  Padding="8">
            <utu:AutoLayout Orientation="Horizontal" Spacing="8">
              <FontIcon Glyph="&#xE73E;"
                       FontSize="16"
                       Foreground="{StaticResource OnPrimaryBrush}"
                       VerticalAlignment="Center" />
              <TextBlock Text="Label"
                         FontSize="16"
                         Foreground="{StaticResource OnPrimaryBrush}"
                         VerticalAlignment="Center" />
            </utu:AutoLayout>
          </Border>

          <!-- Row 2: Inactive -->
          <Border Grid.Row="1" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Inactive" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Inactive Tag (Unselected) -->
          <Border Grid.Row="1" Grid.Column="1"
                  Background="{StaticResource SDSPaginationDefaultBackgroundBrush}"
                  CornerRadius="8"
                  Padding="8">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceLowBrush}"
                       HorizontalAlignment="Center" />
          </Border>
        </Grid>
      </utu:AutoLayout>

      <!-- Tag Toggle Group Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Tag Toggle Group"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <utu:AutoLayout Orientation="Horizontal" Spacing="8">
          <!-- Selected Tag -->
          <Border Background="{StaticResource PrimaryBrush}"
                  CornerRadius="8"
                  Padding="8">
            <utu:AutoLayout Orientation="Horizontal" Spacing="8">
              <FontIcon Glyph="&#xE73E;"
                       FontSize="16"
                       Foreground="{StaticResource OnPrimaryBrush}"
                       VerticalAlignment="Center" />
              <TextBlock Text="Label"
                         FontSize="16"
                         Foreground="{StaticResource OnPrimaryBrush}"
                         VerticalAlignment="Center" />
            </utu:AutoLayout>
          </Border>

          <!-- Unselected Tags (6 more) -->
          <Border Background="{StaticResource SDSPaginationDefaultBackgroundBrush}"
                  CornerRadius="8"
                  Padding="8">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceLowBrush}" />
          </Border>

          <Border Background="{StaticResource SDSPaginationDefaultBackgroundBrush}"
                  CornerRadius="8"
                  Padding="8">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceLowBrush}" />
          </Border>

          <Border Background="{StaticResource SDSPaginationDefaultBackgroundBrush}"
                  CornerRadius="8"
                  Padding="8">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceLowBrush}" />
          </Border>

          <Border Background="{StaticResource SDSPaginationDefaultBackgroundBrush}"
                  CornerRadius="8"
                  Padding="8">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceLowBrush}" />
          </Border>

          <Border Background="{StaticResource SDSPaginationDefaultBackgroundBrush}"
                  CornerRadius="8"
                  Padding="8">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceLowBrush}" />
          </Border>

          <Border Background="{StaticResource SDSPaginationDefaultBackgroundBrush}"
                  CornerRadius="8"
                  Padding="8">
            <TextBlock Text="Label"
                       FontSize="16"
                       Foreground="{StaticResource OnSurfaceLowBrush}" />
          </Border>
        </utu:AutoLayout>
      </utu:AutoLayout>

      <!-- Source Code Viewer -->
      <controls:SourceCodeViewer 
        PageXamlPath="ms-appx:///Presentation/TagPage.xaml" />

    </utu:AutoLayout>
  </ScrollViewer>
</Page>
