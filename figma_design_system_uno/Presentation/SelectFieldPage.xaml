<Page x:Class="figma_design_system_uno.Presentation.SelectFieldPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      NavigationCacheMode="Required"
      Background="{ThemeResource DefaultBackgroundBrush}">

  <Page.Resources>
    <local:SelectFieldModel x:Key="ViewModel" />
    
    <!-- Error text brush -->
    <SolidColorBrush x:Key="ErrorTextBrush" Color="#900b09" />
  </Page.Resources>

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Padding="{StaticResource Spacing800}"
                    Spacing="{StaticResource Space1200}"
                    MaxWidth="1200"
                    HorizontalAlignment="Center">

      <!-- Back Navigation -->
      <Button Content="â† Back to Home"
              Style="{StaticResource TextButtonStyle}"
              utu:NavigationExtensions.Request="!/"
              HorizontalAlignment="Left"
              Margin="0,0,0,16" />

      <!-- Page Title -->
      <TextBlock Text="Select Field"
                 Style="{StaticResource TitlePageTextBlockStyle}" />

      <!-- Grid Layout matching Figma -->
      <Grid ColumnSpacing="64">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Empty top-left cell -->

        <!-- Column Headers -->
        <TextBlock Grid.Row="0" Grid.Column="1"
                   Text="Placeholder"
                   Style="{StaticResource BodyStrongTextBlockStyle}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   Margin="0,0,0,16" />
        <TextBlock Grid.Row="0" Grid.Column="2"
                   Text="Value"
                   Style="{StaticResource BodyStrongTextBlockStyle}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   Margin="0,0,0,16" />

        <!-- Row Headers -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Default"
                   Style="{StaticResource BodyStrongTextBlockStyle}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   VerticalAlignment="Center"
                   Margin="0,0,24,0" />
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Error"
                   Style="{StaticResource BodyStrongTextBlockStyle}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   VerticalAlignment="Center"
                   Margin="0,0,24,0" />
        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Disabled"
                   Style="{StaticResource BodyStrongTextBlockStyle}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   VerticalAlignment="Center"
                   Margin="0,0,24,0" />

        <!-- Default / Placeholder -->
        <utu:AutoLayout Grid.Row="1" Grid.Column="1" 
                        Orientation="Vertical" 
                        Spacing="{StaticResource Space200}"
                        Margin="0,0,0,24">
          <TextBlock Text="Label"
                     Style="{StaticResource BodyBaseTextBlockStyle}" />
          <ComboBox SelectedIndex="0"
                    Style="{StaticResource SelectFieldComboBoxStyle}"
                    CornerRadius="{StaticResource Radius200}"
                    MinWidth="240">
            <ComboBoxItem Content="Value" />
            <ComboBoxItem Content="Option 2" />
            <ComboBoxItem Content="Option 3" />
          </ComboBox>
        </utu:AutoLayout>

        <!-- Default / Value -->
        <utu:AutoLayout Grid.Row="1" Grid.Column="2" 
                        Orientation="Vertical" 
                        Spacing="{StaticResource Space200}"
                        Margin="0,0,0,24">
          <TextBlock Text="Label"
                     Style="{StaticResource BodyBaseTextBlockStyle}" />
          <ComboBox SelectedIndex="0"
                    Style="{StaticResource SelectFieldComboBoxStyle}"
                    CornerRadius="{StaticResource Radius200}"
                    MinWidth="240">
            <ComboBoxItem Content="Value" />
            <ComboBoxItem Content="Option 2" />
            <ComboBoxItem Content="Option 3" />
          </ComboBox>
        </utu:AutoLayout>

        <!-- Error / Placeholder -->
        <utu:AutoLayout Grid.Row="2" Grid.Column="1" 
                        Orientation="Vertical" 
                        Spacing="{StaticResource Space200}"
                        Margin="0,0,0,24">
          <TextBlock Text="Label"
                     Style="{StaticResource BodyBaseTextBlockStyle}" />
          <ComboBox SelectedIndex="0"
                    Style="{StaticResource ErrorSelectFieldComboBoxStyle}"
                    CornerRadius="{StaticResource Radius200}"
                    MinWidth="240">
            <ComboBoxItem Content="Value" />
            <ComboBoxItem Content="Option 2" />
            <ComboBoxItem Content="Option 3" />
          </ComboBox>
          <TextBlock Text="Error"
                     Style="{StaticResource BodyBaseTextBlockStyle}"
                     Foreground="{StaticResource ErrorTextBrush}" />
        </utu:AutoLayout>

        <!-- Error / Value -->
        <utu:AutoLayout Grid.Row="2" Grid.Column="2" 
                        Orientation="Vertical" 
                        Spacing="{StaticResource Space200}"
                        Margin="0,0,0,24">
          <TextBlock Text="Label"
                     Style="{StaticResource BodyBaseTextBlockStyle}" />
          <ComboBox SelectedIndex="0"
                    Style="{StaticResource ErrorSelectFieldComboBoxStyle}"
                    CornerRadius="{StaticResource Radius200}"
                    MinWidth="240">
            <ComboBoxItem Content="Value" />
            <ComboBoxItem Content="Option 2" />
            <ComboBoxItem Content="Option 3" />
          </ComboBox>
          <TextBlock Text="Error"
                     Style="{StaticResource BodyBaseTextBlockStyle}"
                     Foreground="{StaticResource ErrorTextBrush}" />
        </utu:AutoLayout>

        <!-- Disabled / Placeholder -->
        <utu:AutoLayout Grid.Row="3" Grid.Column="1" 
                        Orientation="Vertical" 
                        Spacing="{StaticResource Space200}">
          <TextBlock Text="Label"
                     Style="{StaticResource BodyBaseTextBlockStyle}"
                     Foreground="{StaticResource DisabledTextBrush}" />
          <ComboBox SelectedIndex="0"
                    Style="{StaticResource DisabledSelectFieldComboBoxStyle}"
                    CornerRadius="{StaticResource Radius200}"
                    MinWidth="240">
            <ComboBoxItem Content="Value" />
            <ComboBoxItem Content="Option 2" />
            <ComboBoxItem Content="Option 3" />
          </ComboBox>
        </utu:AutoLayout>

        <!-- Disabled / Value -->
        <utu:AutoLayout Grid.Row="3" Grid.Column="2" 
                        Orientation="Vertical" 
                        Spacing="{StaticResource Space200}">
          <TextBlock Text="Label"
                     Style="{StaticResource BodyBaseTextBlockStyle}"
                     Foreground="{StaticResource DisabledTextBrush}" />
          <ComboBox SelectedIndex="0"
                    Style="{StaticResource DisabledSelectFieldComboBoxStyle}"
                    CornerRadius="{StaticResource Radius200}"
                    MinWidth="240">
            <ComboBoxItem Content="Value" />
            <ComboBoxItem Content="Option 2" />
            <ComboBoxItem Content="Option 3" />
          </ComboBox>
        </utu:AutoLayout>

      </Grid>



      <!-- Source Code Viewer -->
      <controls:SourceCodeViewer 
          PageXamlPath="ms-appx:///Presentation/SelectFieldPage.xaml"
          StyleXamlPath="ms-appx:///Styles/SelectField.xaml" />

    </utu:AutoLayout>
  </ScrollViewer>

</Page>
