<Page x:Class="figma_design_system_uno.Presentation.PaginationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      Background="Transparent">

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Padding="{StaticResource Spacing800}"
                    Spacing="{StaticResource Space1200}">

      <!-- Page Header -->
      <utu:NavigationBar Content="Pagination"
                         HorizontalContentAlignment="Left"
                         VerticalAlignment="Bottom">
        <utu:NavigationBar.MainCommand>
          <AppBarButton Icon="Back" Click="OnBackClick" />
        </utu:NavigationBar.MainCommand>
        <utu:NavigationBar.ContentTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding}"
                       FontSize="48"
                       FontWeight="Bold"
                       VerticalAlignment="Bottom" />
          </DataTemplate>
        </utu:NavigationBar.ContentTemplate>
      </utu:NavigationBar>

      <!-- Pagination Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Pagination"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <utu:AutoLayout Orientation="Horizontal" Spacing="8">
          <Button MinWidth="0"
                  Background="Transparent" Foreground="{StaticResource OnSurfaceLowBrush}"
                  BorderBrush="Transparent" BorderThickness="0"
                  CornerRadius="4" Padding="12,8"
                  FontSize="14" FontWeight="Medium"
                  VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Spacing="4">
              <FontIcon Glyph="&#xE72B;" FontSize="14" Foreground="{StaticResource OnSurfaceLowBrush}" />
              <TextBlock Text="Previous" />
            </StackPanel>
          </Button>
          
          <Button Content="1" MinWidth="32" Height="32"
                  Background="{StaticResource SDSPaginationCurrentBackgroundBrush}" Foreground="{StaticResource SDSPaginationCurrentTextBrush}"
                  BorderBrush="Transparent" BorderThickness="0"
                  CornerRadius="4" Padding="8"
                  FontSize="14" FontWeight="Medium"
                  Margin="0,5,0,0" />
          
          <Button Content="2" MinWidth="32" Height="32"
                  Background="{StaticResource SDSPaginationDefaultBackgroundBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="Transparent" BorderThickness="0"
                  CornerRadius="4" Padding="8"
                  FontSize="14" FontWeight="Medium"
                  Margin="0,5,0,0" />
          
          <Button Content="3" MinWidth="32" Height="32"
                  Background="{StaticResource SDSPaginationDefaultBackgroundBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="Transparent" BorderThickness="0"
                  CornerRadius="4" Padding="8"
                  FontSize="14" FontWeight="Medium"
                  Margin="0,5,0,0" />
          
          <Button Content="..." MinWidth="32" Height="32"
                  Background="Transparent" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="Transparent" BorderThickness="0"
                  Padding="8" FontSize="14"
                  Margin="0,5,0,0" />
          
          <Button Content="67" MinWidth="32" Height="32"
                  Background="{StaticResource SDSPaginationDefaultBackgroundBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="Transparent" BorderThickness="0"
                  CornerRadius="4" Padding="8"
                  FontSize="14" FontWeight="Medium"
                  Margin="0,5,0,0" />
          
          <Button Content="68" MinWidth="32" Height="32"
                  Background="{StaticResource SDSPaginationDefaultBackgroundBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="Transparent" BorderThickness="0"
                  CornerRadius="4" Padding="8"
                  FontSize="14" FontWeight="Medium"
                  Margin="0,5,0,0" />
          
          <Button MinWidth="0"
                  Background="{StaticResource SDSPaginationDefaultBackgroundBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="Transparent" BorderThickness="0"
                  CornerRadius="4" Padding="12,8"
                  FontSize="14" FontWeight="Medium"
                  VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Spacing="4">
              <TextBlock Text="Next" />
              <FontIcon Glyph="&#xE72A;" FontSize="14" />
            </StackPanel>
          </Button>
        </utu:AutoLayout>
      </utu:AutoLayout>

      <!-- Pagination Page Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Pagination Page"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- Matrix Layout with Row/Column Labels -->
        <Grid ColumnSpacing="16" RowSpacing="16">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

          <!-- Column Header -->
          <Border Grid.Row="0" Grid.Column="1"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4">
            <TextBlock Text="Default" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <!-- Row 1: Default -->
          <Border Grid.Row="1" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Default" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Button Grid.Row="1" Grid.Column="1" Content="1" MinWidth="32" Height="32"
                  Background="{StaticResource SDSPaginationDefaultBackgroundBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="{StaticResource SDSPaginationDefaultBackgroundBrush}" BorderThickness="1"
                  CornerRadius="4" Padding="8"
                  FontSize="14" FontWeight="Medium" />

          <!-- Row 2: Hover -->
          <Border Grid.Row="2" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Hover" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Button Grid.Row="2" Grid.Column="1" Content="1" MinWidth="32" Height="32"
                  Background="{StaticResource SDSPaginationHoverBackgroundBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="{StaticResource SDSPaginationHoverBackgroundBrush}" BorderThickness="1"
                  CornerRadius="4" Padding="8"
                  FontSize="14" FontWeight="Medium" />

          <!-- Row 3: Current -->
          <Border Grid.Row="3" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Current" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Button Grid.Row="3" Grid.Column="1" Content="1" MinWidth="32" Height="32"
                  Background="{StaticResource SDSPaginationCurrentBackgroundBrush}" Foreground="{StaticResource SDSPaginationCurrentTextBrush}"
                  BorderBrush="{StaticResource SDSPaginationCurrentBackgroundBrush}" BorderThickness="1"
                  CornerRadius="4" Padding="8"
                  FontSize="14" FontWeight="Medium" />

          <!-- Row 4: Current Hover -->
          <Border Grid.Row="4" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Current Hover" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Button Grid.Row="4" Grid.Column="1" Content="1" MinWidth="32" Height="32"
                  Background="{StaticResource SDSPaginationCurrentHoverBackgroundBrush}" Foreground="{StaticResource SDSPaginationCurrentTextBrush}"
                  BorderBrush="{StaticResource SDSPaginationCurrentHoverBackgroundBrush}" BorderThickness="1"
                  CornerRadius="4" Padding="8"
                  FontSize="14" FontWeight="Medium" />
        </Grid>
      </utu:AutoLayout>

      <!-- Pagination Previous Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Pagination Previous"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- TEST: Disabled style button -->
        <Button Width="96"
                MinWidth="0"
                Background="Transparent" 
                Foreground="{StaticResource SDSPaginationDisabledTextBrush}"
                BorderBrush="Transparent" 
                BorderThickness="0"
                CornerRadius="4" 
                Padding="12,8"
                FontSize="14" 
                FontWeight="Medium">
          <utu:AutoLayout Orientation="Horizontal" Spacing="8">
            <FontIcon Glyph="&#xE72B;" FontSize="14" />
            <TextBlock Text="Previous (TEST)" FontSize="14" FontWeight="Medium" />
          </utu:AutoLayout>
        </Button>

        <!-- Matrix Layout with Row/Column Labels -->
        <Grid ColumnSpacing="16" RowSpacing="16">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

          <!-- Row 1: Default -->
          <Border Grid.Row="0" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Default" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Button Grid.Row="0" Grid.Column="1" MinWidth="0"
                  Background="{StaticResource SDSPaginationDefaultBackgroundBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="{StaticResource SDSPaginationDefaultBackgroundBrush}" BorderThickness="1"
                  CornerRadius="4" Padding="12,8"
                  FontSize="14" FontWeight="Medium">
            <utu:AutoLayout Orientation="Horizontal" Spacing="8">
              <FontIcon Glyph="&#xE72B;" FontSize="14" />
              <TextBlock Text="Previous" FontSize="14" FontWeight="Medium" />
            </utu:AutoLayout>
          </Button>

          <!-- Row 2: Hover -->
          <Border Grid.Row="1" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Hover" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Button Grid.Row="1" Grid.Column="1" MinWidth="0"
                  Background="{StaticResource SDSPaginationHoverBackgroundBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="{StaticResource SDSPaginationHoverBackgroundBrush}" BorderThickness="1"
                  CornerRadius="4" Padding="12,8"
                  FontSize="14" FontWeight="Medium">
            <utu:AutoLayout Orientation="Horizontal" Spacing="8">
              <FontIcon Glyph="&#xE72B;" FontSize="14" />
              <TextBlock Text="Previous" FontSize="14" FontWeight="Medium" />
            </utu:AutoLayout>
          </Button>

          <!-- Row 3: Disabled -->
          <Border Grid.Row="2" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Disabled" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Button Grid.Row="2" Grid.Column="1" MinWidth="0"
                  Background="Transparent" Foreground="{StaticResource SDSPaginationDisabledTextBrush}"
                  BorderBrush="Transparent" BorderThickness="0"
                  CornerRadius="4" Padding="12,8"
                  FontSize="14" FontWeight="Medium">
            <utu:AutoLayout Orientation="Horizontal" Spacing="8">
              <FontIcon Glyph="&#xE72B;" FontSize="14" Foreground="{StaticResource SDSPaginationDisabledTextBrush}" />
              <TextBlock Text="Previous" FontSize="14" FontWeight="Medium" Foreground="{StaticResource SDSPaginationDisabledTextBrush}" />
            </utu:AutoLayout>
          </Button>
        </Grid>
      </utu:AutoLayout>

      <!-- Pagination Next Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Pagination Next"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <!-- TEST: Disabled style button -->
        <Button Width="96"
                MinWidth="0"
                Background="Transparent" 
                Foreground="{StaticResource SDSPaginationDisabledTextBrush}"
                BorderBrush="Transparent" 
                BorderThickness="0"
                CornerRadius="4" 
                Padding="12,8"
                FontSize="14" 
                FontWeight="Medium">
          <utu:AutoLayout Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Next (TEST)" FontSize="14" FontWeight="Medium" />
            <FontIcon Glyph="&#xE72A;" FontSize="14" />
          </utu:AutoLayout>
        </Button>

        <!-- Matrix Layout with Row/Column Labels -->
        <Grid ColumnSpacing="16" RowSpacing="16">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

          <!-- Row 1: Default -->
          <Border Grid.Row="0" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Default" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Button Grid.Row="0" Grid.Column="1" MinWidth="0"
                  Background="{StaticResource SDSPaginationDefaultBackgroundBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="{StaticResource SDSPaginationDefaultBackgroundBrush}" BorderThickness="1"
                  CornerRadius="4" Padding="12,8"
                  FontSize="14" FontWeight="Medium">
            <utu:AutoLayout Orientation="Horizontal" Spacing="8">
              <TextBlock Text="Next" FontSize="14" FontWeight="Medium" />
              <FontIcon Glyph="&#xE72A;" FontSize="14" />
            </utu:AutoLayout>
          </Button>

          <!-- Row 2: Hover -->
          <Border Grid.Row="1" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Hover" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Button Grid.Row="1" Grid.Column="1" MinWidth="0"
                  Background="{StaticResource SDSPaginationHoverBackgroundBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="{StaticResource SDSPaginationHoverBackgroundBrush}" BorderThickness="1"
                  CornerRadius="4" Padding="12,8"
                  FontSize="14" FontWeight="Medium">
            <utu:AutoLayout Orientation="Horizontal" Spacing="8">
              <TextBlock Text="Next" FontSize="14" FontWeight="Medium" />
              <FontIcon Glyph="&#xE72A;" FontSize="14" />
            </utu:AutoLayout>
          </Button>

          <!-- Row 3: Disabled -->
          <Border Grid.Row="2" Grid.Column="0"
                  Background="{StaticResource SDSMatrixIdentifierBackgroundBrush}"
                  BorderBrush="{StaticResource SDSMatrixIdentifierBorderBrush}"
                  BorderThickness="1" CornerRadius="12" Padding="12,8"
                  VerticalAlignment="Center" Margin="0,0,16,0">
            <TextBlock Text="Disabled" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SDSMatrixIdentifierTextBrush}" />
          </Border>

          <Button Grid.Row="2" Grid.Column="1" MinWidth="0"
                  Background="Transparent" Foreground="{StaticResource SDSPaginationDisabledTextBrush}"
                  BorderBrush="Transparent" BorderThickness="0"
                  CornerRadius="4" Padding="12,8"
                  FontSize="14" FontWeight="Medium">
            <utu:AutoLayout Orientation="Horizontal" Spacing="8">
              <TextBlock Text="Next" FontSize="14" FontWeight="Medium" Foreground="{StaticResource SDSPaginationDisabledTextBrush}" />
              <FontIcon Glyph="&#xE72A;" FontSize="14" Foreground="{StaticResource SDSPaginationDisabledTextBrush}" />
            </utu:AutoLayout>
          </Button>
        </Grid>
      </utu:AutoLayout>

      <!-- Pagination Gap Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Pagination Gap"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <TextBlock Text="..." 
                   FontSize="14" 
                   Foreground="{StaticResource OnSurfaceBrush}"
                   Margin="8,5,0,0"
                   HorizontalAlignment="Left" />
      </utu:AutoLayout>

      <!-- Pagination List Section -->
      <utu:AutoLayout Orientation="Vertical" Spacing="{StaticResource Space800}">
        <TextBlock Text="Pagination List"
                   FontWeight="Bold"
                   Style="{StaticResource HeadingTextBlockStyle}" />

        <utu:AutoLayout Orientation="Horizontal" Spacing="8">
          <Button Content="1" MinWidth="32" Height="32"
                  Background="{StaticResource SDSPaginationDefaultBackgroundBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="{StaticResource SDSPaginationDefaultBackgroundBrush}" BorderThickness="1"
                  CornerRadius="4" Padding="8" Margin="0,5,0,0"
                  FontSize="14" FontWeight="Medium" />
          
          <Button Content="2" MinWidth="32" Height="32"
                  Background="{StaticResource SDSPaginationDefaultBackgroundBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="{StaticResource SDSPaginationDefaultBackgroundBrush}" BorderThickness="1"
                  CornerRadius="4" Padding="8" Margin="0,5,0,0"
                  FontSize="14" FontWeight="Medium" />
          
          <Button Content="3" MinWidth="32" Height="32"
                  Background="{StaticResource SDSPaginationDefaultBackgroundBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="{StaticResource SDSPaginationDefaultBackgroundBrush}" BorderThickness="1"
                  CornerRadius="4" Padding="8" Margin="0,5,0,0"
                  FontSize="14" FontWeight="Medium" />

          <Button Content="..." MinWidth="32" Height="32"
                  Background="Transparent" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="Transparent" BorderThickness="0"
                  Padding="8" Margin="0,5,0,0"
                  FontSize="14" />

          <Button Content="67" MinWidth="32" Height="32"
                  Background="{StaticResource SDSPaginationDefaultBackgroundBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="{StaticResource SDSPaginationDefaultBackgroundBrush}" BorderThickness="1"
                  CornerRadius="4" Padding="8" Margin="0,5,0,0"
                  FontSize="14" FontWeight="Medium" />

          <Button Content="68" MinWidth="32" Height="32"
                  Background="{StaticResource SDSPaginationDefaultBackgroundBrush}" Foreground="{StaticResource OnSurfaceBrush}"
                  BorderBrush="{StaticResource SDSPaginationDefaultBackgroundBrush}" BorderThickness="1"
                  CornerRadius="4" Padding="8" Margin="0,5,0,0"
                  FontSize="14" FontWeight="Medium" />
        </utu:AutoLayout>
      </utu:AutoLayout>

      <!-- Source Code Viewer -->
      <controls:SourceCodeViewer 
        PageXamlPath="ms-appx:///Presentation/PaginationPage.xaml" />

    </utu:AutoLayout>
  </ScrollViewer>
</Page>
