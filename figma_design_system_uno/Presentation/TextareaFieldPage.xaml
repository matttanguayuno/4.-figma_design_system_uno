<Page x:Class="figma_design_system_uno.Presentation.TextareaFieldPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      NavigationCacheMode="Required"
      Background="Transparent">

  <Page.Resources>
    <local:TextareaFieldModel x:Key="ViewModel" />
    
    <!-- Error text brush -->
    <SolidColorBrush x:Key="ErrorTextBrush" Color="#900b09" />
  </Page.Resources>

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Padding="{StaticResource Spacing800}"
                    Spacing="{StaticResource Space1200}">

      <!-- Page Title -->
      <utu:NavigationBar Content="Textarea Component"
                         HorizontalContentAlignment="Left"
                         VerticalAlignment="Bottom">
        <utu:NavigationBar.MainCommand>
          <AppBarButton Icon="Back" Click="OnBackClick" />
        </utu:NavigationBar.MainCommand>
        <utu:NavigationBar.ContentTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding}"
                       FontSize="48"
                       FontWeight="Bold"
                       VerticalAlignment="Bottom" />
          </DataTemplate>
        </utu:NavigationBar.ContentTemplate>
      </utu:NavigationBar>

      <!-- Grid Layout matching RadioField/SelectField pattern -->
      <Grid ColumnSpacing="64">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Column Headers -->
        <TextBlock Grid.Row="0" Grid.Column="1"
                   Text="Default"
                   Style="{StaticResource BodyStrongTextBlockStyle}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   Margin="0,0,0,16" />
        <TextBlock Grid.Row="0" Grid.Column="2"
                   Text="Placeholder"
                   Style="{StaticResource BodyStrongTextBlockStyle}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   Margin="0,0,0,16" />

        <!-- Row Headers -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Default"
                   Style="{StaticResource BodyStrongTextBlockStyle}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   VerticalAlignment="Center"
                   Margin="0,0,24,0" />
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Disabled"
                   Style="{StaticResource BodyStrongTextBlockStyle}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   VerticalAlignment="Center"
                   Margin="0,0,24,0" />
        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Error"
                   Style="{StaticResource BodyStrongTextBlockStyle}"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   VerticalAlignment="Center"
                   Margin="0,0,24,0" />

        <!-- Default / Default -->
        <utu:AutoLayout Grid.Row="1" Grid.Column="1" 
                        Orientation="Vertical" 
                        Spacing="{StaticResource Space200}"
                        Margin="0,0,0,24">
          <TextBlock Text="Label"
                     Style="{StaticResource BodyBaseTextBlockStyle}" />
          <TextBox Text="Value"
                   Style="{StaticResource TextareaFieldTextBoxStyle}"
                   CornerRadius="{StaticResource Radius200}"
                   MinWidth="240" />
        </utu:AutoLayout>

        <!-- Default / Placeholder -->
        <utu:AutoLayout Grid.Row="1" Grid.Column="2" 
                        Orientation="Vertical" 
                        Spacing="{StaticResource Space200}"
                        Margin="0,0,0,24">
          <TextBlock Text="Label"
                     Style="{StaticResource BodyBaseTextBlockStyle}" />
          <TextBox PlaceholderText="Value"
                   Style="{StaticResource TextareaFieldTextBoxStyle}"
                   CornerRadius="{StaticResource Radius200}"
                   MinWidth="240" />
        </utu:AutoLayout>

        <!-- Disabled / Default -->
        <utu:AutoLayout Grid.Row="2" Grid.Column="1" 
                        Orientation="Vertical" 
                        Spacing="{StaticResource Space200}"
                        Margin="0,0,0,24">
          <TextBlock Text="Label"
                     Style="{StaticResource BodyBaseTextBlockStyle}"
                     Foreground="{StaticResource DisabledTextBrush}" />
          <TextBox Text="Value"
                   Style="{StaticResource DisabledTextareaFieldTextBoxStyle}"
                   CornerRadius="{StaticResource Radius200}"
                   MinWidth="240" />
        </utu:AutoLayout>

        <!-- Disabled / Placeholder -->
        <utu:AutoLayout Grid.Row="2" Grid.Column="2" 
                        Orientation="Vertical" 
                        Spacing="{StaticResource Space200}"
                        Margin="0,0,0,24">
          <TextBlock Text="Label"
                     Style="{StaticResource BodyBaseTextBlockStyle}"
                     Foreground="{StaticResource DisabledTextBrush}" />
          <TextBox PlaceholderText="Value"
                   Style="{StaticResource DisabledTextareaFieldTextBoxStyle}"
                   CornerRadius="{StaticResource Radius200}"
                   MinWidth="240" />
        </utu:AutoLayout>

        <!-- Error / Default -->
        <utu:AutoLayout Grid.Row="3" Grid.Column="1" 
                        Orientation="Vertical" 
                        Spacing="{StaticResource Space200}">
          <TextBlock Text="Label"
                     Style="{StaticResource BodyBaseTextBlockStyle}" />
          <TextBox Text="Value"
                   Style="{StaticResource ErrorTextareaFieldTextBoxStyle}"
                   CornerRadius="{StaticResource Radius200}"
                   MinWidth="240" />
        </utu:AutoLayout>

        <!-- Error / Placeholder -->
        <utu:AutoLayout Grid.Row="3" Grid.Column="2" 
                        Orientation="Vertical" 
                        Spacing="{StaticResource Space200}">
          <TextBlock Text="Label"
                     Style="{StaticResource BodyBaseTextBlockStyle}" />
          <TextBox PlaceholderText="Value"
                   Style="{StaticResource ErrorTextareaFieldTextBoxStyle}"
                   CornerRadius="{StaticResource Radius200}"
                   MinWidth="240" />
        </utu:AutoLayout>

      </Grid>



      <!-- Source Code Viewer -->
      <controls:SourceCodeViewer 
          PageXamlPath="ms-appx:///Presentation/TextareaFieldPage.xaml"
          StyleXamlPath="ms-appx:///Styles/TextareaField.xaml" />

    </utu:AutoLayout>
  </ScrollViewer>

</Page>
