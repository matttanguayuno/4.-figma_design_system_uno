<Page x:Class="figma_design_system_uno.Presentation.CardGridContentListSectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:controls="using:figma_design_system_uno.Controls"
      Background="Transparent"
      NavigationCacheMode="Required">

  <ScrollViewer>
    <utu:AutoLayout Orientation="Vertical"
                    Padding="{StaticResource Spacing800}"
                    Spacing="{StaticResource Space1200}">

      <!-- Page Header -->
      <utu:NavigationBar Content="Card Grid Content List Section"
                         HorizontalContentAlignment="Left"
                         VerticalAlignment="Bottom">
        <utu:NavigationBar.MainCommand>
          <AppBarButton Icon="Back" Click="OnBackClick" />
        </utu:NavigationBar.MainCommand>
      </utu:NavigationBar>

      <!-- Description -->
      <TextBlock Text="List of content cards with image, title, body text, and button. Desktop displays bordered cards with 24px spacing, mobile shows borderless cards with 48px spacing."
                 Style="{StaticResource BodyLargeTextBlockStyle}"
                 TextWrapping="Wrap"
                 Foreground="{StaticResource SecondaryTextBrush}" />

      <!-- Device Toggle -->
      <StackPanel Orientation="Horizontal" Spacing="16">
        <RadioButton Content="Desktop" IsChecked="{Binding DeviceMode, Mode=TwoWay, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Desktop}" GroupName="Device" />
        <RadioButton Content="Mobile" IsChecked="{Binding DeviceMode, Mode=TwoWay, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Mobile}" GroupName="Device" />
      </StackPanel>

      <!-- Preview Frame -->
      <Border Background="{StaticResource SurfaceDefaultBrush}"
              BorderBrush="{StaticResource OutlineVariantBrush}"
              BorderThickness="1"
              CornerRadius="{StaticResource Radius400}"
              Padding="0"
              Width="{Binding DeviceWidth}">
        <controls:CardGridContentListControl IsMobile="{Binding IsMobile}" />
      </Border>
    </utu:AutoLayout>
  </ScrollViewer>
</Page>
