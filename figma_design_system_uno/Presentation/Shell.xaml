<UserControl x:Class="figma_design_system_uno.Presentation.Shell"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      Background="{StaticResource DefaultBackgroundBrush}">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="250" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <!-- Left Navigation Panel -->
    <Border Grid.Column="0" 
            Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource NeutralTertiaryHoverBrush}"
            BorderThickness="0,0,1,0">
      <ScrollViewer>
        <utu:AutoLayout Orientation="Vertical" 
                        Padding="16"
                        Spacing="8">
          
          <!-- Header -->
          <utu:AutoLayout Orientation="Vertical" Spacing="4" Padding="8">
            <TextBlock Text="Uno SDS"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource MaterialPrimaryBrush}" />
          </utu:AutoLayout>

          <!-- Navigation Items -->
          <Button Content="Home" 
                  Click="Navigate_Click"
                  Tag="Home"
                  Style="{StaticResource OutlinedButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left" />

          <TextBlock Text="COMPONENTS"
                     FontSize="11"
                     FontWeight="SemiBold"
                     Foreground="{StaticResource SecondaryTextBrush}"
                     Margin="8,16,0,8" />

          <Button Content="Accordion" 
                  Click="Navigate_Click"
                  Tag="Accordion"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left" />

          <Button Content="Avatar" 
                  Click="Navigate_Click"
                  Tag="Avatar"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left" />

          <Button Content="Buttons" 
                  Click="Navigate_Click"
                  Tag="Buttons"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left" />

          <Button Content="Cards" 
                  Click="Navigate_Click"
                  Tag="Cards"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left" />

          <Button Content="Dialog" 
                  Click="Navigate_Click"
                  Tag="Dialog"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left" />

          <Button Content="Inputs" 
                  Click="Navigate_Click"
                  Tag="InputFields"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left" />

          <Button Content="Tag" 
                  Click="Navigate_Click"
                  Tag="Tag"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left" />

          <Button Content="Tag Toggle" 
                  Click="Navigate_Click"
                  Tag="TagToggle"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left" />

        </utu:AutoLayout>
      </ScrollViewer>
    </Border>

    <!-- Main Content Area -->
    <Frame x:Name="ContentFrame" 
           Grid.Column="1"
           Background="{StaticResource ContentBackgroundBrush}" />
  </Grid>

</UserControl>
