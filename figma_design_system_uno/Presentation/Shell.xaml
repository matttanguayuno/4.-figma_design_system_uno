<UserControl x:Class="figma_design_system_uno.Presentation.Shell"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:figma_design_system_uno.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      Background="{StaticResource DefaultBackgroundBrush}">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="250" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <!-- Left Navigation Panel -->
    <Border Grid.Column="0" 
            Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource NeutralTertiaryHoverBrush}"
            BorderThickness="0,0,1,0">
      <ScrollViewer>
        <StackPanel Orientation="Vertical" 
                    Padding="16">
          
          <!-- Header -->
          <utu:AutoLayout Orientation="Vertical" Spacing="4" Padding="8">
            <TextBlock Text="Uno SDS"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource PrimaryBrush}" />
          </utu:AutoLayout>

          <!-- Navigation Items -->
          <Button Content="Home" 
                  Click="Navigate_Click"
                  Tag="Home"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Margin="0,0,0,8" />

          <!-- Separator -->
          <Rectangle Height="1"
                     Fill="{StaticResource NeutralTertiaryBrush}"
                     Margin="0,8" />

          <Button Content="Accordion" 
                  Click="Navigate_Click"
                  Tag="Accordion"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Margin="0,0,0,8" />

          <Button Content="Avatar" 
                  Click="Navigate_Click"
                  Tag="Avatar"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Margin="0,0,0,8" />

          <Button Content="Buttons" 
                  Click="Navigate_Click"
                  Tag="Buttons"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Margin="0,0,0,8" />

          <Button Content="Cards" 
                  Click="Navigate_Click"
                  Tag="Cards"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Margin="0,0,0,8" />

          <Button Content="Dialog" 
                  Click="Navigate_Click"
                  Tag="Dialog"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Margin="0,0,0,8" />

          <Button Content="Inputs" 
                  Click="Navigate_Click"
                  Tag="InputFields"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Margin="0,0,0,8" />

          <Button Content="Menu" 
                  Click="Navigate_Click"
                  Tag="Menu"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Margin="0,0,0,8" />

          <Button Content="Navigation" 
                  Click="Navigate_Click"
                  Tag="Navigation"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Margin="0,0,0,8" />

          <Button Content="Notification" 
                  Click="Navigate_Click"
                  Tag="Notification"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Margin="0,0,0,8" />

          <Button Content="Pagination" 
                  Click="Navigate_Click"
                  Tag="Pagination"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Margin="0,0,0,8" />

          <Button Content="Tabs" 
                  Click="Navigate_Click"
                  Tag="Tabs"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Margin="0,0,0,8" />

          <Button Content="Tag" 
                  Click="Navigate_Click"
                  Tag="Tag"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Margin="0,0,0,8" />

          <Button Content="Tooltip" 
                  Click="Navigate_Click"
                  Tag="Tooltip"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Margin="0,0,0,8" />

          <!-- Separator -->
          <Rectangle Height="1"
                     Fill="{StaticResource NeutralTertiaryBrush}"
                     Margin="0,8" />

          <Button Content="Forms" 
                  Click="Navigate_Click"
                  Tag="Forms"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Margin="0,0,0,8" />

          <Button Content="Sections" 
                  Click="Navigate_Click"
                  Tag="Sections"
                  Style="{StaticResource TextButtonStyle}"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left" />

        </StackPanel>
      </ScrollViewer>
    </Border>

    <!-- Main Content Area -->
    <Frame x:Name="ContentFrame"
           x:FieldModifier="public"
           Grid.Column="1"
           Background="{StaticResource ContentBackgroundBrush}" />
  </Grid>

</UserControl>
