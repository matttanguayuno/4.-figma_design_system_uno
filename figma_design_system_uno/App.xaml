<Application x:Class="figma_design_system_uno.App"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:utum="using:Uno.Toolkit.UI.Material">

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- Load WinUI resources -->
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
        
        <!-- SDS Theme Library (replaces individual style files) -->
        <ResourceDictionary Source="ms-appx:///Uno.Themes.SDS/SDSTheme.xaml" />
        
        <!-- Material Toolkit Theme with Color Overrides -->
        <utum:MaterialToolkitTheme
          ColorOverrideSource="ms-appx:///Styles/ColorPaletteOverride.xaml">
        </utum:MaterialToolkitTheme>
        
        <!-- Demo-specific resources -->
        <ResourceDictionary Source="ms-appx:///Themes/TagDemoTag.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>

</Application>
