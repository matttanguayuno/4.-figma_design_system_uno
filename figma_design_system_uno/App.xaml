<Application x:Class="figma_design_system_uno.App"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:local="using:figma_design_system_uno.Presentation"
       RequestedTheme="Light">

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- Load WinUI resources -->
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
        
        <!-- SDS Theme Library - API-compatible design system -->
        <ResourceDictionary Source="ms-appx:///Uno.Themes.SDS/SDSTheme.xaml" />
        
        <!-- Demo App Interface Styles (not component library styles) -->
        <ResourceDictionary Source="ms-appx:///Styles/Buttons.xaml" />   <!-- Semantic aliases to library styles -->
        <ResourceDictionary Source="ms-appx:///Styles/Accordion.xaml" /> <!-- Demo accordion resource aliases -->
        <ResourceDictionary Source="ms-appx:///Styles/Cards.xaml" />     <!-- Demo card layout styles -->
        
        <!-- Demo-specific resources -->
        <ResourceDictionary Source="ms-appx:///Themes/TagDemoTag.xaml" />
      </ResourceDictionary.MergedDictionaries>

      <!-- Converters -->
      <local:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
      <local:EqualsConverter x:Key="EqualsConverter" />
      <local:EqualsToVisibilityConverter x:Key="EqualsToVisibilityConverter" />
      <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
      <local:RoundingConverter x:Key="RoundingConverter" />
    </ResourceDictionary>
  </Application.Resources>

</Application>
