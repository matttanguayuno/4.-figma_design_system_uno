<Application x:Class="figma_design_system_uno.App"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:utum="using:Uno.Toolkit.UI.Material"
       RequestedTheme="Light">

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- Load WinUI resources -->
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
        
        <!-- SDS Theme Library (standalone, Material-compatible naming) -->
        <ResourceDictionary Source="ms-appx:///Uno.Themes.SDS/SDSTheme.xaml" />
        
        <!-- Component-specific styles -->
        <ResourceDictionary Source="ms-appx:///Styles/Buttons.xaml" />
        <ResourceDictionary Source="ms-appx:///Styles/Accordion.xaml" />
        <ResourceDictionary Source="ms-appx:///Styles/Cards.xaml" />
        
        <!-- Demo-specific resources -->
        <ResourceDictionary Source="ms-appx:///Themes/TagDemoTag.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>

</Application>
